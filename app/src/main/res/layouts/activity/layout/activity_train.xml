<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relative_train"
    tools:context=".activity.booking.TrainActivity">

    <RelativeLayout
        android:id="@+id/headerbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/blue_theme"
        android:paddingBottom="5dp">

        <Button
            android:id="@+id/recharge_back_btn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/ic_arrow_back_white_24dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:text="Train"
            android:fontFamily="@font/roboto_bold"
            android:textColor="#fff"
            android:textSize="18sp" />
    </RelativeLayout>

    <ScrollView
        android:layout_below="@id/headerbar"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_book_tickets"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/book_tickets"
                android:gravity="center"
                android:textColor="@color/darker_gray"
                android:fontFamily="@font/roboto_regular"
                android:textSize="12sp"
                android:padding="8dp"
                android:background="@drawable/edittext_rounded"
                android:layout_marginRight="5dp"/>

            <TextView
                android:id="@+id/tv_check_pnr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/check_pnr"
                android:gravity="center"
                android:textColor="@color/darker_gray"
                android:fontFamily="@font/roboto_regular"
                android:textSize="12sp"
                android:padding="8dp"
                android:background="@drawable/edittext_rounded"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"/>

            <TextView
                android:id="@+id/tv_train_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/train_status"
                android:gravity="center"
                android:textColor="@color/darker_gray"
                android:fontFamily="@font/roboto_regular"
                android:textSize="12sp"
                android:padding="8dp"
                android:background="@drawable/edittext_rounded"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_book_tickets_tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
          >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/edittext_rounded">
                <TextView
                    android:id="@+id/tv_from_bus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/source_"
                    android:textColor="@color/bue_A800"
                    android:textSize="14sp"
                    android:fontFamily="@font/roboto_regular"
                    android:padding="10dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"></View>
                <TextView
                    android:id="@+id/tv_to_bus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/destination"
                    android:textColor="@color/bue_A800"
                    android:textSize="14sp"
                    android:fontFamily="@font/roboto_regular"
                    android:padding="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/circle"
                android:layout_gravity="center|right"
                android:orientation="vertical"
                android:layout_marginRight="10dp">

                <ImageView
                    android:id="@+id/image_up_down"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_twoway"
                    android:padding="11dp"
                    /></LinearLayout>
        </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/departure_date"
            android:textSize="12sp"
            android:textColor="@color/darker_gray"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/roboto_regular"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_bus_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fri, 11 Oct"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:fontFamily="@font/roboto_regular"
            android:layout_weight="1"
            android:padding="10dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="right|center"
            > <TextView
            android:id="@+id/tv_bus_tody"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TODAY"
            android:textColor="@color/green_theme"
            android:textSize="13sp"
            android:fontFamily="@font/roboto_regular"
            android:padding="10dp"/>
            <View
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:background="@color/divider"
                ></View>
            <TextView
                android:id="@+id/tv_bus_tomorrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TOMORROW"
                android:textColor="@color/darker_gray"
                android:textSize="13sp"
                android:fontFamily="@font/roboto_regular"
                android:padding="10dp" />
            </LinearLayout>
        </LinearLayout>
            <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider"/>

        </LinearLayout>
        <CheckBox
            android:id="@+id/checkbox_train"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/checkbox_train"
            android:textSize="12sp"
            android:textColor="@color/bue_A800"
            android:buttonTint="@color/bue_A800"
            android:layout_marginTop="5dp"/>
        <Button
            android:id="@+id/search_train_btn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/rounded_buttons"
            android:padding="10dp"
            android:text="Search Trains"
            android:textColor="#fff"
            android:textSize="15sp"
            android:fontFamily="@font/roboto_regular"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_check_pnr_tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_enter_pnr_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter PNR Number"
                android:textSize="15sp"
                android:fontFamily="@font/roboto_regular"
                android:padding="10dp"></TextView>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider"></View>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_train_status_tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_trainstatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Your train name/number"
                android:textSize="15sp"
                android:fontFamily="@font/roboto_regular"
                android:padding="10dp"></TextView>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider"></View>
        </LinearLayout>

    </LinearLayout>
    </ScrollView>


</RelativeLayout>
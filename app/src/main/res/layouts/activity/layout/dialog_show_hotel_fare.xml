<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#f7f8f8"
    android:id="@+id/hotelFareDialog">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <Button
            android:id="@+id/backBtn_hotelFareDialog"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ic_arrow_back_black_24dp" />

        <com.safepayu.wallet.custom_view.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.AppCompat.Medium"
            app:fontCustom="@string/Roboto"
            android:textAllCaps="false"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:text="Booking Details"
            android:gravity="center"
            android:padding="5dp"
            android:layout_toRightOf="@+id/backBtn_seatSelectionDialog"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider"/>

    <androidx.core.widget.NestedScrollView
        android:layout_below="@id/headerbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <com.safepayu.wallet.custom_view.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.AppCompat.Medium"
                    app:fontCustom="@string/Roboto"
                    android:textAllCaps="false"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/grey_800"
                    android:textSize="16sp"
                    android:text="City Name" />

                <com.safepayu.wallet.custom_view.CustomTextView
                    android:id="@+id/cityName_hotelFareDialog"
                    style="@style/TextAppearance.AppCompat.Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="0dp"
                    android:text="00"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:fontCustom="@string/Roboto" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <com.safepayu.wallet.custom_view.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.AppCompat.Medium"
                    app:fontCustom="@string/Roboto"
                    android:textAllCaps="false"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/grey_800"
                    android:textSize="16sp"
                    android:text="Hotel Name" />

                <com.safepayu.wallet.custom_view.CustomTextView
                    android:id="@+id/hotelName_hotelFareDialog"
                    style="@style/TextAppearance.AppCompat.Medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="200dp"
                    android:gravity="end"
                    android:text="00"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:fontCustom="@string/Roboto" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <com.safepayu.wallet.custom_view.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.AppCompat.Medium"
                    app:fontCustom="@string/Roboto"
                    android:textAllCaps="false"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/grey_800"
                    android:textSize="16sp"
                    android:text="Room Type" />

                <com.safepayu.wallet.custom_view.CustomTextView
                    android:id="@+id/roomType_hotelFareDialog"
                    style="@style/TextAppearance.AppCompat.Medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="200dp"
                    android:gravity="end"
                    android:text="00"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:fontCustom="@string/Roboto" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <com.safepayu.wallet.custom_view.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.AppCompat.Medium"
                    app:fontCustom="@string/Roboto"
                    android:textAllCaps="false"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/grey_800"
                    android:textSize="16sp"
                    android:text="Number Of Rooms" />

                <com.safepayu.wallet.custom_view.CustomTextView
                    android:id="@+id/noOfRooms_hotelFareDialog"
                    style="@style/TextAppearance.AppCompat.Medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="200dp"
                    android:gravity="end"
                    android:text="00"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:fontCustom="@string/Roboto" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <com.safepayu.wallet.custom_view.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.AppCompat.Medium"
                    app:fontCustom="@string/Roboto"
                    android:textAllCaps="false"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/grey_800"
                    android:textSize="16sp"
                    android:text="Check In Date" />

                <com.safepayu.wallet.custom_view.CustomTextView
                    android:id="@+id/checkInDate_hotelFareDialog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.AppCompat.Medium"
                    app:fontCustom="@string/Roboto"
                    android:textAllCaps="false"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:text="00-00-2020" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <com.safepayu.wallet.custom_view.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.AppCompat.Medium"
                    app:fontCustom="@string/Roboto"
                    android:textAllCaps="false"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/grey_800"
                    android:textSize="16sp"
                    android:text="Check Out Date" />

                <com.safepayu.wallet.custom_view.CustomTextView
                    android:id="@+id/checkOutDate_hotelFareDialog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.AppCompat.Medium"
                    app:fontCustom="@string/Roboto"
                    android:textAllCaps="false"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:text="00-00-2020" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider"
                android:layout_margin="5dp"/>

            <com.safepayu.wallet.custom_view.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.AppCompat.Medium"
                app:fontCustom="@string/Roboto"
                android:textAllCaps="false"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:textColor="@color/grey_700"
                android:textSize="16sp"
                android:text="Fare Details" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <com.safepayu.wallet.custom_view.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.AppCompat.Medium"
                    app:fontCustom="@string/Roboto"
                    android:textAllCaps="false"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/grey_800"
                    android:textSize="16sp"
                    android:text="Base Fare" />

                <com.safepayu.wallet.custom_view.CustomTextView
                    android:id="@+id/baseFare_hotelFareDialog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.AppCompat.Medium"
                    app:fontCustom="@string/Roboto"
                    android:textAllCaps="false"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:text="Rs 0" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <com.safepayu.wallet.custom_view.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.AppCompat.Medium"
                    app:fontCustom="@string/Roboto"
                    android:textAllCaps="false"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/grey_800"
                    android:textSize="16sp"
                    android:text="Convenience Fee" />

                <com.safepayu.wallet.custom_view.CustomTextView
                    android:id="@+id/convenience_hotelFareDialog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.AppCompat.Medium"
                    app:fontCustom="@string/Roboto"
                    android:textAllCaps="false"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/grey_800"
                    android:textSize="16sp"
                    android:text="Rs 0" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <com.safepayu.wallet.custom_view.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.AppCompat.Medium"
                    app:fontCustom="@string/Roboto"
                    android:textAllCaps="false"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/grey_800"
                    android:textSize="16sp"
                    android:text="Service Tax" />

                <com.safepayu.wallet.custom_view.CustomTextView
                    android:id="@+id/gst_hotelFareDialog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.AppCompat.Medium"
                    app:fontCustom="@string/Roboto"
                    android:textAllCaps="false"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:text="Rs 0" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:visibility="gone">

                <com.safepayu.wallet.custom_view.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.AppCompat.Medium"
                    app:fontCustom="@string/Roboto"
                    android:textAllCaps="false"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/grey_800"
                    android:textSize="16sp"
                    android:text="Operator Charge" />

                <com.safepayu.wallet.custom_view.CustomTextView
                    android:id="@+id/operatorCharge_hotelFareDialog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.AppCompat.Medium"
                    app:fontCustom="@string/Roboto"
                    android:textAllCaps="false"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:text="Rs 0" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <com.safepayu.wallet.custom_view.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.AppCompat.Medium"
                    app:fontCustom="@string/Roboto"
                    android:textAllCaps="false"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/grey_800"
                    android:textSize="16sp"
                    android:text="Total Fare" />

                <com.safepayu.wallet.custom_view.CustomTextView
                    android:id="@+id/totalFare_hotelFareDialog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.AppCompat.Medium"
                    app:fontCustom="@string/Roboto"
                    android:textAllCaps="false"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:text="Rs 0" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider"
                android:layout_margin="5dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_margin="10dp">

                <Button
                    android:id="@+id/cancelBtn_hotelFareDialog"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@drawable/rounded_buttons"
                    android:padding="10dp"
                    android:text="Cancel"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"/>

                <Button
                    android:id="@+id/proceedBtn_hotelFareDialog"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@drawable/rounded_buttons"
                    android:padding="10dp"
                    android:text="Proceed"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>

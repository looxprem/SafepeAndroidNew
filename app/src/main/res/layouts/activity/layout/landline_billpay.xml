<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#f4f5ff"
    android:orientation="vertical"
    android:id="@+id/postpaidBillLayout">

    <RelativeLayout
        android:id="@+id/l1_send"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/red_theme"
        android:paddingBottom="5dp">

        <Button
            android:id="@+id/postpaid_back_btn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ic_next_new" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:text="Landline Bill Pay "
            android:fontFamily="@font/roboto_bold"
            android:textColor="#fff"
            android:textSize="18sp" />
    </RelativeLayout>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_below="@id/l1_send"
        android:layout_height="match_parent"
        tools:context="com.xwallet.wallet.Fragments.PostpaidRechrge">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/red_theme"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            app:cardCornerRadius="5dp"
            android:elevation="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="-30dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="3dp"
            android:padding="5dp"
            android:gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="start|center"
                android:padding="10dp">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/landline_new"/>

                <EditText
                    android:id="@+id/mobilePostpaid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="Enter Number"
                    android:textColor="@color/textcolor"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="15sp"
                    android:layout_gravity="center"
                    android:inputType="number"
                    android:maxLength="11"
                    android:nextFocusForward="@+id/stdCode"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:imeOptions="actionNext"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height=".5dp"
                android:background="@color/graynew"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="start|center"
                android:padding="10dp">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/landline_new"/>

                <EditText
                    android:id="@+id/stdCode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter STD Code/CA Number "
                    android:textColor="@color/textcolor"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="15sp"
                    android:padding="10dp"
                    android:layout_gravity="center"
                    android:inputType="number"
                    android:maxLength="15"
                    android:nextFocusForward="@+id/amount"
                    android:background="@null"
                    android:singleLine="true"
                    android:imeOptions="actionNext"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/optionValue2Layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="start|center"
                android:padding="10dp">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/landline_new"/>

                <EditText
                    android:id="@+id/optionValue2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Account Number "
                    android:textColor="@color/textcolor"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="15sp"
                    android:padding="10dp"
                    android:layout_gravity="center"
                    android:inputType="number"
                    android:maxLength="15"
                    android:nextFocusForward="@+id/amount"
                    android:background="@null"
                    android:singleLine="true"
                    android:imeOptions="actionDone"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height=".5dp"
                android:background="@color/graynew"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="start|center"
                android:padding="10dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                    <LinearLayout
                        android:id="@+id/layout_select_mobile_operator"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="5dp"
                            android:src="@drawable/ic_list_new" />
                        <TextView
                            android:id="@+id/tv_select_mobile_operator"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Select Operator"
                            android:padding="10dp"
                            android:textColor="@color/textcolor"
                            android:textSize="15sp"
                            android:fontFamily="@font/roboto_regular"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"/>
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:padding="10dp"
                            android:src="@drawable/ic_down_security"
                            android:layout_marginRight="10dp"/>
                    </LinearLayout>

                    <Spinner
                        android:id="@+id/operatorPostpaid"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_below="@+id/textView5"
                        android:layout_marginLeft="5dp"
                        android:backgroundTint="@color/red_theme"
                        android:nextFocusForward="@+id/username"
                        android:visibility="gone"/>
                </FrameLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height=".5dp"
                android:background="@color/graynew"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="start|center"
                android:padding="10dp">
                <ImageView

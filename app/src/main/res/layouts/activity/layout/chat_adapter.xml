<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/messageTitle_chatAdapter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey_50"
        android:padding="4dp"
        android:text="Title"
        android:textColor="@color/green_800"
        android:textSize="14dp"
        android:fontFamily="@font/roboto_regular"
        android:layout_marginTop="5dp"
        android:layout_marginRight="4dp"
        android:layout_marginLeft="4dp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/messageAdmin_chatAdapter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/white_round_border"
        android:padding="8dp"
        android:text="Enter Message"
        android:textColor="@color/black"
        android:textSize="14dp"
        android:fontFamily="@font/roboto_regular"
        android:layout_marginTop="5dp"
        android:layout_marginRight="4dp"
        android:layout_marginLeft="4dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/white_round_border"
        android:padding="8dp"
        android:id="@+id/userChatLinearLayout"
        android:layout_marginTop="5dp"
        android:layout_gravity="right">
        <TextView
            android:id="@+id/messageUser_chatAdapter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter Message"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:fontFamily="@font/roboto_regular"
            android:layout_marginTop="8dp"
            android:layout_marginRight="4dp"
            android:layout_marginLeft="4dp"
            android:layout_gravity="right"
            android:gravity="right"/>

        <ImageView
            android:id="@+id/attachmentImageChat_chatAdapter"
            android:layout_width="150dp"
            android:layout_height="180dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="4dp"
            android:layout_marginLeft="4dp"
            android:layout_gravity="right"
            android:src="@drawable/logo"
            android:scaleType="fitCenter"/>

        <ImageView
            android:id="@+id/clockChat_chatAdapter"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/clock_chat_new"
            android:layout_marginTop="2dp"
            android:layout_marginRight="4dp"
            android:layout_marginLeft="4dp"
            android:layout_gravity="right"/>
    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/payment"
    tools:context=".activity.booking.flight.BookingPaymentActivity">
        <RelativeLayout
            android:id="@+id/headerbar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@color/red_theme"
            android:paddingBottom="5dp">

            <Button
                android:id="@+id/sendmoney_back_btn"
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@drawable/ic_arrow_back_white_24dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_margin="5dp">
                <ImageView
                    android:id="@+id/tv_backPressed"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/safepe_logo_new"
                    android:layout_marginLeft="5dp" />
            </LinearLayout>


        </RelativeLayout>
        <ScrollView
            android:layout_below="@id/headerbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f7f8f8">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                    <TextView
                        android:id="@+id/heading"
                        android:padding="0dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Select Payment Option"
                        android:fontFamily="@font/roboto_bold"
                        android:layout_gravity="center"
                        android:textColor="@color/bue_A800"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="20dp"
                        android:textSize="22dp" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/yellow"
                        android:layout_margin="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:background="@color/white">

                    <TextView
                        android:id="@+id/textmaoutotpay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="10dp"
                        android:paddingLeft="10dp"
                        android:layout_centerVertical="true"
                        android:textColor="@color/yellow_theme"
                        android:fontFamily="@font/roboto_bold"
                        android:text="Amount to be paid"
                        android:textSize="16sp"
                        android:layout_weight="1"
                        />

                    <TextView
                        android:id="@+id/tv_flight_pay_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="10dp"
                        android:text="â‚¹"
                        android:paddingRight="10dp"
                        android:textStyle="bold"
                        android:fontFamily="@font/roboto_bold"
                        android:textColor="@color/black"
                        android:textSize="23sp" />

                </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_marginTop="5dp"
                android:background="@color/white">

                <TextView
                    android:id="@+id/tv_walletlimit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/red"
                    android:fontFamily="@font/roboto_regular"
                    android:text=""
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="5dp">

                    <CheckBox
                    android:id="@+id/check_box_wallet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SafePe Wallet Balance"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                        android:layout_weight="1"
                    android:buttonTint="@color/red_theme"/>
                    <TextView
                        android:id="@+id/tv_wallet_deduct_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.00"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:visibility="gone"
                        android:fontFamily="@font/roboto_bold"
                        android:layout_marginRight="10dp"/>
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_wallet"/>
                </LinearLayout>
             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="horizontal"
                 android:layout_marginLeft="30dp"
                 android:layout_marginTop="-10dp">
                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="Total Balance:"
                     android:textSize="12sp"
                     android:textColor="@color/darker_gray"
                     android:fontFamily="@font/roboto_regular"/>
                 <TextView
                     android:id="@+id/tv_total_balance_wallet"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="0.00"
                     android:textSize="12sp"
                     android:textColor="@color/darker_gray"
                     android:fontFamily="@font/roboto_regular"
                     android:layout_marginLeft="5dp"
                     />
             </LinearLayout>

            </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/white"
                    android:padding="10dp"
                    android:layout_marginTop="5dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="5dp">

                        <CheckBox
                            android:id="@+id/check_box_gateway_payment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" Debit/Credit Card/Upi/Net Banking"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:layout_weight="1"
                            android:checked="true"
                            android:buttonTint="@color/red_theme"/>
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_credit_card"/>

                    </LinearLayout>
                    <TextView
                        android:id="@+id/tv_gateway_deduct_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.00"
                        android:textSize="15sp"
                        android:gravity="right"
                        android:textColor="@color/black"
                        android:fontFamily="@font/roboto_bold"
                        android:layout_marginLeft="20dp"/>
                </LinearLayout>

                <Button
                    android:id="@+id/btn_booking_pay_amount"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/rounded_buttons"
                    android:padding="10dp"
                    android:textAllCaps="false"
                    android:text="Pay 507"
                    android:textColor="#fff"
                    android:textSize="16sp" />
            </LinearLayout>
        </ScrollView>
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:id="@+id/securebtn">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:src="@drawable/norton" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:contentDescription="Verified By Visa"
            android:src="@drawable/verified_by_visa" />



        <ImageView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:contentDescription="MasterCard Secure"
            android:src="@drawable/master_card_securecode" />



    </LinearLayout>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/investmentWallet"
    android:background="#f4f5ff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_height="100dp"
            android:layout_width="match_parent"
            android:background="#196cfe"
            android:orientation="vertical"
            android:paddingTop="8dp">

            <RelativeLayout
                android:id="@+id/headerbar"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:background="@color/red_theme"
                android:paddingBottom="5dp">

                <Button
                    android:id="@+id/send_back_btn"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/ic_next_new" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:text="Investment Wallet"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="#fff"
                    android:textSize="18sp" />
            </RelativeLayout>
        </LinearLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-40dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    app:cardCornerRadius="10dp"
                    android:elevation="5dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center"
                                android:layout_margin="5dp"
                                android:src="@drawable/ic_add_black_24dp"
                                android:visibility="gone" />

                            <TextView
                                android:id="@+id/current_referral_business"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:paddingLeft="10dp"
                                android:text="â‚¹0.00"
                                android:textColor="@color/black"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/roboto_bold"
                                android:textSize="30sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:paddingLeft="10dp"
                                android:text="Investment Wallet Balance"
                                android:textColor="@color/black"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/roboto_regular"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layout.isMembership"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:visibility="visible"
                            android:layout_marginBottom="10dp">


                            <TextView
                                android:id="@+id/textWarningCommission"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="Withdraw service is only available for active members."
                                android:textColor="@color/red_800"
                                android:layout_margin="10dp"
                                android:fontFamily="@font/roboto_regular"
                                android:textSize="14sp"
                                android:visibility="gone"/>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/li_send_towallet"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="10dp"
                            android:layout_marginBottom="10dp"
                            android:gravity="start|center">

                            <LinearLayout
                                android:layout_height="50dp"
                                android:layout_width="50dp"
                                android:layout_margin="5dp"
                                android:background="@drawable/blue_green_round_btn"
                                android:layout_gravity="center">

                                <ImageView
                                    android:id="@+id/icon_packageAdapter"
                                    android:layout_width="47dp"
                                    android:layout_height="match_parent"
                                    android:layout_margin="1dp"
                                    android:scaleType="fitXY"
                                    android:padding="10dp"
                                    android:src="@drawable/ic_wallet_white" />
                            </LinearLayout>
                            <TextView
                                android:id="@+id/send_to_wallet"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:visibility="visible"
                                android:gravity="center"
                                android:padding="10dp"
                                android:text="Send money to bank"
                                android:textColor="@color/black"
                                android:fontFamily="@font/roboto_bold"
                                android:textSize="16sp" />
                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="5dp"
                            android:layout_weight="1"
                            app:cardElevation="2dp"
                            app:cardCornerRadius="5dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:paddingTop="20dp"
                                android:paddingBottom="20dp"
                                android:id="@+id/creditLayout_investmentWallet">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:text="Credit"
                                    android:fontFamily="@font/roboto_bold"
                                    android:textColor="@color/red_theme"
                                    android:textSize="14sp" />

                            </LinearLayout>


                        </androidx.cardview.widget.CardView>


                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="7dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="5dp"
                            android:layout_weight="1"
                            app:cardElevation="2dp"
                            app:cardCornerRadius="5dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:paddingTop="20dp"
                                android:paddingBottom="20dp"
                                android:id="@+id/debitLayout_investmentWallet">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:text="Debit"
                                    android:fontFamily="@font/roboto_bold"
                                    android:textSize="14sp"
                                    android:textColor="@color/red_theme" />

                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycleCredit_investmentWallet"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycleDebit_investmentWallet"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_marginTop="10dp"/>

                    <LinearLayout
                        android:id="@+id/fdEmptyWallet"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="100dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginBottom="100dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/ic_note" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/roboto_bold"
                            android:text="You have no transaction history"
                            android:textColor="@color/textcolor"
                            android:textSize="18sp" />

                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>


        </androidx.core.widget.NestedScrollView>

    </LinearLayout>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:id="@+id/withMoneyLayout">

    <RelativeLayout
        android:id="@+id/headerbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/red_theme"
        android:paddingBottom="5dp">

        <Button
            android:id="@+id/send_back_btn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/ic_arrow_back_white_24dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:text="Send Money"
            android:fontFamily="@font/roboto_bold"
            android:textColor="#fff"
            android:textSize="18sp" />
    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_below="@id/headerbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/get_membership"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/red"
                    android:textSize="14sp"
                    android:layout_gravity="center"
                    android:layout_marginVertical="10dp"
                    android:layout_marginHorizontal="30sp"
                    android:text="Withdrawl service is only available for active members."/>



                <TextView
                    android:id="@+id/get_mem_txt"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textColor="@color/white"
                    android:background="@drawable/rounded_buttons"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="Get Membership "
                    android:layout_marginHorizontal="30sp"
                    android:layout_marginVertical="10dp"/>


            </LinearLayout>


            <LinearLayout

                android:id="@+id/withdrawl_area"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="#f7f6f8"
                        android:padding="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:background="#F9f9f9"
                            android:paddingBottom="10dp"
                            android:paddingTop="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:text="Daily withdrawal limit"
                                android:textSize="14sp"
                                android:textColor="@color/black"
                                android:fontFamily="@font/roboto_regular"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginEnd="20dp"
                                android:gravity="end"
                                android:text="₹ 8000"
                                android:textColor="@color/grey_500"
                                android:textSize="14sp"
                                android:fontFamily="@font/roboto_regular"/>
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/divider"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingBottom="10dp"
                            android:paddingTop="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:text="Minimum withdrawal amount"
                                android:textSize="14sp"
                                android:textColor="@color/black"
                                android:fontFamily="@font/roboto_regular"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginEnd="20dp"
                                android:gravity="end"
                                android:text="₹ 100"
                                android:textColor="@color/red"
                                android:textSize="14sp"
                                android:fontFamily="@font/roboto_regular"/>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:paddingTop="10dp"
                    android:textSize="16sp"
                    android:fontFamily="@font/roboto_bold"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/bue_A800"
                    android:layout_height="wrap_content"
                    android:text="Select Beneficiary"
                    android:layout_gravity="left"/>


                <RadioGroup
                    android:id="@+id/radioGroupWithdraw"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:padding="10dp">

                    <RadioButton
                        android:id="@+id/upiradiobtn"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:onClick="onRadioButtonClicked"
                        android:text="UPI"/>


                    <RadioButton
                        android:id="@+id/bankradiobtn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/roboto_regular"
                        android:buttonTint="@color/yellow_theme"
                        android:text="BANK ACCOUNT"/>
                </RadioGroup>


                <TextView
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:paddingBottom="4dp"
                    android:textSize="14sp"
                    android:textColor="@color/bluedark"
                    android:layout_height="wrap_content"
                    android:text="UPI"
                    android:layout_gravity="left"
                    android:layout_marginLeft="20dp"/>

                <Spinner
                    android:visibility="gone"
                    android:id="@+id/upiBenSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="0dp"
                    android:background="@drawable/edittext_rounded"/>

                <TextView
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:paddingBottom="4dp"
                    android:textSize="14sp"
                    android:textColor="@color/bluedark"
                    android:layout_height="wrap_content"
                    android:text="Bank"
                    android:layout_gravity="left"
                    android:layout_marginLeft="20dp"/>
                <Spinner
                    android:id="@+id/bankBenSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/edittext_rounded"/>
                <ListView
                    android:visibility="gone"
                    android:id="@+id/listViewupi_ben"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    tools:layout_editor_absoluteY="0dp"
                    tools:layout_editor_absoluteX="0dp" />


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="4dp"
                    android:visibility="gone"
                    android:layout_margin="20dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <RelativeLayout
                            android:visibility="visible"
                            android:id="@+id/paytmBenAddLayout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="0dp"
                            android:background="@drawable/login_input_bg"
                            android:orientation="horizontal"
                            android:padding="20dp"
                            android:weightSum="10">

                            <ImageView
                                android:layout_width="70dp"
                                android:layout_height="50dp"
                                android:layout_weight="1"
                                android:src="@drawable/paytm_logo" />

                            <Button
                                android:id="@+id/paytmBenAddBtn"
                                android:layout_width="80dp"
                                android:layout_height="30dp"
                                android:textSize="10dp"
                                android:layout_centerVertical="true"
                                android:layout_alignParentRight="true"
                                android:layout_gravity="end"
                                android:background="@color/colorSecondaryDark"
                                android:text="ADD"
                                android:textColor="@color/white" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:visibility="visible"
                            android:id="@+id/paytmBenSelectLayout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="0dp"
                            android:background="@drawable/login_input_bg"
                            android:padding="20dp"
                            android:layout_marginTop="0dp">

                            <ImageView
                                android:id="@+id/paytmlogo2"
                                android:layout_width="70dp"
                                android:layout_height="50dp"
                                android:layout_weight="1"
                                android:src="@drawable/paytm_logo" />
                            <TextView
                                android:id="@+id/paytmBenNumber"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@id/paytmlogo2"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="10dp"
                                android:textColor="@color/black"
                                android:text="9759781207"/>

                            <Button
                                android:id="@+id/paytmBenSelectBtn"
                                android:layout_width="80dp"
                                android:layout_height="30dp"
                                android:textSize="10dp"
                                android:layout_alignParentRight="true"
                                android:layout_gravity="end"
                                android:layout_centerVertical="true"
                                android:background="@color/colorPrimaryDark"
                                android:text="SELECT"
                                android:textColor="@color/white" />
                        </RelativeLayout>


                        <RelativeLayout
                            android:visibility="visible"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="0dp"
                            android:background="@drawable/login_input_bg"
                            android:orientation="horizontal"
                            android:padding="20dp"
                            android:weightSum="10">

                            <ImageView
                                android:layout_width="70dp"
                                android:layout_height="50dp"
                                android:layout_weight="1"
                                android:src="@drawable/upilogo" />

                            <Button
                                android:layout_width="80dp"
                                android:layout_height="30dp"
                                android:textSize="10dp"
                                android:layout_alignParentRight="true"
                                android:layout_gravity="end"
                                android:layout_centerVertical="true"
                                android:background="@color/colorSecondaryDark"
                                android:text="ADD"
                                android:textColor="@color/white" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:visibility="visible"
                            android:id="@+id/upiBenSelectLayout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="0dp"
                            android:background="@drawable/login_input_bg"
                            android:padding="20dp"
                            android:layout_marginTop="0dp">

                            <ImageView
                                android:id="@+id/upilogo2"
                                android:layout_width="70dp"
                                android:layout_height="50dp"
                                android:layout_weight="1"
                                android:src="@drawable/upilogo" />
                            <TextView
                                android:id="@+id/UpiBenNumber"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@id/upilogo2"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="10dp"
                                android:textColor="@color/black"
                                android:text="9759781207@ybl"/>

                            <Button
                                android:id="@+id/upiBenSelectBtn"
                                android:layout_width="80dp"
                                android:layout_height="30dp"
                                android:textSize="10dp"
                                android:layout_alignParentRight="true"
                                android:layout_gravity="end"
                                android:background="@color/colorPrimaryDark"
                                android:layout_centerVertical="true"
                                android:text="SELECT"
                                android:textColor="@color/white" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:visibility="visible"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="0dp"
                            android:background="@drawable/login_input_bg"
                            android:orientation="horizontal"
                            android:padding="20dp"
                            android:weightSum="10">

                            <ImageView
                                android:layout_width="70dp"
                                android:layout_height="50dp"
                                android:layout_weight="1"
                                android:src="@drawable/banktansfer" />

                            <Button
                                android:layout_width="80dp"
                                android:layout_height="30dp"
                                android:textSize="10dp"
                                android:layout_alignParentRight="true"
                                android:layout_gravity="end"
                                android:background="@color/colorSecondaryDark"
                                android:layout_centerVertical="true"
                                android:text="ADD"
                                android:textColor="@color/white" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/BankBenSelectLayout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="0dp"
                            android:background="@drawable/login_input_bg"
                            android:visibility="visible"
                            android:padding="20dp"
                            android:layout_marginTop="0dp">

                            <ImageView
                                android:id="@+id/bankLogo2"
                                android:layout_width="70dp"
                                android:layout_height="50dp"
                                android:layout_weight="1"
                                android:src="@drawable/banktansfer" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@id/bankLogo2"
                                android:layout_marginLeft="10dp"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/BankBenName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_toRightOf="@id/bankLogo2"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="0dp"
                                    android:textColor="@color/black"
                                    android:layout_above="@id/BankBenNumber"
                                    android:text="Abhshek Sirohi"/>
                                <TextView
                                    android:id="@+id/BankBenNumber"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_toRightOf="@id/bankLogo2"
                                    android:layout_marginLeft="0dp"
                                    android:textColor="@color/black"
                                    android:layout_marginTop="0dp"
                                    android:textStyle="bold"
                                    android:text="9759781207"/>
                            </LinearLayout>


                            <Button
                                android:id="@+id/BankBenSelectBtn"
                                android:layout_width="80dp"
                                android:layout_height="30dp"
                                android:textSize="10dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:background="@color/colorPrimaryDark"
                                android:text="SELECT"
                                android:textColor="@color/white"
                                />
                        </RelativeLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="4dp"
                    android:visibility="gone"
                    android:layout_margin="20dp">



                    <RelativeLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RadioGroup
                            android:id="@+id/radioGroup"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="20dp">

                            <RadioButton
                                android:id="@+id/radioButton"
                                android:layout_width="wrap_content"
                                android:layout_height="55dp"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_gravity="end"
                                android:layout_marginTop="16dp"
                                android:checked="false"
                                android:gravity="end" />

                            <RadioButton
                                android:id="@+id/radioButton2"
                                android:layout_width="wrap_content"
                                android:layout_height="55dp"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_gravity="end"
                                android:layout_marginTop="55dp"
                                android:checked="false"
                                android:gravity="end" />

                            <RadioButton
                                android:id="@+id/radioButton3"
                                android:layout_width="wrap_content"
                                android:layout_height="55dp"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_gravity="end"
                                android:layout_marginTop="60dp"
                                android:checked="false"
                                android:gravity="end"
                                tools:ignore="ObsoleteLayoutParam" />
                        </RadioGroup>

                        <RelativeLayout
                            android:id="@+id/top1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="20dp"
                            android:layout_marginBottom="10dp">

                            <ImageView
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:src="@drawable/paytm" />

                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_gravity="end"
                                android:gravity="end"
                                android:text=""
                                android:visibility="gone"
                                android:layout_alignParentRight="true" />
                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_below="@+id/top1"
                            android:background="@color/grey" />

                        <RelativeLayout
                            android:id="@+id/top2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/top1"
                            android:padding="20dp">

                            <ImageView
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:src="@drawable/upi" />


                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_gravity="end"
                                android:gravity="end"
                                android:text=""
                                android:visibility="gone" />
                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"

                            android:layout_height="1dp"
                            android:layout_below="@+id/top2"
                            android:background="@color/grey" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/top2"
                            android:padding="20dp">

                            <ImageView
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:src="@drawable/bank" />

                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_gravity="end"
                                android:gravity="end"
                                android:text=""
                                android:visibility="gone" />
                        </RelativeLayout>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>



                <LinearLayout
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/withdrawAmountlayout"
                    android:orientation="vertical"
                    android:layout_marginTop="15dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:padding="0dp">

                        <EditText
                            android:id="@+id/withdrawAmount"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="0dp"
                            android:background="@drawable/white_button_grayborder"
                            android:hint="Enter Amount"
                            android:textColor="#000000"
                            android:maxLength="4"
                            android:inputType="number"
                            android:paddingLeft="15sp"
                            android:fontFamily="@font/roboto_regular"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="null"
                            android:visibility="gone"
                            android:id="@+id/beneficiaryId"/>
                    </RelativeLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <TextView
                            android:layout_weight="1"
                            android:id="@+id/calculatedamount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:text="Enter amount"
                            android:textSize="12sp"
                            android:fontFamily="@font/roboto_regular"
                            android:textColor="@color/yellow"
                            android:paddingLeft="0dp"
                            android:gravity="right"
                            android:visibility="gone"/>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/card_amount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginBottom="5dp"
                        >
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:background="@color/white">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Amount reflect in your account"
                                    android:textColor="@color/red_theme"
                                    android:textSize="15sp"
                                    android:fontFamily="@font/roboto_bold"
                                    android:padding="10dp"
                                    android:gravity="left"
                                    />
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height=".5dp"
                                    android:background="@color/yellow"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginRight="5dp"/>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Withdrawal Amount"
                                        android:textSize="13sp"
                                        android:textColor="@color/black"
                                        android:padding="10dp"
                                        android:fontFamily="@font/roboto_bold"
                                        android:layout_weight="1"/>
                                    <TextView
                                        android:id="@+id/tv_withdrawalamount"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="10"
                                        android:textSize="13sp"
                                        android:textColor="@color/black"
                                        android:padding="10dp"
                                        android:fontFamily="@font/roboto_regular"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Transaction Fee"
                                        android:textSize="13sp"
                                        android:textColor="@color/black"
                                        android:padding="10dp"

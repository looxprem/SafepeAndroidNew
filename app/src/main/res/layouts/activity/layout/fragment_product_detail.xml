<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f4f5ff"
    tools:context=".ecommerce.fragment.ProductDetailFragment">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ecommerce_round_bg_white"
                android:orientation="horizontal"
                android:gravity="start|center"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="20dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_search"
                    android:padding="10dp"
                    android:layout_marginLeft="5dp"/>
                <EditText
                    android:id="@+id/tv_search_ecomm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Search any products or venues"
                    android:textSize="14sp"
                    android:textColor="#87898c"
                    android:background="@null"
                    android:inputType="text"
                    android:singleLine="true"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_weight="1"/>
                <LinearLayout
                    android:id="@+id/li_done"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/blue_green_round_btn">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_e_commdone"
                        android:padding="10dp" />
                </LinearLayout></LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal"
                android:background="@color/white">
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_like_red"
                        android:layout_gravity="start|left"
                        android:padding="10dp"
                        android:visibility="gone"/>
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_like_gray"
                        android:layout_gravity="start|left"
                        android:padding="10dp" />
                </FrameLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginLeft="-50dp">
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="200dp"
                        android:layout_gravity="center"
                        android:scaleType="fitXY"
                        android:src="@drawable/girl_jeans"/>
                </LinearLayout></LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/product_image_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
            <TextView
                android:id="@+id/tv_product_detail_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textSize="18sp"
                android:text="Women Sea Green &amp; Blue Striped Kurta with Palazzos"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/tv_product_detail_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Â£ 21.00"
                android:gravity="start"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto_regular"
                android:textSize="15sp"
                android:layout_margin="10dp"/>
            <TextView
                android:id="@+id/tv_product_detail_earn_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Earn 0 points"
                android:gravity="start"
                android:textColor="@color/yellow_theme"
                android:fontFamily="@font/roboto_regular"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>
            <TextView
                android:id="@+id/tv_product_detail_add_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add To Cart"
                android:layout_margin="10dp"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:background="@drawable/blue_green_bg"
                android:padding="15dp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/graynew"
                android:layout_margin="10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="From - "
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:fontFamily="@font/roboto_regular"/>
                <TextView
                    android:id="@+id/tv_product_detail_from"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lilly Whites"
                    android:textColor="@color/blue_800"
                    android:textSize="15sp"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_marginLeft="5dp"/>
            </LinearLayout>

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Color"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:fontFamily="@font/roboto_regular"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Size"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:fontFamily="@font/roboto_regular"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/product_size_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
</LinearLayout>

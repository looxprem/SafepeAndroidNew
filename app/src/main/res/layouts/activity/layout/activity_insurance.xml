<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relative_insurance"
    tools:context=".activity.recharge.InsuranceActivity">
    <RelativeLayout
        android:id="@+id/headerbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/blue_theme"
        android:paddingBottom="5dp">

        <Button
            android:id="@+id/insurance_back_btn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/ic_arrow_back_white_24dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:text="Insurance"
            android:fontFamily="@font/roboto_bold"
            android:textColor="#fff"
            android:textSize="18sp" />
    </RelativeLayout>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_below="@id/headerbar"
        android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp">
            <LinearLayout
                android:id="@+id/layout_buy_insurance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <LinearLayout
                    android:layout_height="60dp"
                    android:layout_width="60dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/circle">
                    <ImageView
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:layout_margin="1dp"
                        android:scaleType="fitXY"
                        android:padding="10dp"
                        android:src="@drawable/ic_life"/>

                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="0dp"
                    android:textColor="@color/black"
                    style="@style/TextAppearance.AppCompat.Medium"
                    android:layout_weight="0.8"
                    android:textSize="14sp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Buy new insurance policy"
                    android:layout_marginLeft="5dp"/>

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:foregroundGravity="left"
                    android:layout_marginTop="0dp"
                    android:layout_weight="0.2"
                    android:src="@drawable/ic_chevron_right_black_24dp" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            >

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp">
            <LinearLayout
                android:id="@+id/layout_my_insurance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <LinearLayout
                    android:layout_height="60dp"
                    android:layout_width="60dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/circle">
                    <ImageView
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:layout_margin="1dp"
                        android:scaleType="fitXY"
                        android:padding="10dp"
                        android:src="@drawable/ic_my_insurance"/>

                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="0dp"
                    android:textColor="@color/black"
                    style="@style/TextAppearance.AppCompat.Medium"
                    android:layout_weight="0.8"
                    android:textSize="14sp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="My insurnce"
                    android:layout_marginLeft="5dp"/>

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:foregroundGravity="left"
                    android:layout_marginTop="0dp"
                    android:layout_weight="0.2"
                    android:src="@drawable/ic_chevron_right_black_24dp" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>

    </ScrollView>

</RelativeLayout>
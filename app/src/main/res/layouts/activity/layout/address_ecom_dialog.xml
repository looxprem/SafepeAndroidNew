<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#f4f5ff"
    android:id="@+id/relative_address">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/headerbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/red_theme"
        android:paddingBottom="5dp">

        <Button
            android:id="@+id/back_btn_address_dialog"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ic_next_new"  />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:text="Add Address"
            android:fontFamily="@font/roboto_bold"
            android:textColor="#fff"
            android:textSize="18sp"  />
    </RelativeLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="60dp">
            <LinearLayout
                android:id="@+id/licurrent_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="10dp"
                    android:src="@drawable/ic_location_ecom"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:padding="5dp"
                    android:text="Use my current location"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="@color/black"/>
        </LinearLayout>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                app:cardCornerRadius="5dp"
                android:elevation="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp">
            <LinearLayout
                android:id="@+id/main_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="0dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="start|center"
                    android:padding="10dp">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_user_new"/>

                    <EditText
                        android:id="@+id/et_username_dialog"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Name"
                        android:padding="10dp"
                        android:gravity="start|center"
                        android:layout_gravity="center"
                        android:fontFamily="@font/roboto_medium"
                        android:textSize="14sp"
                        android:inputType="text"
                        android:singleLine="true"
                        android:imeOptions="actionNext"
                        android:background="@null"
                        android:textColor="@color/textcolor"
                        android:digits="0123456789 abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ ,"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height=".5dp"
                    android:background="@color/graynew"
                    android:layout_marginTop="0dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="start|center"
                    android:padding="10dp">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="0dp"
                        android:src="@drawable/ic_mobile_new" />
                    <EditText
                        android:id="@+id/mobilenumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textView2"
                        android:layout_gravity="center"
                        android:background="@null"
                        android:fontFamily="@font/roboto_medium"
                        android:hint="10 Digit Mobile Number"
                        android:inputType="number"
                        android:maxLength="10"
                        android:imeOptions="actionNext"
                        android:nextFocusForward="@+id/amount"
                        android:textColor="@color/textcolor"
                        android:textSize="14sp"
                        android:padding="10dp" /></LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height=".5dp"
                    android:background="@color/graynew"
                    android:layout_marginTop="0dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="start|center"
                    android:padding="10dp">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_address_new"/>

                    <EditText
                        android:id="@+id/update_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Flat/House, Location"
                        android:padding="10dp"
                        android:gravity="start|center"
                        android:layout_gravity="center"
                        android:fontFamily="@font/roboto_medium"
                        android:textSize="14sp"
                        android:inputType="text"
                        android:singleLine="true"
                        android:imeOptions="actionNext"
                        android:background="@null"
                        android:textColor="@color/textcolor"
                        android:digits="0123456789 abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ ,"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height=".5dp"
                    android:background="@color/graynew"
                    android:layout_marginTop="0dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="start|center"
                    android:padding="10dp">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_skyline_new"/>
                    <EditText
                        android:id="@+id/update_city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="City"
                        android:padding="10dp"
                        android:gravity="start|center"
                        android:layout_gravity="center"
                        android:fontFamily="@font/roboto_medium"
                        android:textSize="14sp"
                        android:inputType="text"
                        android:singleLine="true"
                        android:imeOptions="actionNext"
                        android:background="@null"
                        android:textColor="@color/textcolor"
                        android:digits="0123456789 abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ ,"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height=".5dp"
                    android:background="@color/graynew"
                    android:layout_marginTop="0dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="start|center"
                    android:padding="10dp">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_government_new"/>
                    <EditText
                        android:id="@+id/update_state"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="State"
                        android:padding="10dp"
                        android:gravity="start|center"
                        android:layout_gravity="center"
                        android:fontFamily="@font/roboto_medium"
                        android:textSize="14sp"
                        android:inputType="text"
                        android:singleLine="true"
                        android:imeOptions="actionNext"
                        android:background="@null"
                        android:textColor="@color/textcolor"
                        android:digits="abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height=".5dp"
                    android:background="@color/graynew"
                    android:layout_marginTop="0dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="start|center"
                    android:padding="10dp">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_location_pin_new"/>
                    <EditText
                        android:id="@+id/update_pin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Pincode"
                        android:padding="10dp"
                        android:gravity="start|center"
                        android:layout_gravity="center"
                        android:fontFamily="@font/roboto_medium"
                        android:textSize="14sp"
                        android:background="@null"
                        android:maxLength="6"
                        android:inputType="number"
                        android:singleLine="true"
                        android:imeOptions="actionNext"
                        android:textColor="@color/textcolor"
                        android:digits="0123456789" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height=".5dp"
                    android:background="@color/graynew"
                    android:layout_marginTop="0dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="start|center"
                    android:padding="10dp">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/building_new"/>
                    <EditText
                        android:id="@+id/update_landmark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start|center"
                        android:layout_gravity="center"
                        android:fontFamily="@font/roboto_medium"
                        android:textSize="14sp"
                        android:background="@null"
                        android:inputType="text"
                        android:singleLine="true"
                        android:imeOptions="actionNext"
                        android:padding="10dp"
                        android:hint="Landmark "
                        android:textColor="@color/textcolor" />
                </LinearLayout>
                <View
                android:layout_width="match_parent"
                android:layout_height=".5dp"
                android:background="@color/graynew"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="start|center"
                    android:padding="10dp">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_global_new"/>
                    <EditText
                        android:id="@+id/dialog_country"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start|center"
                        android:layout_gravity="center"
                        android:fontFamily="@font/roboto_medium"
                        android:textSize="14sp"
                        android:background="@null"
                        android:inputType="text"
                        android:singleLine="true"
                        android:imeOptions="actionDone"
                        android:padding="10dp"
                        android:text="India"
                        android:textColor="@color/textcolor" /></LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height=".5dp"
                    android:background="@color/graynew"
                    android:layout_marginTop="0dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"/>
            </LinearLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:text="Address Type"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/black"/>
            <RadioGroup
                android:id="@+id/radio_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/radia_home"
                android:text="Home (All day delivery)"
                android:textSize="15sp"
                android:fontFamily="@font/roboto_regular"
                android:buttonTint="@color/red_theme"
                android:checked="true"
                android:textColor="@color/black"
                android:scaleX="0.8"
                android:scaleY="0.8" />

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/radio_workingday"
                    android:text="Work (Delivery between 10 AM - 5 PM)"
                    android:textSize="15sp"
                    android:fontFamily="@font/roboto_regular"
                    android:buttonTint="@color/red_theme"
                    android:checked="false"
                    android:textColor="@color/black"
                    android:scaleX="0.8"
                    android:scaleY="0.8" />
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/radio_other"
                    android:text="Other"
                    android:textSize="15sp"
                    android:fontFamily="@font/roboto_regular"
                    android:buttonTint="@color/red_theme"
                    android:checked="false"
                    android:textColor="@color/black"
                    android:scaleX="0.8"
                    android:scaleY="0.8" />
            </RadioGroup>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    </LinearLayout>

    <TextView
            android:id="@+id/tv_add_address_addaddress"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Add Address"
            android:textSize="15sp"
            android:layout_alignParentBottom="true"
            android:textColor="@color/white"
            android:background="@drawable/blue_green_bg"
            android:fontFamily="@font/roboto_bold"
            android:padding="10dp"
            android:gravity="center" />
    <TextView
        android:id="@+id/tv_save_address_addaddress"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Save Address"
        android:textSize="15sp"
        android:layout_alignParentBottom="true"
        android:textColor="@color/white"
        android:background="@drawable/blue_green_bg"
        android:fontFamily="@font/roboto_bold"
        android:padding="10dp"
        android:gravity="center"
        android:visibility="gone"/>

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f5ff"
    tools:context=".ecommerce.activity.AddAddressEcomActivity">
    <RelativeLayout
        android:id="@+id/headerbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/red_theme"
        android:paddingBottom="5dp">

        <Button
            android:id="@+id/back_btn_address"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ic_next_new"  />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:text="Address"
            android:fontFamily="@font/roboto_bold"
            android:textColor="#fff"
            android:textSize="18sp"  />
    </RelativeLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/headerbar">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/gray_round_bg"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_username_addddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="John Smith"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:fontFamily="@font/roboto_medium"
                android:layout_margin="10dp"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/tvtype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OFFICE"
                android:textColor="@color/textcolor"
                android:textSize="11sp"
                android:fontFamily="@font/roboto_medium"
                android:layout_margin="10dp"/></LinearLayout>
        <TextView
            android:id="@+id/tvAddress_addaddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Noida Secotr 65 B-96 Near Sectore 62 "
            android:textColor="@color/textcolor"
            android:textSize="13sp"
            android:fontFamily="@font/roboto_regular"
            android:layout_marginLeft="10dp"
            android:singleLine="true"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
        <TextView
            android:id="@+id/tvcity_addaddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Noida - "
            android:textColor="@color/textcolor"
            android:textSize="13sp"
            android:fontFamily="@font/roboto_regular"
            android:layout_marginLeft="10dp"
            android:singleLine="true"/>
            <TextView
                android:id="@+id/tvpincode_addaddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123456"
                android:textColor="@color/textcolor"
                android:textSize="13sp"
                android:fontFamily="@font/roboto_regular"
                android:layout_marginLeft="5dp"
                android:singleLine="true"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tvstate_addaddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Uttar Pradesh"
            android:textColor="@color/textcolor"
            android:textSize="13sp"
            android:fontFamily="@font/roboto_regular"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:singleLine="true"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mobile:"
                android:textColor="@color/textcolor"
                android:textSize="13sp"
                android:fontFamily="@font/roboto_regular"
                android:layout_marginLeft="10dp"
                android:singleLine="true"/>
            <TextView
                android:id="@+id/tvmobile_addaddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9876543321"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:fontFamily="@font/roboto_medium"
                android:layout_marginLeft="5dp"
                android:singleLine="true"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height=".5dp"
            android:layout_margin="10dp"
            android:background="@color/black"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="10dp">
            <TextView
                android:id="@+id/tvchange_addaddress"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Change"
                android:textColor="@color/red_theme"
                android:textSize="13sp"
                android:fontFamily="@font/roboto_medium"
                android:layout_marginLeft="10dp"
                android:singleLine="true"
                android:padding="10dp"
                android:gravity="center"
                android:layout_weight="1"/>
            <View
                android:layout_width=".5dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@color/black"
              />
            <TextView
                android:id="@+id/tvaddnew_addaddress"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Add New Address"
                android:textColor="@color/red_theme"
                android:textSize="14sp"
                android:fontFamily="@font/roboto_medium"
                android:layout_marginLeft="10dp"
                android:singleLine="true"
                android:padding="10dp"
                android:gravity="center"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recylceItemDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="80dp"
                        android:src="@drawable/girl"
                        android:layout_margin="10dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Estimated Delivery:"
                            android:textColor="@color/black"
                            android:fontFamily="@font/roboto_regular"
                            android:textSize="14sp"
                            android:layout_marginTop="20dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="20 Feb 2020"
                            android:textColor="@color/black"
                            android:fontFamily="@font/roboto_medium"
                            android:textSize="14sp"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="10dp"/>
                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/gray_round_bg"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PRICE DETAILS"
                android:textColor="@color/textcolor"
                android:textSize="14sp"
                android:fontFamily="@font/roboto_medium"
                android:layout_margin="10dp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/dottedline"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Order Total"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_marginLeft="10dp"
                    android:singleLine="true"/>
                <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VIEW DETAILS"
                android:textColor="@color/yellow_theme"
                android:textSize="13sp"
                android:fontFamily="@font/roboto_regular"
                android:layout_marginLeft="10dp"
                android:singleLine="true"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/tv_order_rs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₹ 699"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_marginLeft="10dp"
                    android:singleLine="true"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delivery Charges"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_marginLeft="10dp"
                    android:singleLine="true"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/tv_delivery_charge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₹ 150"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_marginLeft="10dp"
                    android:singleLine="true"/>
            </LinearLayout>
            <View
            android:layout_width="match_parent"
            android:layout_height=".5dp"
            android:background="@color/black"
            android:layout_margin="10dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:fontFamily="@font/roboto_medium"
                    android:singleLine="true"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/tv_total_rs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₹ 849"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:fontFamily="@font/roboto_regular"
                    android:singleLine="true"/>

            </LinearLayout>

        </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_alignParentBottom="true">
        <TextView
            android:id="@+id/tv_product_detail_actualprice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="₹ 899"
            android:gravity="start"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_bold"
            android:textSize="15sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tv_continue_addaddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CONTINUE"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:background="@drawable/blue_green_bg"
            android:padding="10dp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_margin="5dp"/>
    </LinearLayout>

</RelativeLayout>
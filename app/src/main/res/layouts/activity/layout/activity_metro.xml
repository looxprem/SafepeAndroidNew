<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relative_metro"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.booking.MetroActivity">
    <RelativeLayout
        android:id="@+id/headerbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/red_theme"
        android:paddingBottom="5dp">

        <Button
            android:id="@+id/recharge_back_btn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/ic_arrow_back_white_24dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:text="Metro"
            android:fontFamily="@font/roboto_bold"
            android:textColor="#fff"
            android:textSize="18sp" />
    </RelativeLayout>

    <ScrollView
        android:layout_below="@id/headerbar"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="20dp">

            <LinearLayout
                android:id="@+id/li_metro_tab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                >

            <TextView
                android:id="@+id/tv_metro_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Metro"
                android:textSize="15sp"
                android:fontFamily="@font/roboto_regular"
                android:padding="10dp"></TextView>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider"></View>
            </LinearLayout>

            <Button
                android:id="@+id/proceed_btn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/amount"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/rounded_buttons"
                android:padding="10dp"
                android:text="Proceed"
                android:textColor="#fff"
                android:textSize="15sp"
                android:fontFamily="@font/roboto_regular"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/metro_status"
                android:textSize="12sp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/roboto_regular"></TextView>

        </LinearLayout>
    </ScrollView>


</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#EFEFEF"
    android:id="@+id/busSeatLayout"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_margin="5dp"
        app:cardCornerRadius="5dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.core.widget.NestedScrollView
                android:id="@+id/nestedScroll"
                android:padding="5dp"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="vertical"
                android:background="@color/grey_50"
                tools:ignore="MissingConstraints">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3"
                        android:padding="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="-10dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:gravity="center">
                            <com.safepayu.wallet.custom_view.CustomTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/TextAppearance.AppCompat.Medium"
                                app:fontCustom="@string/Roboto"
                                android:textAllCaps="false"
                                android:layout_alignParentLeft="true"
                                android:layout_marginLeft="10dp"
                                android:textColor="@color/black"
                                android:textSize="14sp"
                                android:text="Available Seats" />

                            <ImageView
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:src="@drawable/ic_seats_book"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:gravity="center">
                            <com.safepayu.wallet.custom_view.CustomTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/TextAppearance.AppCompat.Medium"
                                app:fontCustom="@string/Roboto"
                                android:textAllCaps="false"
                                android:layout_alignParentLeft="true"
                                android:layout_marginLeft="10dp"
                                android:textColor="@color/black"
                                android:textSize="14sp"
                                android:text="Booked Seats" />

                            <ImageView
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:src="@drawable/ic_seats_booked"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:gravity="center">
                            <com.safepayu.wallet.custom_view.CustomTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/TextAppearance.AppCompat.Medium"
                                app:fontCustom="@string/Roboto"
                                android:textAllCaps="false"
                                android:layout_alignParentLeft="true"
                                android:layout_marginLeft="10dp"
                                android:textColor="@color/black"
                                android:textSize="14sp"
                                android:text="Reserved Seats" />

                            <ImageView
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:src="@drawable/ic_seats_reserved"/>

                        </LinearLayout>

                    </LinearLayout>

                    <ImageView
                        android:layout_width="55dp"
                        android:layout_height="45dp"
                        android:src="@drawable/ic_wheel"
                        android:layout_gravity="right"
                        android:padding="5dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="40dp"/>

                    <HorizontalScrollView
                        android:id="@+id/layoutSeat"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent" />

                    <Button
                        android:id="@+id/doneBtn_busSeatLayout"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/rounded_buttons"
                        android:padding="10dp"
                        android:text="Done"
                        android:textColor="#fff"
                        android:textSize="15sp"
                        android:fontFamily="@font/roboto_regular"/>
                </LinearLayout>

            </androidx.core.widget.NestedScrollView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>



</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#e2e2e2"
            android:padding="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ORDER NO:"
                android:textSize="12sp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/orderNo_orderListAdapter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1122336114-7246556"
                android:textSize="12sp"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/black"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/orderDetail_orderListAdapter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order Details"
                android:textSize="12sp"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/yellow_theme"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white"
            android:layout_marginTop="10dp">
            <ImageView
                android:id="@+id/image_orderListAdapter"
                android:layout_width="80dp"
                android:layout_height="100dp"
                android:scaleType="fitXY"
                android:layout_gravity="center"
                android:src="@drawable/girl"
                android:layout_marginLeft="10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">
                <TextView
                    android:id="@+id/productName_orderListAdapter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_bold"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:text="Women Gold Shoulder Bag"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Size:"
                        android:textColor="@color/textcolor"
                        android:textSize="13sp"
                        android:visibility="gone"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="M"
                        android:textColor="@color/textcolor"
                        android:textSize="13sp"
                        android:layout_marginLeft="5dp"
                        android:visibility="gone"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Qty:"
                        android:textColor="@color/textcolor"
                        android:textSize="13sp"/>

                    <TextView
                        android:id="@+id/productquantity_orderListAdapter"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:text="1"
                        android:textColor="@color/textcolor"
                        android:textSize="13sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/productOfferPrice_orderListAdapter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="₹ 699"
                        android:gravity="start"
                        android:textColor="@color/red"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="13sp"
                        android:layout_marginTop="5dp"/>
                    <TextView
                        android:id="@+id/productActualPrice_orderListAdapter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="₹ 899"
                        android:gravity="start"
                        android:textColor="@color/black"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="13sp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:visibility="gone"/>
                    <TextView
                        android:id="@+id/saveAmount_orderListAdapter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Saved ₹ 200 "
                        android:gravity="start"
                        android:textColor="@color/yellow_theme"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="13sp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:visibility="gone"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:layout_width="5dp"
                        android:layout_height="5dp"
                        android:textSize="14sp"
                        android:layout_gravity="center"
                        android:background="@color/green_A700"
                        android:fontFamily="@font/roboto_medium" />
                    <TextView
                        android:id="@+id/orderStatus_orderListAdapter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@color/textcolor"
                        android:fontFamily="@font/roboto_medium"
                        android:layout_marginLeft="5dp"
                        android:text="Delivered  on Wed, Jan 7th 2020"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height=".5dp"
            android:layout_margin="10dp"
            android:background="@color/black"/>


        <RatingBar
            android:id="@+id/productRating_orderListAdapter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="-10dp"
            android:scaleX=".8"
            android:scaleY=".8"
            android:rating="0"
            android:layout_gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <LinearLayout
            android:id="@+id/RatingReviewLayout_orderListAdapter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:visibility="gone">
            <RatingBar
                android:id="@+id/productRatingReview_orderListAdapter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:rating="3"
                android:scaleX=".6"
                android:scaleY=".6"
                android:layout_marginLeft="-20dp" />

            <TextView
                android:id="@+id/productReviewBtn_orderListAdapter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:gravity="right"
                android:padding="10dp"
                android:text="Write A Review"
                android:textColor="@color/red_theme"
                android:textSize="13sp" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>

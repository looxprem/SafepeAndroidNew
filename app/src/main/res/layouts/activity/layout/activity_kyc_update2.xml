<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/kycLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f5ff"
    android:orientation="vertical"
    tools:context=".activity.ui.KycUpdate2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#196cfe"
            android:orientation="vertical"
            android:paddingTop="8dp">

            <RelativeLayout
                android:id="@+id/headerbar"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:background="@color/red_theme"
                android:paddingBottom="5dp">

                <Button
                    android:id="@+id/backBtn_kycLayout"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/ic_next_new" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/roboto_bold"
                    android:gravity="center"
                    android:text="KYC"
                    android:textColor="#fff"
                    android:textSize="18sp" />
            </RelativeLayout>
        </LinearLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="15dp"
                    android:elevation="5dp"
                    android:padding="5dp"
                    app:cardCornerRadius="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/statusKycLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="20dp"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginRight="20dp"
                                android:fontFamily="@font/roboto_regular"
                                android:gravity="center"
                                android:text="Enter Name"
                                android:textColor="#373836"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/kycRegisterLayout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginRight="20dp"
                                android:fontFamily="@font/roboto_regular"
                                android:gravity="center"
                                android:text="* - Mandatory Fields"
                                android:textColor="#373836"
                                android:textSize="12sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginRight="20dp"
                                android:fontFamily="@font/roboto_regular"
                                android:gravity="center"
                                android:text="Enter Name"
                                android:textColor="#373836"
                                android:textSize="12sp" />

                            <EditText
                                android:id="@+id/name_kycLayout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:background="@drawable/white_button_grayborder"
                                android:fontFamily="@font/roboto_regular"
                                android:hint="Name"
                                android:imeOptions="actionNext"
                                android:inputType="text"
                                android:padding="10dp"
                                android:singleLine="true"
                                android:textColor="@color/black"
                                android:textSize="15sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginRight="20dp"
                                android:fontFamily="@font/roboto_regular"
                                android:gravity="center"
                                android:text="Enter Mobile"
                                android:textColor="#373836"
                                android:textSize="12sp" />

                            <EditText
                                android:id="@+id/mobile_kycLayout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:background="@drawable/white_button_grayborder"
                                android:fontFamily="@font/roboto_regular"
                                android:hint="Mobile"
                                android:imeOptions="actionNext"
                                android:inputType="number"
                                android:maxLength="10"
                                android:padding="10dp"
                                android:singleLine="true"
                                android:textColor="@color/black"
                                android:textSize="15sp" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/operator"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginRight="20dp"
                                android:fontFamily="@font/roboto_regular"
                                android:gravity="center"
                                android:text="Enter Email"
                                android:textColor="#373836"
                                android:textSize="12sp" />

                            <EditText
                                android:id="@+id/email_kycLayout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:background="@drawable/white_button_grayborder"
                                android:fontFamily="@font/roboto_regular"
                                android:hint="Email"
                                android:imeOptions="actionNext"
                                android:inputType="textEmailAddress"
                                android:padding="10dp"
                                android:singleLine="true"
                                android:textColor="@color/black"
                                android:textSize="15sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/operator"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginRight="20dp"
                                android:fontFamily="@font/roboto_regular"
                                android:gravity="center"
                                android:text="Enter Shop Name"
                                android:textColor="#373836"
                                android:textSize="12sp" />

                            <EditText
                                android:id="@+id/shopName_kycLayout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:background="@drawable/white_button_grayborder"
                                android:fontFamily="@font/roboto_regular"
                                android:hint="Shop Name"
                                android:imeOptions="actionNext"
                                android:inputType="text"
                                android:padding="10dp"
                                android:singleLine="true"
                                android:textColor="@color/black"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/textView4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/textView6"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginRight="20dp"
                                android:gravity="center"
                                android:text="Select State"
                                android:textColor="#373836"
                                android:textSize="15dp"
                                android:visibility="gone" />


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="4dp"
                                android:layout_marginRight="20dp"
                                android:background="@drawable/white_button_grayborder"
                                android:orientation="vertical"
                                android:visibility="gone">

                                <Spinner
                                    android:id="@+id/state"
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:layout_below="@+id/textView4"
                                    android:nextFocusForward="@+id/city" />

                            </LinearLayout>

                            <TextView
                                android:id="@+id/textView6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:layout_below="@+id/operator"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginRight="20dp"
                                android:fontFamily="@font/roboto_regular"
                                android:gravity="center"
                                android:text="City"
                                android:textColor="#373836"
                                android:textSize="15sp"
                                android:visibility="gone" />

                            <EditText
                                android:id="@+id/city"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/textView6"
                                android:layout_gravity="center"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="4dp"
                                android:layout_marginRight="20dp"
                                android:background="@drawable/white_button_grayborder"
                                android:fontFamily="@font/roboto_regular"
                                android:inputType="text"
                                android:nextFocusForward="@+id/operator"
                                android:padding="15dp"
                                android:textColor="#373836"
                                android:textSize="15sp"
                                android:visibility="gone" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/textView6"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginRight="0dp"
                                android:fontFamily="@font/roboto_regular"
                                android:gravity="center"
                                android:text="Select Country "
                                android:textColor="#373836"
                                android:textSize="12sp"
                                android:visibility="gone" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="4dp"
                                android:layout_marginRight="20dp"
                                android:background="@drawable/white_button_grayborder"
                                android:orientation="horizontal"
                                android:visibility="gone">

                                <FrameLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp">

                                    <Spinner
                                        android:id="@+id/countryList_kycLayout"
                                        android:layout_width="match_parent"
                                        android:layout_height="40dp"
                                        android:backgroundTint="@color/red_theme" />
                                </FrameLayout>

                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/textView6"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginRight="0dp"
                                android:fontFamily="@font/roboto_regular"
                                android:gravity="center"
                                android:text="Select State "
                                android:textColor="#373836"
                                android:textSize="12sp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="4dp"
                                android:layout_marginRight="20dp"
                                android:background="@drawable/white_button_grayborder"
                                android:orientation="horizontal">

                                <FrameLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp">

                                    <Spinner
                                        android:id="@+id/stateList_kycLayout"
                                        android:layout_width="match_parent"
                                        android:layout_height="40dp"
                                        android:backgroundTint="@color/red_theme" />
                                </FrameLayout>

                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/operator"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginRight="20dp"
                                android:fontFamily="@font/roboto_regular"
                                android:gravity="center"
                                android:text="Enter Address"
                                android:textColor="#373836"
                                android:textSize="12sp" />

                            <EditText
                                android:id="@+id/address_kycLayout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:background="@drawable/white_button_grayborder"
                                android:fontFamily="@font/roboto_regular"
                                android:hint="Address"
                                android:imeOptions="actionNext"
                                android:inputType="text"
                                android:padding="10dp"
                                android:singleLine="true"
                                android:textColor="@color/black"
                                android:textSize="15sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginRight="20dp"
                                android:fontFamily="@font/roboto_regular"
                                android:gravity="center"
                                android:text="Enter Pin Code"
                                android:textColor="#373836"
                                android:textSize="12sp" />

                            <EditText
                                android:id="@+id/pinCode_kycLayout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:background="@drawable/white_button_grayborder"
                                android:fontFamily="@font/roboto_regular"
                                android:hint="Pin Code"
                                android:imeOptions="actionNext"
                                android:inputType="number"
                                android:padding="10dp"
                                android:singleLine="true"
                                android:textColor="@color/black"
                                android:textSize="15sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/operator"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginRight="20dp"
                                android:fontFamily="@font/roboto_regular"
                                android:gravity="center"
                                android:text="Enter Date Of Birth"
                                android:textColor="#373836"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/dob_kycLayout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:background="@drawable/white_button_grayborder"
                                android:fontFamily="@font/roboto_regular"
                                android:hint="DOB"
                                android:padding="10dp"
                                android:textColor="@color/black"
                                android:textSize="15sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginRight="20dp"
                                android:fontFamily="@font/roboto_regular"
                                android:gravity="center"
                                android:text="Enter PAN"
                                android:textColor="#373836"
                                android:textSize="12sp" />

                            <EditText
                                android:id="@+id/pan_kycLayout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:background="@drawable/white_button_grayborder"
                                android:fontFamily="@font/roboto_regular"
                                android:hint="PAN"
                                android:imeOptions="actionNext"
                                android:inputType="number"
                                android:padding="10dp"
                                android:singleLine="true"
                                android:textColor="@color/black"
                                android:textSize="15sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/operator"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginRight="20dp"
                                android:fontFamily="@font/roboto_regular"
                                android:gravity="center"
                                android:text="Enter Aadhaar Card Number"
                                android:textColor="#373836"
                                android:textSize="12sp" />

                            <EditText
                                android:id="@+id/adhar_kycLayout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:background="@drawable/white_button_grayborder"
                                android:fontFamily="@font/roboto_regular"
                                android:hint="Aadhaar Number"
                                android:imeOptions="actionDone"
                                android:inputType="number"
                                android:padding="10dp"
                                android:singleLine="true"
                                android:textColor="@color/black"
                                android:textSize="15sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/imageLayoutAdhar"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginRight="10dp"
                            android:gravity="start|center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/roboto_regular"
                                android:padding="10dp"
                                android:text="Click Here To Upload\nAadhaar Front Image *"
                                android:textColor="@color/black"
                                android:textSize="15sp" />

                            <ImageView
                                android:id="@+id/imageAdhar_kycLayout"
                                android:layout_width="100dp"
                                android:layout_height="130dp"
                                android:layout_alignParentRight="true"
                                android:background="@drawable/ic_picture"
                                android:scaleType="fitXY" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/imageLayoutAdharBack"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginRight="10dp"
                            android:gravity="start|center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/roboto_regular"
                                android:padding="10dp"
                                android:text="Click Here To Upload\nAadhaar Back Image *"
                                android:textColor="@color/black"
                                android:textSize="15sp" />

                            <ImageView
                                android:id="@+id/imageAdharBack_kycLayout"
                                android:layout_width="100dp"
                                android:layout_height="130dp"
                                android:layout_alignParentRight="true"
                                android:background="@drawable/ic_picture"
                                android:scaleType="fitXY" />
                        </LinearLayout>

                        <ProgressBar
                            android:id="@+id/progressBar"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="20dp"
                            android:layout_centerInParent="true"
                            android:layout_marginTop="35dp"
                            android:layout_marginBottom="5dp"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/progressBarText"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="35dp"
                            android:fontFamily="@font/roboto_regular"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="0%"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:visibility="gone" />

                        <LinearLayout
                            android:id="@+id/imageLayoutPan"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginRight="10dp"
                            android:gravity="start|center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/roboto_regular"
                                android:padding="10dp"
                                android:text="Click Here To Upload\nPan Image *"
                                android:textColor="@color/black"
                                android:textSize="15sp" />

                            <ImageView
                                android:id="@+id/imagePan_kycLayout"
                                android:layout_width="100dp"
                                android:layout_height="130dp"
                                android:layout_alignParentRight="true"
                                android:background="@drawable/ic_picture"
                                android:scaleType="fitXY" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/imageLayoutSelf"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginRight="10dp"
                            android:gravity="start|center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/roboto_regular"
                                android:padding="10dp"
                                android:text="Click Here To Upload\nYour Image *"
                                android:textColor="@color/black"
                                android:textSize="15sp" />

                            <ImageView
                                android:id="@+id/imageSelf_kycLayout"
                                android:layout_width="100dp"
                                android:layout_height="130dp"
                                android:layout_alignParentRight="true"
                                android:background="@drawable/ic_picture"
                                android:scaleType="fitXY" />
                        </LinearLayout>

                        <Button
                            android:id="@+id/register_kycLayout"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:background="@drawable/blue_green_round_btn"
                            android:fontFamily="@font/roboto_regular"
                            android:text="Update KYC"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="18sp" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f7f8f8"
    >

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp">
                <LinearLayout
                    android:id="@+id/li_home"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="15dp">

                    <ImageView
                        android:id="@+id/im_unselect_orders"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_home" />


                    <TextView
                        android:id="@+id/tv_home"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Home"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/roboto_regular"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/li_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="15dp">

                    <ImageView
                        android:id="@+id/im_unselect_menu"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_profile" />

                    <TextView
                        android:id="@+id/tv_profile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Profile"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/roboto_regular"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/li_package_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="15dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_package_details"/>

                    <TextView
                        android:id="@+id/tv_package_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Package Details"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/roboto_regular"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/li_buy_package"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="15dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_buypackge"/>

                    <TextView
                        android:id="@+id/tv_buy_packge"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Buy Package"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/roboto_regular"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/li_commission"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="15dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_business_wallet"/>

                    <TextView
                        android:id="@+id/tv_commission"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Business Wallet"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/roboto_regular"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/li_my_wallet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="15dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_wallet"/>

                    <TextView
                        android:id="@+id/tv_my_wallet"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="My Wallet"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/roboto_regular"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/li_shopping"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="15dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_cart"/>

                    <TextView
                        android:id="@+id/tv_shopping"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Shopping"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/roboto_regular"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/li_change_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="15dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_changepassword"/>

                    <TextView
                        android:id="@+id/tv_change_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Change Passcode"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/roboto_regular"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/li_myorder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="15dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_my_orders"/>

                    <TextView
                        android:id="@+id/tv_my_orders"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="My Orders"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/roboto_regular"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/li_history"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="15dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_history"/>

                    <TextView
                        android:id="@+id/tv_history"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Recharge History"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/roboto_regular"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/li_historyWallet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="15dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/wallet1"/>

                    <TextView
                        android:id="@+id/tv_historyWallet"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Wallet History"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/roboto_regular"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/li_genelogy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="15dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_genelogy"/>

                    <TextView
                        android:id="@+id/tv_genelogy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Genealogy"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/roboto_regular"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/li_refer_earn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="15dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_refer"/>

                    <TextView
                        android:id="@+id/tv_refer_earn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Refer &amp; Earn"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/roboto_regular"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/li_update_kyc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="15dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_update" />

                    <TextView
                        android:id="@+id/tv_update_kyc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Update KYC"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/roboto_regular"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/li_contact_us"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="15dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_contact"/>

                    <TextView
                        android:id="@+id/tv_contact_us"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/roboto_regular"
                        android:text="Contact Us"
                        android:textColor="@color/black"
                        android:textSize="15sp" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/li_logout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="15dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_logout"/>

                    <TextView
                        android:id="@+id/tv_logout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Logout"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/roboto_regular"/>
                </LinearLayout>


            </LinearLayout>


        </androidx.core.widget.NestedScrollView>
    </LinearLayout>


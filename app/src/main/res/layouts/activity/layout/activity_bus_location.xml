<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.booking.bus.BusLocationActivity">

    <RelativeLayout
        android:id="@+id/headerbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/red_theme"
        android:paddingBottom="5dp">

        <Button
            android:id="@+id/recharge_back_btn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/ic_arrow_back_white_24dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:text=""
            android:fontFamily="@font/roboto_bold"
            android:textColor="#fff"
            android:textSize="18sp" />
    </RelativeLayout>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_below="@id/headerbar"
        android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/edittext_rounded">
            <LinearLayout
                android:id="@+id/li_bus_from_where"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="start|center"
                android:padding="5dp"
                android:background="#f5f7fc">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_source"
                    android:padding="8dp"
                    android:layout_marginLeft="5dp"/>
                <EditText
                    android:id="@+id/tv_from_bus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="From Where?"
                    android:textColor="@color/bue_A800"
                    android:textSize="14sp"
                    android:background="@null"
                    android:fontFamily="@font/roboto_regular"
                    android:padding="10dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/li_bus_to_where"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="start|center"
                android:padding="5dp">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_source"
                    android:padding="8dp"
                    android:layout_marginLeft="5dp"/>

            <EditText
                android:id="@+id/tv_to_bus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="To Where?"
                android:textColor="@color/bue_A800"
                android:textSize="14sp"
                android:fontFamily="@font/roboto_regular"
                android:padding="10dp"
                android:background="@null"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    </ScrollView>

</RelativeLayout>
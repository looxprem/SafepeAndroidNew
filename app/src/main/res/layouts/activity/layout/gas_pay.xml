<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#f4f5ff"
    android:id="@+id/gasPayLayout">



    <RelativeLayout
        android:id="@+id/headerbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/red_theme"
        android:paddingBottom="5dp">

        <Button
            android:id="@+id/gas_back_btn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ic_next_new" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:text="Gas"
            android:fontFamily="@font/roboto_bold"
            android:textColor="#fff"
            android:textSize="18sp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/headerbar"
        tools:context="com.xwallet.wallet.Fragments.PostpaidRechrge">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/red_theme"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            app:cardCornerRadius="5dp"
            android:elevation="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="-30dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="3dp"
                android:padding="5dp"
                android:gravity="center">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="start|center"
                android:padding="10dp">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="0dp"
                    android:src="@drawable/ic_user_new" />
                <EditText
                    android:id="@+id/gasID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView2"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:inputType="number"
                    android:nextFocusForward="@+id/amount"
                    android:padding="10dp"
                    android:textColor="#373836"
                    android:textSize="15sp"
                    android:hint="Customer ID"
                    android:fontFamily="@font/roboto_regular" />
            </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height=".5dp"
                    android:background="@color/graynew"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="start|center"
                    android:padding="10dp">
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp">
                        <LinearLayout
                            android:id="@+id/layout_select_mobile_operator"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginLeft="5dp"
                                android:src="@drawable/ic_gasnew" />
                            <TextView
                                android:id="@+id/tv_select_mobile_operator"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="Select Operator"
                                android:padding="10dp"
                                android:textColor="@color/textcolor"
                                android:textSize="15sp"
                                android:fontFamily="@font/roboto_regular"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="1"/>
                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:padding="10dp"
                                android:src="@drawable/ic_down_security"
                                android:layout_marginRight="10dp"/>
                        </LinearLayout>

                        <Spinner
                            android:id="@+id/operatorsGas"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_below="@+id/textView5"
                            android:nextFocusForward="@+id/textView"
                            android:backgroundTint="@color/red_theme"
                            android:layout_marginLeft="5dp"
                            android:visibility="gone"/>
                    </FrameLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height=".5dp"
                    android:background="@color/graynew"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="start|center"
                    android:padding="10dp">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/ic_new_rupee" />

                    <EditText
                        android:id="@+id/amountGas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textView"
                        android:layout_gravity="center"
                        android:background="@null"
                        android:imeOptions="actionDone"
                        android:inputType="number"
                        android:nextFocusForward="@+id/btn"
                        android:padding="10dp"
                        android:textColor="#373836"
                        android:textSize="15sp"
                        android:hint="Amount"
                        android:fontFamily="@font/roboto_regular"/>
                </LinearLayout>

            </LinearLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
            <TextView
                android:layout_weight="1"
                android:id="@+id/calculatedamount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text=" "
                android:textSize="14sp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/yellow_theme"
                android:paddingLeft="0dp"
                android:visibility="gone"
                />
            <androidx.cardview.widget.CardView
                android:id="@+id/card_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="5dp"
                android:visibility="gone">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/white">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Recharge Amount"
                            android:textSize="13sp"
                            android:textColor="@color/black"
                            android:padding="10dp"
                            android:fontFamily="@font/roboto_bold"
                            android:layout_weight="1"/>
                        <TextView
                            android:id="@+id/tv_rechargeamount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10"
                            android:textSize="13sp"
                            android:textColor="@color/black"
                            android:padding="10dp"
                            android:fontFamily="@font/roboto_regular"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Wallet Cashback"
                            android:textSize="13sp"
                            android:textColor="@color/black"
                            android:padding="10dp"
                            android:fontFamily="@font/roboto_bold"
                            android:layout_weight="1"/>
                        <TextView
                            android:id="@+id/tv_walletcashback"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10"
                            android:textSize="13sp"
                            android:textColor="@color/black"
                            android:padding="10dp"
                            android:fontFamily="@font/roboto_regular"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height=".5dp"
                        android:background="@color/divider"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total Amount"
                            android:textSize="13sp"
                            android:textColor="@color/black"
                            android:padding="10dp"
                            android:fontFamily="@font/roboto_bold"
                            android:layout_weight="1"/>
                        <TextView
                            android:id="@+id/tv_total_amountpay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10"
                            android:textSize="13sp"
                            android:textColor="@color/black"
                            android:padding="10dp"
                            android:fontFamily="@font/roboto_regular"/>
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/serviceChargeLayout_gas"
                android:visibility="gone">

                <include layout="@layout/service_charge_layout" />
            </RelativeLayout>
            <Button
                android:id="@+id/gasPaybtn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/amount"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/blue_green_round_btn"
                android:fontFamily="@font/roboto_bold"
                android:padding="10dp"
                android:text="Pay Now"
                android:textColor="#fff"
                android:textSize="15sp" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>


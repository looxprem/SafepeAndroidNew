<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                >
                <LinearLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/white_button_grayborder"
                    >
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_notificationbell"
                        android:padding="10dp"></ImageView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="5dp">
                    <TextView
                        android:id="@+id/tv_notifiction_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Title"
                        android:textSize="15sp"
                        android:textColor="@color/bue_A800"
                        android:fontFamily="@font/roboto_bold"
                        android:singleLine="true"
                        />
                    <TextView
                        android:id="@+id/tv_notifiction_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Description"
                        android:textSize="12sp"
                        android:textColor="@color/darker_gray"
                        android:fontFamily="@font/roboto_regular"
                        android:layout_marginTop="2dp"
                        />
                    <TextView
                        android:id="@+id/tv_notifiction_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Time"
                        android:textSize="12sp"
                        android:textColor="@color/blue_grey_500"
                        android:fontFamily="@font/roboto_regular"
                        android:singleLine="true"
                        android:layout_marginTop="5dp"
                        android:visibility="gone"/>
                    <TextView
                        android:id="@+id/tv_notifiction_link"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Link"
                        android:textSize="12sp"
                        android:textColor="@color/blue_grey_500"
                        android:fontFamily="@font/roboto_regular"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:visibility="gone"/>


                </LinearLayout>
            </LinearLayout>
                <ImageView
                    android:id="@+id/image_notification"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/logo"
                    android:scaleType="fitXY"
                    android:layout_marginTop="5dp"/>
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>

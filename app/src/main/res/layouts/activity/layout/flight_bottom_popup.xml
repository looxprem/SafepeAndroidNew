<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/rounded_dialog">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/class_"
                android:textSize="18sp"
                android:textColor="@color/red_theme"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_bold"/>
            <TextView
                android:id="@+id/tv_done"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Done"
                android:textSize="18sp"
                android:padding="10dp"
                android:textColor="@color/yellow_theme"
                android:layout_margin="10dp"
                android:fontFamily="@font/roboto_bold"/>
        </LinearLayout>

    <RadioGroup
        android:id="@+id/radio_group_class"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp">
        <RadioButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/radia_economy"
            android:text="Economy"
            android:textSize="15sp"
            android:fontFamily="@font/roboto_regular"
            android:buttonTint="@color/bue_A800"
            android:checked="true"
            />

        <RadioButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/radia_premium_economy"
            android:text="Premium Economy"
            android:textSize="15sp"
            android:buttonTint="@color/bue_A800"
            android:fontFamily="@font/roboto_regular"
            android:layout_marginTop="5dp"
            android:checked="false"/>

        <RadioButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/radia_business"
            android:text="Business"
            android:textSize="15sp"
            android:buttonTint="@color/bue_A800"
            android:fontFamily="@font/roboto_regular"
            android:layout_marginTop="5dp"
            android:checked="false"
            />
        <RadioButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/radio_first_class"
            android:text="First Class"
            android:textSize="15sp"
            android:buttonTint="@color/bue_A800"
            android:fontFamily="@font/roboto_regular"
            android:layout_marginTop="5dp"
            android:checked="false"
            />
    </RadioGroup>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider"
            android:layout_margin="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No. of Travellers"
            android:textSize="18sp"
            android:textColor="@color/red_theme"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:fontFamily="@font/roboto_bold"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp">
           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:layout_weight="1">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Adults"
                   android:textSize="15sp"
                   android:textColor="@color/black"
                   android:fontFamily="@font/roboto_regular"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="12+ years"
                   android:textSize="12sp"
                   android:textColor="@color/darker_gray"
                   android:fontFamily="@font/roboto_regular"/>
           </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <FrameLayout
                    android:layout_width="45dp"
                    android:layout_height="45dp">
                    <ImageView
                        android:id="@+id/imageAdultsMinus"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:padding="8dp"
                        android:visibility="gone"
                        android:src="@drawable/ic_minus"/>
                    <ImageView
                        android:id="@+id/imageAdultsMinusgray"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:padding="8dp"

                        android:src="@drawable/ic_minus_gray"/>
                </FrameLayout>

                <TextView
                    android:id="@+id/tvAdultsCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto_regular"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>
                <FrameLayout
                    android:layout_width="45dp"
                    android:layout_height="45dp">

                <ImageView
                    android:id="@+id/imageAdultsPlus"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:padding="8dp"
                    android:src="@drawable/ic_plus"/>
                    <ImageView
                        android:id="@+id/imageAdultsPlusgray"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:padding="8dp"
                        android:visibility="gone"
                        android:src="@drawable/ic_plus_gray"/>
                </FrameLayout>

            </LinearLayout>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider"
            android:layout_margin="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Children"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/roboto_regular"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2-12 years"
                    android:textSize="12sp"
                    android:textColor="@color/darker_gray"
                    android:fontFamily="@font/roboto_regular"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <FrameLayout
                    android:layout_width="45dp"
                    android:layout_height="45dp">

                    <ImageView
                        android:id="@+id/imageChildrenMinus"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:padding="8dp"
                        android:src="@drawable/ic_minus" />

                    <ImageView
                        android:id="@+id/imageChildrenMinusgray"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:padding="8dp"
                        android:visibility="gone"
                        android:src="@drawable/ic_minus_gray"/>
                </FrameLayout>
                <TextView
                    android:id="@+id/tvChildrenCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>
                    <FrameLayout
                         android:layout_width="45dp"
                        android:layout_height="45dp">
                <ImageView
                    android:id="@+id/imageChildrenPlus"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:padding="8dp"
                    android:src="@drawable/ic_plus"/>
                <ImageView
                    android:id="@+id/imageChildrenPlusgray"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:padding="8dp"
                    android:visibility="gone"
                    android:src="@drawable/ic_plus_gray"/>
            </FrameLayout>

            </LinearLayout>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider"
            android:layout_margin="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Infants"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/roboto_regular"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0-2 years"
                    android:textSize="12sp"
                    android:textColor="@color/darker_gray"
                    android:fontFamily="@font/roboto_regular"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <FrameLayout
                    android:layout_width="45dp"
                    android:layout_height="45dp">

                    <ImageView
                        android:id="@+id/imageInfantMinus"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:padding="8dp"
                        android:src="@drawable/ic_minus" />

                    <ImageView
                        android:id="@+id/imageInfantMinusgray"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:padding="8dp"
                        android:visibility="gone"
                        android:src="@drawable/ic_minus_gray"/>
                </FrameLayout>

                <TextView
                    android:id="@+id/tvInfantCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>

                <FrameLayout
                    android:layout_width="45dp"
                    android:layout_height="45dp">

                    <ImageView
                        android:id="@+id/imageInfantPlus"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:padding="8dp"
                        android:src="@drawable/ic_plus" />
                    <ImageView
                        android:id="@+id/imageInfantPlusgray"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:padding="8dp"
                        android:visibility="gone"
                        android:src="@drawable/ic_plus_gray"/>
                </FrameLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:id="@+id/commissionLayout">

    <RelativeLayout
        android:id="@+id/headerbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/red_theme"
        android:paddingBottom="5dp">

        <Button
            android:id="@+id/send_back_btn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/ic_arrow_back_white_24dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center"
            android:text="Commission"
            android:textColor="#fff"
            android:textSize="18sp" />
    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:background="@drawable/button_background_gradient_diagonal"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center"
                                android:layout_margin="5dp"
                                android:src="@drawable/ic_add_black_24dp"
                                android:visibility="gone" />

                            <TextView
                                android:id="@+id/current_referral_business"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:paddingLeft="10dp"
                                android:text="â‚¹0.00"
                                android:textColor="@color/white"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/roboto_bold"
                                android:textSize="30sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:paddingLeft="10dp"
                                android:text="Referral Bussiness Balance"
                                android:textColor="@color/white"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/roboto_regular"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layout.isMembership"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:visibility="visible">


                            <TextView
                                android:id="@+id/textWarningCommission"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="Withdraw service is only available for active members."
                                android:textColor="@color/red"
                                android:layout_margin="10dp"
                                android:fontFamily="@font/roboto_regular"
                                android:textSize="14sp"
                                android:visibility="gone"/>


                            <TextView
                                android:id="@+id/getMemberShipBtn"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_gravity="center"
                                android:layout_marginHorizontal="30sp"
                                android:layout_marginVertical="10dp"
                                android:background="@color/yellow"
                                android:gravity="center"
                                android:text="Get Membership "
                                android:textColor="@color/white"
                                android:fontFamily="@font/roboto_regular"
                                android:textSize="15sp" />


                        </LinearLayout>

                        <TextView
                            android:id="@+id/send_to_wallet"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginBottom="10dp"
                            android:visibility="visible"
                            android:drawableLeft="@drawable/wallet_black_24dp"
                            android:drawablePadding="4dp"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="Send money to wallet"
                            android:textColor="@color/white"
                            android:fontFamily="@font/roboto_regular"
                            android:textSize="14sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="1"
                        app:cardElevation="2dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:paddingTop="20dp"
                            android:background="@drawable/card_bg"
                            android:paddingBottom="20dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:text="Left Business"
                                android:fontFamily="@font/roboto_bold"
                                android:textColor="@color/red_theme"
                                android:textSize="14sp" />


                            <TextView
                                android:id="@+id/left_business"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="Rs. 0.00"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/roboto_regular"
                                android:textColor="@color/yellow_theme"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                        </LinearLayout>


                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="1"
                        app:cardElevation="2dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:paddingTop="20dp"
                            android:background="@drawable/card_bg"
                            android:paddingBottom="20dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:text="Right Business"
                                android:fontFamily="@font/roboto_bold"
                                android:textSize="14sp"
                                android:textColor="@color/red_theme" />


                            <TextView
                                android:id="@+id/right_business"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:layout_marginTop="5dp"
                                android:gravity="end"
                                android:text="Rs. 0.00"
                                android:fontFamily="@font/roboto_regular"
                                android:textColor="@color/yellow_theme"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/card_total_bg"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/roboto_bold"
                            android:text="Total Business"
                            android:textColor="@color/red_theme"
                            android:textSize="14sp" />


                        <TextView
                            android:id="@+id/total_business"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:fontFamily="@font/roboto_bold"
                            android:gravity="end"
                            android:text="Rs. 0.00"
                            android:textAlignment="viewEnd"
                            android:textColor="@color/yellow_theme"
                            android:textSize="14sp" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="20dp"
                        android:background="@drawable/card_sponser_bg">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Sponser Business"
                            android:fontFamily="@font/roboto_bold"
                            android:textSize="14sp"
                            android:textColor="@color/red_theme" />


                        <TextView
                            android:id="@+id/sponser_business"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:text="Rs. 0.00"
                            android:textAlignment="viewEnd"
                            android:fontFamily="@font/roboto_bold"
                            android:textColor="@color/yellow_theme"
                            android:textSize="14sp" />

                    </LinearLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingHorizontal="8dp"
                        android:background="@drawable/card_matching_bg"
                        android:paddingVertical="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Matching Business"
                            android:fontFamily="@font/roboto_bold"
                            android:textSize="14sp"
                            android:textColor="@color/red_theme" />

                        <TextView
                            android:id="@+id/matching_business"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:text="Rs. 0.00"
                            android:textAlignment="viewEnd"
                            android:fontFamily="@font/roboto_bold"
                            android:textColor="@color/yellow_theme"
                            android:textSize="14sp" />

                    </LinearLayout>


                </androidx.cardview.widget.CardView>


            </LinearLayout>


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>



</LinearLayout>
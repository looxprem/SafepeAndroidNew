<?xml version="1.0" encoding="UTF-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:openDrawer="start"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/drawer_layoutEcommerce"
    tools:context=".ecommerce.activity.EHomeActivity"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:background="#196cfe"
                android:orientation="vertical"
                android:paddingTop="8dp">

                <LinearLayout
                    android:layout_height="?actionBarSize"
                    android:layout_width="match_parent"
                    android:id="@+id/head"
                    android:orientation="horizontal"
                    android:visibility="visible"
                    android:gravity="center"
                    android:layout_gravity="center">

                    <ImageView
                        android:layout_height="30dp"
                        android:layout_width="30dp"
                        android:id="@+id/nav_iconEcommerce"
                        android:src="@drawable/navigation_menu_btn_new"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"/>

                    <RelativeLayout
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:id="@+id/searchLayout_nav"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="10dp">
                        <ImageView
                            android:layout_height="wrap_content"
                            android:layout_width="100dp"
                            android:src="@drawable/white_logo_new"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            />
                    </RelativeLayout>



                    <ImageView

                        android:layout_height="40dp"
                        android:layout_width="40dp"
                        android:src="@drawable/ic_like_white"
                        android:padding="10dp"
                        android:visibility="gone"/>
                    <ImageView
                        android:id="@+id/favBtn_main"
                        android:layout_height="40dp"
                        android:layout_width="40dp"
                        android:src="@drawable/ic_like_white"
                        android:padding="10dp" />
                    <FrameLayout
                        style="?attr/actionButtonStyle"
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clipToPadding="false"
                        android:focusable="true"
                        android:layout_gravity="center_vertical">

                        <ImageView
                            android:id="@+id/cartBtn_main"
                            android:layout_height="25dp"
                            android:layout_width="20dp"
                            android:src="@drawable/ic_shopping_cart"
                            android:layout_gravity="center_vertical|right"
                            android:layout_marginRight="10dp"
                            android:layout_weight="0" />

                        <TextView
                            android:id="@+id/cart_badge"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="right|end|top"
                            android:layout_marginEnd="-5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="8dp"
                            android:gravity="center"
                            android:padding="3dp"
                            android:textColor="@android:color/white"
                            android:text="0"
                            android:textSize="10sp"
                            android:background="@drawable/badge_count_background"/>
                    </FrameLayout>

                    <ImageView
                        android:layout_height="40dp"
                        android:layout_width="40dp"
                        android:src="@drawable/ic_equilizer_bars"
                        android:padding="10dp"
                        android:visibility="gone"
                        android:layout_marginRight="5dp"
                        />
                </LinearLayout>
            </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#f4f5ff"
                    android:layout_marginBottom="0dp">

                    <FrameLayout
                        android:id="@+id/content_frame"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_above="@+id/bottom_navigation"
                        android:layout_below="@+id/app_bar"
                        app:layout_behavior="@string/appbar_scrolling_view_behavior"/>
                </LinearLayout>
            </LinearLayout>


    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#f7f8f8">
            <include layout="@layout/nav_header_home_new"></include>

            <include layout="@layout/side_navigation_menu_new"></include>
        </LinearLayout>
    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>

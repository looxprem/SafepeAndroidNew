<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f8f8"
    android:id="@+id/relative_flight"
    tools:context=".activity.booking.flight.FlightsActivity">
        <RelativeLayout
            android:id="@+id/headerbar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@color/red_theme"
            android:paddingBottom="5dp">

            <Button
                android:id="@+id/recharge_back_btn"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@drawable/ic_next_new"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:text="Flights"
                android:fontFamily="@font/roboto_bold"
                android:textColor="#fff"
                android:textSize="18sp" />
        </RelativeLayout>



        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:layout_below="@id/headerbar"
            android:background="@color/white">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/edittext_rounded">
                    <TextView
                        android:id="@+id/tv_oneway"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ONEWAY"
                        android:gravity="center"
                        android:textColor="@color/darker_gray"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="14sp"
                        android:padding="8dp"/>

                    <TextView
                        android:id="@+id/tv_twoway"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="TWOWAY"
                        android:gravity="center"
                        android:textColor="@color/darker_gray"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="14sp"
                        android:padding="8dp"/>
                </LinearLayout>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/linear_flight_source"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:background="@drawable/edittext_rounded"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:orientation="vertical"
                      >
                        <TextView
                            android:id="@+id/sourceFlight"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="From"
                            android:textSize="15sp"
                            android:textColor="@color/bue_A800"
                            android:fontFamily="@font/roboto_regular"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@null"
                            android:gravity="start"
                            android:singleLine="true"
                            android:imeOptions="actionDone"
                            android:clickable="false"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/source_flight_airport_code"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="HYD"
                                android:gravity="start"
                                android:textSize="20sp"
                                android:textColor="@color/blue_grey_700"
                                android:fontFamily="@font/roboto_regular"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="5dp"/>
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="-"
                                        android:gravity="start"
                                        android:textSize="20sp"
                                        android:textColor="@color/blue_grey_700"
                                        android:fontFamily="@font/roboto_regular"/>

                                    <TextView
                                        android:id="@+id/sourceFlightDesc"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Hyderabad"
                                        android:layout_marginLeft="5dp"
                                        android:layout_marginRight="10dp"
                                        android:gravity="start"
                                        android:textSize="20sp"
                                        android:textColor="@color/black"
                                        android:fontFamily="@font/roboto_regular"/>,

                                </LinearLayout>
                        </LinearLayout>



                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/linear_flight_destination"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:background="@drawable/edittext_rounded"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_marginLeft="0dp"
                        android:orientation="vertical"
                        android:layout_marginTop="10dp">
                        <TextView
                            android:id="@+id/destinationFlight"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="To"
                            android:textSize="15sp"
                            android:textColor="@color/bue_A800"
                            android:fontFamily="@font/roboto_regular"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@null"
                            android:gravity="start"
                            android:singleLine="true"
                            android:imeOptions="actionDone"
                            android:clickable="false"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                            android:id="@+id/destination_flight_airport_code"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="BLR"
                            android:gravity="start"
                            android:textSize="20sp"
                            android:textColor="@color/blue_grey_700"
                            android:layout_marginLeft="10dp"
                                android:layout_marginRight="5dp"
                            android:fontFamily="@font/roboto_regular"/>


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="-"
                                    android:gravity="start"
                                    android:textSize="20sp"
                                    android:textColor="@color/blue_grey_700"
                                    android:fontFamily="@font/roboto_regular"/>
                                <TextView
                                    android:id="@+id/destinationFlightDesc"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Bengaluru"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginRight="10dp"
                                    android:gravity="start"
                                    android:textSize="20sp"
                                    android:textColor="@color/black"
                                    android:fontFamily="@font/roboto_regular"/>
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                    <LinearLayout
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="right|center"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/circle"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/image_one_way"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="11dp"
                            android:src="@drawable/ic_down_arrow"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/image_two_way"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="11dp"
                            android:src="@drawable/ic_updownarrow" />

                    </LinearLayout>
                </FrameLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp">
                    <LinearLayout
                        android:id="@+id/li_departure_tab"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:layout_marginRight="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/departure_date"
                                android:textSize="12sp"
                                android:textColor="@color/darker_gray"
                                android:fontFamily="@font/roboto_regular"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:orientation="horizontal"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tv_departure_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_regular"
                                android:text=""
                                android:textColor="@color/black"
                                android:textSize="28sp" />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginLeft="5dp">
                                <TextView
                                    android:id="@+id/tv_departure_month_year"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/roboto_regular"
                                    android:text=""
                                    android:textColor="@color/black"
                                    android:textSize="12sp" />
                                <TextView
                                    android:id="@+id/tv_departure_day"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/roboto_regular"
                                    android:text=""
                                    android:textColor="@color/darker_gray"
                                    android:textSize="12sp" />
                                <TextView
                                    android:id="@+id/tv_departure_mo_ye"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/roboto_regular"
                                    android:text=""
                                    android:textColor="@color/black"
                                    android:textSize="12sp"
                                    android:visibility="gone"/>
                            </LinearLayout>

                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/divider"
                            android:layout_marginTop="10dp"></View>
                    </LinearLayout>
                    <LinearLayout
                    android:id="@+id/li_return_tab"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                        android:padding="10dp"
                        android:layout_marginLeft="10dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/return_date"
                            android:textSize="12sp"
                            android:textColor="@color/darker_gray"
                            android:fontFamily="@font/roboto_regular"/>
                        <TextView
                            android:id="@+id/tv_round"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:fontFamily="@font/roboto_regular"
                            android:text="@string/book_round_trip"
                            android:textColor="@color/black"
                            android:textSize="12sp" />

                        <LinearLayout
                            android:id="@+id/lidate"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:visibility="gone"
                         >

                            <TextView
                                android:id="@+id/tv_return_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_regular"
                                android:text=""
                                android:textColor="@color/black"
                                android:textSize="28sp" />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginLeft="5dp">
                                <TextView
                                    android:id="@+id/tv_return_month_year"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/roboto_regular"
                                    android:text=""
                                    android:textColor="@color/black"
                                    android:textSize="12sp" />
                                <TextView
                                    android:id="@+id/tv_return_day"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/roboto_regular"
                                    android:text=""
                                    android:textColor="@color/darker_gray"
                                    android:textSize="12sp" />
                                <TextView
                                    android:id="@+id/tv_return_mo_ye"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/roboto_regular"
                                    android:text=""
                                    android:textColor="@color/black"
                                    android:textSize="12sp"
                                    android:visibility="gone"/>
                            </LinearLayout>

                        </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/divider"
                        android:layout_marginTop="10dp"></View>
                </LinearLayout>
                </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_marginTop="20dp">
                <LinearLayout
                    android:id="@+id/layout_class_traveller_tab"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/cabin_class"
                            android:textSize="12sp"
                            android:textColor="@color/darker_gray"
                            android:fontFamily="@font/roboto_regular"/>
                        <TextView
                            android:id="@+id/tv_flight_class_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Economy"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:fontFamily="@font/roboto_regular"
                            android:layout_marginTop="5dp"/>
                    </LinearLayout>
                    <LinearLayout

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/travellers"
                            android:textSize="12sp"
                            android:textColor="@color/darker_gray"
                            android:fontFamily="@font/roboto_regular"/>
                        <TextView
                            android:id="@+id/tv_flight_traveller"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1 Adult"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:fontFamily="@font/roboto_regular"
                            android:layout_marginTop="5dp"/>
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider"
                    android:layout_marginTop="10dp"></View>
            </LinearLayout>
                <CheckBox
                    android:id="@+id/checkbox_flight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/checkbox_flight"
                    android:textSize="12sp"
                    android:textColor="@color/bue_A800"
                    android:buttonTint="@color/bue_A800"
                    android:layout_marginTop="5dp"
                    android:visibility="gone"/>

                <Button
                    android:id="@+id/search_flight_btn"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/amount"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/blue_green_round_btn"
                    android:padding="10dp"
                    android:text="@string/search_flight"
                    android:textColor="#fff"
                    android:textSize="15sp"
                    android:fontFamily="@font/roboto_bold"/>
            </LinearLayout>
        </ScrollView>


</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/relative_flight"
    tools:context=".activity.booking.FlightsActivity">
    <RelativeLayout
    android:id="@+id/headerbar"
    android:layout_width="match_parent"
    android:layout_height="?actionBarSize"
    android:background="@color/blue_theme"
    android:paddingBottom="5dp">

    <Button
        android:id="@+id/recharge_back_btn"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/ic_arrow_back_white_24dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="5dp"
        android:gravity="center"
        android:text="Flights"
        android:fontFamily="@font/roboto_bold"
        android:textColor="#fff"
        android:textSize="18sp" />
</RelativeLayout>



        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:layout_below="@id/headerbar"
            android:background="@color/white">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/edittext_rounded">
                    <TextView
                        android:id="@+id/tv_oneway"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ONEWAY"
                        android:gravity="center"
                        android:textColor="@color/darker_gray"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="14sp"
                        android:padding="8dp"/>

                    <TextView
                        android:id="@+id/tv_twoway"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="TWOWAY"
                        android:gravity="center"
                        android:textColor="@color/darker_gray"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="14sp"
                        android:padding="8dp"/>
                </LinearLayout>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:background="@drawable/edittext_rounded"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginRight="10dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="From"
                            android:textSize="18sp"
                            android:textColor="@color/bue_A800"
                            android:fontFamily="@font/roboto_regular"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="where"
                            android:textSize="14sp"
                            android:textColor="@color/bue_A800"
                            android:fontFamily="@font/roboto_regular"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:background="@drawable/edittext_rounded"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="To"
                            android:textSize="18sp"
                            android:textColor="@color/bue_A800"
                            android:fontFamily="@font/roboto_regular"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="where"
                            android:textSize="14sp"
                            android:textColor="@color/bue_A800"
                            android:fontFamily="@font/roboto_regular"/>

                    </LinearLayout>

                </LinearLayout>
                    <LinearLayout
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/circle"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/image_one_way"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_one_way"
                            android:padding="11dp"
                            android:visibility="gone"
                            />
                        <ImageView
                            android:id="@+id/image_two_way"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_two_way"
                            android:padding="11dp"/>

                    </LinearLayout>
                </FrameLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp">
                    <LinearLayout
                        android:id="@+id/li_departure_tab"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:layout_marginRight="10dp">

                        <TextView
                            android:id="@+id/tv_departure_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/departure_date"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/roboto_regular"
                           ></TextView>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/divider"
                            android:layout_marginTop="10dp"></View>
                    </LinearLayout>
                    <LinearLayout
                    android:id="@+id/li_return_tab"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                        android:padding="10dp"
                        android:layout_marginLeft="10dp">

                    <TextView
                        android:id="@+id/tv_return_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/return_date"
                        android:textSize="14sp"
                        android:textColor="@color/darker_gray"
                        android:fontFamily="@font/roboto_regular"
                      ></TextView>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/divider"
                        android:layout_marginTop="10dp"></View>
                </LinearLayout>
                </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_marginTop="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/class_"
                            android:textSize="12sp"
                            android:textColor="@color/darker_gray"
                            android:fontFamily="@font/roboto_regular"/>
                        <TextView
                            android:id="@+id/tv_flight_class_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Economy"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:fontFamily="@font/roboto_regular"
                            android:layout_marginTop="5dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/layout_class_traveller_tab"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/travellers"
                            android:textSize="12sp"
                            android:textColor="@color/darker_gray"
                            android:fontFamily="@font/roboto_regular"/>
                        <TextView
                            android:id="@+id/tv_flight_traveller"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1 Adult"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:fontFamily="@font/roboto_regular"
                            android:layout_marginTop="5dp"/>
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider"
                    android:layout_marginTop="10dp"></View>
            </LinearLayout>
                <CheckBox
                    android:id="@+id/checkbox_flight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/checkbox_flight"
                    android:textSize="12sp"
                    android:textColor="@color/bue_A800"
                    android:buttonTint="@color/bue_A800"
                    android:layout_marginTop="5dp"/>

                <Button
                    android:id="@+id/search_flight_btn"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/amount"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/rounded_buttons"
                    android:padding="10dp"
                    android:text="@string/search_flight"
                    android:textColor="#fff"
                    android:textSize="15sp"
                    android:fontFamily="@font/roboto_regular"/>
            </LinearLayout>
        </ScrollView>


</RelativeLayout>
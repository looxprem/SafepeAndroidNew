<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white">

    <ImageView
        android:id="@+id/passcode_logo"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:adjustViewBounds="true"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center"
        android:src="@drawable/logo"
        android:scaleType="fitXY"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="#f4f5ff">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_below="@+id/imgIco"
                    android:layout_marginTop="0dp"
                    android:text="Welcome"
                    android:gravity="center"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="@color/red_theme"
                    android:textSize="22sp" />
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="10dp"
                    android:visibility="gone"
                    android:src="@drawable/ic_face"/>
            </LinearLayout>

            <TextView
                android:id="@+id/txvEnter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgIco"
                android:layout_marginTop="0dp"
                android:text="cc"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgIco"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:text="Forgot Passcode?"
                android:textColor="@color/red"
                android:textSize="14sp"
                android:visibility="gone" />

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                app:cardCornerRadius="8dp"
                android:elevation="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="@color/white">

                    <EditText
                        android:id="@+id/edtxPassCode"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="left|center"
                        android:background="@null"
                        android:clickable="false"
                        android:enabled="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:gravity="center"
                        android:hint="****"
                        android:inputType="numberPassword"
                        android:letterSpacing="0.8"
                        android:paddingRight="32dp"
                        android:textColor="@color/black"
                        android:textSize="25sp"
                        android:layout_weight="1"
                        android:layout_marginTop="2dp"/>

                    <ImageView
                        android:id="@+id/visible"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="right"
                        android:adjustViewBounds="true"
                        android:contentDescription="INVISIBLE"
                        android:padding="8dp"
                        android:src="@drawable/hide_new"
                        android:background="@color/red_theme"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/forgot_passcode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgIco"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_gravity="left"
                android:text="Forgot Passcode?"
                android:textColor="@color/grey_700"
                android:fontFamily="@font/roboto_bold"
                android:textSize="14sp"
                android:gravity="right"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/one"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:gravity="center"
                        android:text="1"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="#0A333A"
                        android:textSize="30dp" />

                    <TextView
                        android:id="@+id/two"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:fontFamily="@font/roboto_regular"
                        android:gravity="center"
                        android:text="2"
                        android:textColor="#0A333A"
                        android:textSize="30dp" />

                    <TextView
                        android:id="@+id/three"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:fontFamily="@font/roboto_regular"
                        android:gravity="center"
                        android:text="3"
                        android:textColor="#0A333A"
                        android:textSize="30dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/four"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:fontFamily="@font/roboto_regular"
                        android:gravity="center"
                        android:text="4"
                        android:textColor="#0A333A"
                        android:textSize="30dp" />

                    <TextView
                        android:id="@+id/five"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:fontFamily="@font/roboto_regular"
                        android:gravity="center"
                        android:text="5"
                        android:textColor="#0A333A"
                        android:textSize="30dp" />

                    <TextView
                        android:id="@+id/six"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:fontFamily="@font/roboto_regular"
                        android:gravity="center"
                        android:text="6"
                        android:textColor="#0A333A"
                        android:textSize="30dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/seven"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:fontFamily="@font/roboto_regular"
                        android:gravity="center"
                        android:text="7"
                        android:textColor="#0A333A"
                        android:textSize="30dp" />

                    <TextView
                        android:id="@+id/eight"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:fontFamily="@font/roboto_regular"
                        android:gravity="center"
                        android:text="8"
                        android:textColor="#0A333A"
                        android:textSize="30dp" />

                    <TextView
                        android:id="@+id/nine"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:fontFamily="@font/roboto_regular"
                        android:gravity="center"
                        android:text="9"
                        android:textColor="#0A333A"
                        android:textSize="30dp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/delete"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:gravity="center"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:src="@drawable/delete"
                        android:text="1"
                        android:textColor="#0A333A"
                        android:textSize="30dp"
                        android:tint="#0A333A" />

                    <TextView
                        android:id="@+id/zero"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="#0A333A"
                        android:textSize="30dp"
                        android:fontFamily="@font/roboto_regular"/>

                    <ImageView
                        android:id="@+id/done"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:gravity="center"
                        android:paddingLeft="15dp"
                        android:paddingTop="15dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="15dp"
                        android:src="@drawable/done_icon"
                        android:text="1"
                        android:textColor="#0A333A"
                        android:textSize="30dp"
                        android:tint="#0A333A" />


                </LinearLayout>
            </LinearLayout>



        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:id="@+id/securebtn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:background="#f4f5ff">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:src="@drawable/norton" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:contentDescription="Verified By Visa"
            android:src="@drawable/verified_by_visa" />



        <ImageView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:contentDescription="MasterCard Secure"
            android:src="@drawable/master_card_securecode" />


    </LinearLayout>


    </LinearLayout>

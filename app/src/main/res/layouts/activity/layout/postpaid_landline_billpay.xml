<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f5ff"
    android:orientation="vertical"
    android:id="@+id/postpaidBillLayout">

    <RelativeLayout
        android:id="@+id/l1_send"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/red_theme"
        android:paddingBottom="5dp">

        <Button
            android:id="@+id/postpaid_back_btn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ic_next_new" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:text="Pay Bill"
            android:fontFamily="@font/roboto_bold"
            android:textColor="#fff"
            android:textSize="18sp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_below="@id/l1_send"
        android:layout_height="match_parent"
        tools:context="com.xwallet.wallet.Fragments.PostpaidRechrge">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView

                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_below="@+id/operator"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="50dp"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:text="Enter Mobile"
                android:textColor="#373836"
                android:textSize="12sp"
                android:fontFamily="@font/roboto_regular"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/white_button_grayborder"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="4dp"
            android:gravity="start|center"
            android:layout_marginRight="20dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/ic_mobile_new" />
            <EditText
                android:id="@+id/mobilePostpaid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView2"
                android:layout_gravity="center"
                android:inputType="number"
                android:hint="Mobile"
                android:maxLength="11"
                android:nextFocusForward="@+id/amount"
                android:padding="10dp"
                android:textColor="#373836"
                android:textSize="15sp"
                android:background="@null"
                android:fontFamily="@font/roboto_regular"/>
        </LinearLayout>



            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView6"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:text="Select Operator"
                android:textColor="#373836"
                android:textSize="12sp"
                android:fontFamily="@font/roboto_regular"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/white_button_grayborder"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="4dp"
                android:gravity="start|center"
                android:layout_marginRight="20dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                <LinearLayout
                    android:id="@+id/layout_select_mobile_operator"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="18dp"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/ic_list_new" />
                    <TextView
                        android:id="@+id/tv_select_mobile_operator"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Select Operator"
                        android:padding="10dp"
                        android:textColor="#373836"
                        android:textSize="15sp"
                        android:fontFamily="@font/roboto_regular"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"/>
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:padding="10dp"
                        android:src="@drawable/ic_down_security"
                        android:layout_marginRight="10dp"/>
                </LinearLayout>

                <Spinner
                    android:id="@+id/operatorPostpaid"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/textView5"
                    android:layout_marginLeft="5dp"
                    android:backgroundTint="@color/red_theme"
                    android:nextFocusForward="@+id/username"
                    android:visibility="gone"/>
                </FrameLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mobile"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:text="Enter Amount"
                android:textColor="#373836"
                android:textSize="15dp"
                android:visibility="gone"/>

            <EditText
                android:id="@+id/amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/white_button_grayborder"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:hint="Amount"
                android:nextFocusForward="@+id/btn"
                android:padding="10dp"
                android:textColor="#373836"
                android:textSize="15dp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/textView22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mobile"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:text="Bill Amount"
                android:textColor="#373836"
                android:textSize="12sp"
                android:fontFamily="@font/roboto_regular" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/white_button_grayborder"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="4dp"
            android:gravity="start|center"
            android:layout_marginRight="20dp">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/ic_new_rupee" />
            <EditText
                android:id="@+id/amountPostpaid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView"
                android:layout_gravity="center"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:nextFocusForward="@+id/btn"
                android:padding="10dp"
                android:hint="Enter Amount"
                android:textColor="#373836"
                android:textSize="15sp"
                android:background="@null"
                android:fontFamily="@font/roboto_regular" />
        </LinearLayout>

            <TextView
                android:layout_weight="1"
                android:id="@+id/calculatedamount_bill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text=" "
                android:textSize="14sp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/yellow_theme"
                android:paddingLeft="0dp"
                android:visibility="gone"
                />
            <androidx.cardview.widget.CardView
                android:id="@+id/card_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="5dp"
                android:visibility="gone">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/white">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Recharge Amount"
                            android:textSize="13sp"
                            android:textColor="@color/black"
                            android:padding="10dp"
                            android:fontFamily="@font/roboto_bold"
                            android:layout_weight="1"/>
                        <TextView
                            android:id="@+id/tv_rechargeamount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10"
                            android:textSize="13sp"
                            android:textColor="@color/black"
                            android:padding="10dp"
                            android:fontFamily="@font/roboto_regular"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Wallet Cashback"
                            android:textSize="13sp"
                            android:textColor="@color/black"
                            android:padding="10dp"
                            android:fontFamily="@font/roboto_bold"
                            android:layout_weight="1"/>
                        <TextView
                            android:id="@+id/tv_walletcashback"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10"
                            android:textSize="13sp"
                            android:textColor="@color/black"
                            android:padding="10dp"
                            android:fontFamily="@font/roboto_regular"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height=".5dp"
                        android:background="@color/divider"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total Amount"
                            android:textSize="13sp"
                            android:textColor="@color/black"
                            android:padding="10dp"
                            android:fontFamily="@font/roboto_bold"
                            android:layout_weight="1"/>
                        <TextView
                            android:id="@+id/tv_total_amountpay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10"
                            android:textSize="13sp"
                            android:textColor="@color/black"
                            android:padding="10dp"
                            android:fontFamily="@font/roboto_regular"/>
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/serviceChargeLayout_postpaid"
                android:visibility="gone">

                <include layout="@layout/service_charge_layout" />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:gravity="start|center"
                android:background="@color/white"
                >
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_bookmark"
                    android:padding="10dp"
                    android:layout_marginLeft="5dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="@string/landline_payment_time"
                    android:fontFamily="@font/roboto_regular"
                    android:textSize="12sp"
                    android:layout_marginRight="5dp"/>
            </LinearLayout>
            <Button
                android:id="@+id/Paybtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/amount"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/blue_green_round_btn"
                android:padding="10dp"
                android:text="Pay Bill"
                android:textColor="#fff"
                android:textSize="15sp"
                android:fontFamily="@font/roboto_regular" />
            <Button
                android:id="@+id/btnCheckBill"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/amount"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/blue_green_round_btn"
                android:padding="10dp"
                android:text="Check Bill"
                android:textColor="#fff"
                android:visibility="gone"
                android:textSize="15sp"
                android:fontFamily="@font/roboto_regular" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.bus.CancellationPolicyFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="5dp"
        android:text="Cancellation Policy"
        android:fontFamily="@font/roboto_bold"
        android:textColor="@color/bue_A800"
        android:textSize="18sp"
        android:layout_marginTop="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Time of Cancellation"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_regular" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Refund\nPercentage"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_regular"
            android:layout_weight="1"
            android:gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Refund\nAmount"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_regular"
            android:layout_weight="1"
            android:gravity="right|center"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/cancelPolicy100"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Canceled within 12 hours from the journey departure time "
            android:textSize="12sp"
            android:textColor="@color/grey_700"
            android:fontFamily="@font/roboto_bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0%"
            android:textSize="12sp"
            android:textColor="@color/grey_700"
            android:fontFamily="@font/roboto_bold"
            android:layout_weight="1"
            android:gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â‚¹ 0"
            android:textSize="12sp"
            android:textColor="@color/grey_700"
            android:fontFamily="@font/roboto_bold"
            android:layout_weight="1"
            android:gravity="right|center"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/cancelPolicy50"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Canceled before 12 hours from the journey departure time  "
            android:textSize="12sp"
            android:textColor="@color/grey_700"
            android:fontFamily="@font/roboto_bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50%"
            android:textSize="12sp"
            android:textColor="@color/grey_700"
            android:fontFamily="@font/roboto_bold"
            android:layout_weight="1"
            android:gravity="center"/>
        <TextView
            android:id="@+id/cancelPolicyAmount50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="12sp"
            android:textColor="@color/grey_700"
            android:fontFamily="@font/roboto_bold"
            android:layout_weight="1"
            android:gravity="right|center"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/cancel_policy1"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:fontFamily="@font/roboto_regular"
        android:layout_marginTop="10dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/cancel_policy2"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:fontFamily="@font/roboto_regular"
        android:layout_marginTop="10dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/cancel_policy3"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:fontFamily="@font/roboto_regular"
        android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cancel_policy4"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_regular"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cancel_policy5"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_regular"
            android:layout_marginTop="10dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/proceedBtncancelPolicy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/blue_green_round_btn"
        android:padding="10dp"
        android:text="Proceed"
        android:textColor="#fff"
        android:textSize="15sp"
        android:fontFamily="@font/roboto_bold"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"/>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/productQuantityDialog"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/grey_600"
            android:fontFamily="@font/roboto_medium"
            android:layout_marginLeft="5dp"
            android:text="Product - "/>
        <TextView
            android:id="@+id/productName_productQuantityDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_medium"
            android:layout_marginLeft="15dp"
            android:text="cup"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/grey_600"
            android:fontFamily="@font/roboto_medium"
            android:layout_marginLeft="5dp"
            android:text="Quantity -"/>

        <TextView
            android:id="@+id/productQuantity_productQuantityDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/textcolor"
            android:fontFamily="@font/roboto_medium"
            android:layout_marginLeft="15dp"
            android:text="10" />
    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/qqty_productQuantityDialog"
        android:inputType="number"
        android:maxLength="3"
        android:singleLine="true"
        android:imeOptions="actionDone"
        android:hint="Please Enter Number Of Quanity To Return"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:layout_marginTop="8dp"
        android:padding="5dp"
        android:background="@drawable/white_round_border"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <Button
            android:id="@+id/cancelBtn_productQuantityDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_regular"
            android:textSize="14sp"
            android:gravity="center"
            android:padding="10dp"
            android:layout_weight="1"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/ProdceedBtn_productQuantityDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prodceed"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_regular"
            android:textSize="14sp"
            android:gravity="center"
            android:padding="10dp"
            android:layout_weight="1"
            android:textAllCaps="false"/>
    </LinearLayout>

</LinearLayout>
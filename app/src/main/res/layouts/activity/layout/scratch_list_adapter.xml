<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:elevation="5dp"
            app:cardCornerRadius="5dp"
            android:padding="5dp"
            android:id="@+id/simple_scratchListAdapter">

            <LinearLayout
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:background="@color/white">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_gift"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Reward Coin Won"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/black" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:textSize="17sp"
                    android:gravity="center"
                    android:fontFamily="@font/roboto_bolditalic"
                    android:textColor="@color/yellow_theme"
                    android:layout_margin="5dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="01 Nov 2019"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:fontFamily="@font/roboto_bolditalic"
                    android:textColor="@color/grey_600"
                    android:layout_margin="5dp"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:elevation="5dp"
            app:cardCornerRadius="5dp"
            android:padding="5dp"
            android:layout_centerInParent="true"
            android:id="@+id/scratch_scratchListAdapter">

            <ImageView
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:src="@drawable/scratch_card" />
        </androidx.cardview.widget.CardView>

<!--        <com.anupkumarpanwar.scratchview.ScratchView-->

<!--            app:overlay_height="200dp"-->
<!--            app:overlay_width="200dp"-->
<!--            app:overlay_image="@drawable/scratch_card"-->
<!--            android:visibility="gone"/>-->

    </RelativeLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_flight_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IndiGo 6E - 399"
            android:textColor="@color/black"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:textSize="15sp"
            android:fontFamily="@font/roboto_regular"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:background="@color/divider"
            android:layout_marginLeft="5dp"/>
        <TextView
            android:id="@+id/tv_operatingAirlineCode_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/blue_grey_500"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:textSize="13sp"
            android:fontFamily="@font/roboto_regular"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp">
        <ImageView
            android:id="@+id/image_flight_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="5dp"
            android:src="@drawable/ic_airplane"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_weight=".5">
            <TextView
                android:id="@+id/tv_departure_flight_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15:40"
                android:textSize="15sp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/bue_A800" />

            <TextView
                android:id="@+id/tv_departure_flight_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:text="DEL"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="12sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight=".5"
            android:gravity="center"
            android:layout_marginRight="40dp">

            <TextView
                android:id="@+id/tv_take_flight_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:text="2h 40m"
                android:textColor="@color/bue_A800"
                android:textSize="10sp" />

            <FrameLayout
                android:layout_width="50dp"
                android:layout_height="wrap_content">
                <View
                    android:id="@+id/non_stop"
                    android:layout_width="50dp"
                    android:layout_height="1dp"
                    android:background="@color/divider"
                    android:layout_marginTop="5dp"
                    android:visibility="gone" />
                <FrameLayout
                    android:id="@+id/frame_one_stop"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:visibility="gone">

                    <ImageView
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:src="@drawable/dot"
                            android:layout_gravity="center" />
                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:background="@color/divider"
                        android:layout_gravity="center"/>
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/frame_two_stop"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_marginTop="5dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:src="@drawable/dot"
                            android:layout_gravity="start"
                            android:layout_weight="1" />
                        <ImageView
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:src="@drawable/dot"
                            android:layout_gravity="start"
                            android:layout_weight="1" />
                    </LinearLayout>

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:background="@color/divider"

                        android:layout_gravity="center"/>
                </FrameLayout>

            </FrameLayout>

            <TextView
                android:id="@+id/tv_flight_num_stops"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" "
                android:textSize="10sp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight=".5">
            <TextView
                android:id="@+id/tv_arrival_flight_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18:20"
                android:textSize="15sp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/bue_A800" />
            <TextView
                android:id="@+id/tv_arrival_flight_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GOI"
                android:textSize="12sp"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto_regular"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_fight_rupee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="7,618"
            android:textSize="18sp"
            android:gravity="right"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/black" />


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height=".5dp"
        android:background="@color/divider"
        android:layout_marginTop="10dp"/>

</LinearLayout>

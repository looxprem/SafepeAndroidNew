<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f5ff"
    android:id="@+id/shopDetailFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:src="@drawable/ecomm_bg_home"
                    android:scaleType="fitXY"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ecommerce_round_bg_white"
                    android:orientation="horizontal"
                    android:gravity="start|center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="50dp"
                    android:layout_gravity="center">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_search"
                        android:padding="10dp"
                        android:layout_marginLeft="5dp"/>

                    <EditText
                        android:id="@+id/tv_search_ecomm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Search for any product or venue"
                        android:textSize="14sp"
                        android:textColor="#87898c"
                        android:background="@null"
                        android:inputType="text"
                        android:singleLine="true"
                        android:fontFamily="@font/roboto_regular"
                        android:layout_weight="1"/>
                    <LinearLayout
                        android:id="@+id/li_done"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/blue_green_round_btn">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_e_commdone"
                            android:padding="10dp" />
                    </LinearLayout>
                </LinearLayout>



            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="left">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ecomm_bg_home"/>
                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/online_new"
                            android:layout_gravity="bottom|right"/>

                    </FrameLayout>

                    <TextView
                        android:id="@+id/shopName_shopDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="LILLY WHITES"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:layout_gravity="center"
                        android:fontFamily="@font/roboto_bold"
                        android:layout_marginLeft="10dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/shopAddress_shopDetail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Oaklands Road, Wolverhampton WV3 0DS, England, UK"
                            android:textSize="15sp"
                            android:textColor="@color/grey_800"
                            android:fontFamily="@font/roboto_regular"
                            android:layout_marginTop="5dp"
                            android:gravity="left"
                            android:layout_marginRight="50dp"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="-10dp"
                            android:layout_marginLeft="-60dp"
                            android:gravity="center">

                            <RatingBar
                                android:id="@+id/ratingBar_shopDetail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:numStars="5"
                                android:stepSize="0.5"
                                android:rating="2.5"
                                android:scaleX="0.5"
                                android:scaleY="0.5"
                                android:theme="@style/RatingBar"
                                android:isIndicator="true"
                                android:visibility="visible"/>

                            <TextView
                                android:id="@+id/shopRatingText_shopDetail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="18 Rating"
                                android:textSize="15sp"
                                android:textColor="@color/grey_800"
                                android:fontFamily="@font/roboto_regular"
                                android:gravity="left"
                                android:layout_marginLeft="-50dp"/>
                        </LinearLayout>
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/shopLocation_shopDetail"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/map_icon1"
                        android:scaleType="fitXY"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/openingHours_shopDetail"
                    android:gravity="left">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/clock_new"
                        android:layout_marginTop="2dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/roboto_regular"
                        android:text="Opening hours :"
                        android:textColor="@color/red_theme"
                        android:textSize="15sp"
                        android:layout_marginLeft="10dp"/>

                    <TextView
                        android:id="@+id/timeHours_shopDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/roboto_regular"
                        android:text="9:30 AM"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:layout_marginLeft="10dp"/>

                    <ImageView
                        android:id="@+id/downArrowHours_shopDetail"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/down_arrow_new"
                        android:scaleType="fitXY"
                        android:layout_marginLeft="10dp"/>

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycleHours_shopDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:padding="5dp"
                    android:background="@drawable/white_round_border"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Products"
                    android:textSize="18sp"
                    android:textColor="@color/red_theme"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_marginTop="20dp"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycleProducts_shopDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    android:layout_marginTop="5dp"/>

            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>
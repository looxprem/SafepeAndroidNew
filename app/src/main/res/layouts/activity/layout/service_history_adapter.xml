<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="1dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <LinearLayout
                    android:layout_height="60dp"
                    android:layout_width="60dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/ecommerce_round_bg_white"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/image_serviceAdapter"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="1dp"
                        android:scaleType="fitXY"
                        android:padding="12dp"
                        android:src="@drawable/wallet_nav_new" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="5dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/number_serviceAdapter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Description"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:fontFamily="@font/roboto_bold"
                            android:layout_weight="1"/>

                        <TextView
                            android:id="@+id/price_serviceAdapter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="65"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:fontFamily="@font/roboto_bold"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/operatorName_serviceAdapter"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Operation"
                        android:textSize="14sp"
                        android:textColor="@color/red_theme"
                        android:gravity="left"
                        android:fontFamily="@font/roboto_regular"
                        android:layout_marginTop="2dp"/>

                    <TextView
                        android:id="@+id/date_serviceAdapter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1 Day ago"
                        android:textSize="12sp"
                        android:textColor="@color/blue_grey_300"
                        android:fontFamily="@font/roboto_regular"
                        android:layout_marginTop="2dp"/>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/addUpdateAddressLayout"
    android:background="@color/white">


    <RelativeLayout
        android:id="@+id/headerbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/blue_theme"
        android:paddingBottom="5dp">

        <Button
            android:id="@+id/back_btn_address"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/ic_arrow_back_white_24dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:text="Address"
            android:fontFamily="@font/roboto_bold"
            android:textColor="#fff"
            android:textSize="18sp" />
    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/headerbar">




            <LinearLayout
                android:layout_below="@id/headerbar"
                android:layout_width="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="20dp"

                android:orientation="vertical"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/add_address"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/rounded_buttons"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:fontFamily="@font/roboto_regular"
                    android:textSize="15sp"
                    android:layout_marginBottom="20dp"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:text="Add new Address" />

                <Button
                    android:id="@+id/edit_address"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/rounded_buttons"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:fontFamily="@font/roboto_regular"
                    android:textSize="15sp"
                    android:layout_marginBottom="20dp"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:text="Update Address"
                    android:visibility="gone" />


                <CheckBox
                    android:id="@+id/current_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:buttonTint="@color/green_theme"
                    android:checked="false"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_marginBottom="10dp"
                    android:text="Use current location"
                    android:textColor="@color/green_theme"
                    android:textSize="15sp" />


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/update_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/edittext_rounded"
                        android:hint="Street 23, PS Colony"
                        android:padding="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="left"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="13sp" />

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="end"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:alpha="0.3"
                        android:src="@drawable/ic_placeholder" />


                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/update_city"
                        android:layout_width="match_parent"
                        android:padding="10dp"
                        android:background="@drawable/edittext_rounded"
                        android:hint="Knight Place"
                        android:layout_marginLeft="10dp"
                        android:textSize="13sp"
                        android:fontFamily="@font/roboto_regular"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"/>

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="end"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:alpha="0.3"
                        android:src="@drawable/ic_skyline" />


                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/update_state"
                        android:layout_width="match_parent"
                        android:padding="10dp"
                        android:background="@drawable/edittext_rounded"
                        android:layout_height="wrap_content"
                        android:hint="Kerela"
                        android:layout_marginLeft="10dp"
                        android:textSize="13sp"
                        android:fontFamily="@font/roboto_regular"
                        android:layout_marginBottom="10dp"/>

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="end"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:alpha="0.3"
                        android:src="@drawable/ic_home" />


                </FrameLayout>




                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/update_pin"
                        android:layout_width="match_parent"
                        android:padding="10dp"
                        android:background="@drawable/edittext_rounded"
                        android:layout_height="wrap_content"
                        android:hint="121320"
                        android:layout_marginLeft="10dp"
                        android:textSize="13sp"
                        android:fontFamily="@font/roboto_regular"
                        android:maxLength="6"
                        android:layout_marginBottom="6dp"/>

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="end"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:alpha="0.3"
                        android:src="@drawable/ic_pincode" />


                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/update_country"
                        android:layout_width="match_parent"
                        android:padding="10dp"
                        android:background="@drawable/edittext_rounded"
                        android:layout_height="wrap_content"
                        android:hint="India"
                        android:layout_marginLeft="10dp"
                        android:textSize="13sp"
                        android:fontFamily="@font/roboto_regular"
                        android:maxLength="6"
                        android:layout_marginBottom="20dp"/>

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="end"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:alpha="0.3"
                        android:src="@drawable/ic_flag" />


                </FrameLayout>

                <TextView
                    android:id="@+id/heading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="@color/bue_A800"
                    android:textSize="18sp"
                    android:layout_marginBottom="20dp"
                    android:text="Add your address" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blue"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="6dp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Flat/House location"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blue"
                    android:layout_marginBottom="6dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="City"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blue"
                    android:layout_marginBottom="6dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/roboto_regular"
                    android:textSize="13sp"
                    android:text="State" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blue"
                    android:layout_marginBottom="6dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Pincode"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blue"
                    android:layout_marginBottom="6dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Country"
                    android:textSize="13sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/divider" />


            </LinearLayout>


    </ScrollView>

    <ProgressBar
        android:id="@+id/reg_progres1"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:paddingBottom="20dp"
        android:progress="20"
        android:visibility="gone" />

</RelativeLayout>
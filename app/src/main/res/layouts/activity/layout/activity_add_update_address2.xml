<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/addUpdateAddressLayout"
    android:background="#f4f5ff">


    <RelativeLayout
        android:id="@+id/headerbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/red_theme"
        android:paddingBottom="5dp">

        <Button
            android:id="@+id/back_btn_address"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/ic_next_new"  />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:text="Add Your Address"
            android:fontFamily="@font/roboto_bold"
            android:textColor="#fff"
            android:textSize="18sp"  />
    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/headerbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/red_theme"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                app:cardCornerRadius="5dp"
                android:elevation="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="-30dp">
                <LinearLayout
                    android:id="@+id/main_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:padding="0dp"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="start|center"
                        android:padding="10dp">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_address_new"/>

                        <EditText
                            android:id="@+id/update_location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="Flat/House, Location"
                            android:padding="10dp"
                            android:gravity="start|center"
                            android:layout_gravity="center"
                            android:fontFamily="@font/roboto_medium"
                            android:textSize="14sp"
                            android:inputType="text"
                            android:singleLine="true"
                            android:imeOptions="actionNext"
                            android:background="@null"
                            android:textColor="@color/textcolor"
                            android:digits="0123456789 abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ ,"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height=".5dp"
                        android:background="@color/graynew"
                        android:layout_marginTop="0dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="start|center"
                        android:padding="10dp">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_skyline_new"/>
                        <EditText
                            android:id="@+id/update_city"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="City"
                            android:padding="10dp"
                            android:gravity="start|center"
                            android:layout_gravity="center"
                            android:fontFamily="@font/roboto_medium"
                            android:textSize="14sp"
                            android:inputType="text"
                            android:singleLine="true"
                            android:imeOptions="actionNext"
                            android:background="@null"
                            android:textColor="@color/textcolor"
                            android:digits="0123456789 abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ ,"/>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height=".5dp"
                        android:background="@color/graynew"
                        android:layout_marginTop="0dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="start|center"
                        android:padding="10dp">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_government_new"/>
                        <EditText
                            android:id="@+id/update_state"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="State"
                            android:padding="10dp"
                            android:gravity="start|center"
                            android:layout_gravity="center"
                            android:fontFamily="@font/roboto_medium"
                            android:textSize="14sp"
                            android:inputType="text"
                            android:singleLine="true"
                            android:imeOptions="actionNext"
                            android:background="@null"
                            android:textColor="@color/textcolor"
                            android:digits="0123456789 abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ ,"/>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height=".5dp"
                        android:background="@color/graynew"
                        android:layout_marginTop="0dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="start|center"
                        android:padding="10dp">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_location_pin_new"/>
                        <EditText
                            android:id="@+id/update_pin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="Pincode"
                            android:padding="10dp"
                            android:gravity="start|center"
                            android:layout_gravity="center"
                            android:fontFamily="@font/roboto_medium"
                            android:textSize="14sp"
                            android:background="@null"
                            android:maxLength="6"
                            android:inputType="number"
                            android:singleLine="true"
                            android:imeOptions="actionDone"
                            android:textColor="@color/textcolor"
                            android:digits="0123456789" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height=".5dp"
                        android:background="@color/graynew"
                        android:layout_marginTop="0dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="start|center"
                        android:padding="10dp">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_global_new"/>
                        <EditText
                            android:id="@+id/update_country"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="start|center"
                            android:layout_gravity="center"
                            android:fontFamily="@font/roboto_medium"
                            android:textSize="14sp"
                            android:background="@null"
                            android:inputType="number"
                            android:singleLine="true"
                            android:imeOptions="actionDone"
                            android:padding="10dp"
                            android:text="India"
                            android:textColor="@color/textcolor"
                            android:maxLength="6"
                            android:enabled="false"/></LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height=".5dp"
                    android:background="@color/graynew"
                    android:layout_marginTop="0dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>
            </androidx.cardview.widget.CardView>

            <CheckBox
                android:id="@+id/current_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:fontFamily="@font/roboto_regular"
                android:layout_marginLeft="10dp"
                android:textColor="@color/textcolor"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="20dp"
                android:text="Use current location"
                android:checked="false"
                android:buttonTint="@color/textcolor"/>

            <Button
                android:id="@+id/add_address"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/blue_green_round_btn"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:textSize="15sp"
                android:fontFamily="@font/roboto_bold"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="30dp"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:text="Add New Address"/>
            <Button
                android:id="@+id/edit_address"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/blue_green_round_btn"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:textSize="15sp"
                android:fontFamily="@font/roboto_bold"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="30dp"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:text="Update Address"
                android:visibility="gone"/>
        </LinearLayout>



    </ScrollView>

    <ProgressBar
        android:id="@+id/reg_progres1"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:paddingBottom="20dp"
        android:progress="20"
        android:visibility="gone" />

</RelativeLayout>
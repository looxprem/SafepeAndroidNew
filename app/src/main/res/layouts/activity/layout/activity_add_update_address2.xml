<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/addUpdateAddressLayout"
    android:background="@color/white">


    <RelativeLayout
        android:id="@+id/headerbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/colorPrimary"
        android:paddingBottom="5dp">

        <Button
            android:id="@+id/back_btn_address"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/ic_arrow_back_white_24dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:text="Address"
            android:textColor="#fff"
            android:textSize="20dp" />
    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/headerbar">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/headerbar"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            app:cardCornerRadius="4dp"
            android:elevation="1dp"
            >

            <LinearLayout
                android:layout_below="@id/headerbar"
                android:layout_width="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"

                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/heading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:textSize="16sp"
                    android:layout_marginBottom="20dp"
                    android:text="Add your address"/>



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blue"
                    android:layout_marginBottom="6dp"
                    android:text="Flat/House location"/>


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/update_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/edittext_rounded"
                        android:hint="Street 23, PS Colony"
                        android:padding="10dp"
                        android:layout_gravity="left"
                        android:textSize="13sp" />

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="end"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:alpha="0.3"
                        android:src="@drawable/home" />


                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blue"
                    android:layout_marginBottom="6dp"
                    android:text="City"/>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/update_city"
                        android:layout_width="match_parent"
                        android:padding="10dp"
                        android:background="@drawable/edittext_rounded"
                        android:hint="Knight Place"
                        android:textSize="13sp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"/>

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="end"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:alpha="0.3"
                        android:src="@drawable/home" />


                </FrameLayout>




                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blue"
                    android:layout_marginBottom="6dp"

                    android:text="State"/>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/update_state"
                        android:layout_width="match_parent"
                        android:padding="10dp"
                        android:background="@drawable/edittext_rounded"
                        android:layout_height="wrap_content"
                        android:hint="Kerela"
                        android:textSize="13sp"
                        android:layout_marginBottom="10dp"/>

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="end"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:alpha="0.3"
                        android:src="@drawable/home" />


                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blue"
                    android:layout_marginBottom="6dp"
                    android:text="Pincode"/>




                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/update_pin"
                        android:layout_width="match_parent"
                        android:padding="10dp"
                        android:background="@drawable/edittext_rounded"
                        android:layout_height="wrap_content"
                        android:hint="121320"
                        android:textSize="13sp"
                        android:maxLength="6"
                        android:layout_marginBottom="6dp"/>

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="end"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:alpha="0.3"
                        android:src="@drawable/home" />


                </FrameLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blue"
                    android:layout_marginBottom="6dp"
                    android:text="Country"/>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/update_country"
                        android:layout_width="match_parent"
                        android:padding="10dp"
                        android:background="@drawable/edittext_rounded"
                        android:layout_height="wrap_content"
                        android:hint="India"
                        android:textSize="13sp"
                        android:maxLength="6"
                        android:layout_marginBottom="20dp"/>

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="end"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:alpha="0.3"
                        android:src="@drawable/home" />


                </FrameLayout>


                <CheckBox
                    android:id="@+id/current_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:textColor="@color/blue"
                    android:layout_marginBottom="10dp"
                    android:text="Use current location"/>

                <Button
                    android:id="@+id/add_address"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/rounded_buttons"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:textSize="18sp"
                    android:layout_marginBottom="20dp"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:text="Add new Address"/>
                <Button
                    android:id="@+id/edit_address"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/rounded_buttons"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:textSize="18sp"
                    android:layout_marginBottom="20dp"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:text="Update Address"
                    android:visibility="gone"/>


            </LinearLayout>


        </androidx.cardview.widget.CardView>
    </ScrollView>

    <ProgressBar
        android:id="@+id/reg_progres1"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:paddingBottom="20dp"
        android:progress="20"
        android:visibility="gone" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f8f8"
    android:orientation="vertical"
    android:id="@+id/waterBillLayout">

    <RelativeLayout
        android:id="@+id/headerbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/red_theme"
        android:paddingBottom="5dp">

        <Button
            android:id="@+id/water_back_btn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ic_arrow_back_white_24dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:text="Payment For Water"
            android:fontFamily="@font/roboto_bold"
            android:textColor="#fff"
            android:textSize="18sp" />
    </RelativeLayout>

    <ScrollView
        android:layout_below="@id/headerbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.xwallet.wallet.Fragments.PostpaidRechrge">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="50dp"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:text="Select Operator"
                android:textColor="#373836"
                android:textSize="12sp"
                android:fontFamily="@font/roboto_regular"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="4dp"
                android:background="@drawable/white_button_grayborder">

                <Spinner
                    android:id="@+id/operatorWater"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/textView5"
                    android:nextFocusForward="@+id/textView" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="50dp"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:text="Customer Id "
                android:textColor="#373836"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/customeridWater"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView"
                android:layout_gravity="center"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="0dp"
                android:background="@drawable/white_button_grayborder"
                android:inputType="number"
                android:nextFocusForward="@+id/amount"
                android:padding="10dp"
                android:textColor="#373836"
                android:textSize="15dp" />



            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mobile"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="50dp"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:text="Amount"
                android:textColor="#373836"
                android:textSize="12sp" />
            <EditText
                android:id="@+id/amountWater"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="0dp"
                android:background="@drawable/white_button_grayborder"
                android:inputType="number"
                android:padding="10dp"
                android:textColor="#373836"

                android:textSize="15sp"
                android:fontFamily="@font/roboto_regular" />
            <TextView
                android:layout_weight="1"
                android:id="@+id/calculatedamount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:text=" "
                android:textSize="14sp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/yellow_theme"
                android:paddingLeft="0dp"
                />
            <androidx.cardview.widget.CardView
                android:id="@+id/card_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="5dp"
                android:visibility="gone">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/white">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Recharge Amount"
                            android:textSize="13sp"
                            android:textColor="@color/black"
                            android:padding="10dp"
                            android:fontFamily="@font/roboto_bold"
                            android:layout_weight="1"/>
                        <TextView
                            android:id="@+id/tv_rechargeamount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10"
                            android:textSize="13sp"
                            android:textColor="@color/black"
                            android:padding="10dp"
                            android:fontFamily="@font/roboto_regular"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Wallet Cashback"
                            android:textSize="13sp"
                            android:textColor="@color/black"
                            android:padding="10dp"
                            android:fontFamily="@font/roboto_bold"
                            android:layout_weight="1"/>
                        <TextView
                            android:id="@+id/tv_walletcashback"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10"
                            android:textSize="13sp"
                            android:textColor="@color/black"
                            android:padding="10dp"
                            android:fontFamily="@font/roboto_regular"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height=".5dp"
                        android:background="@color/divider"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total Amount"
                            android:textSize="13sp"
                            android:textColor="@color/black"
                            android:padding="10dp"
                            android:fontFamily="@font/roboto_bold"
                            android:layout_weight="1"/>
                        <TextView
                            android:id="@+id/tv_total_amountpay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10"
                            android:textSize="13sp"
                            android:textColor="@color/black"
                            android:padding="10dp"
                            android:fontFamily="@font/roboto_regular"/>
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:gravity="start|center"
                android:background="@color/white"
                >
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_bookmark"
                    android:padding="10dp"
                    android:layout_marginLeft="5dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="@string/dth_payment_time"
                    android:fontFamily="@font/roboto_regular"
                    android:textSize="12sp"
                    android:layout_marginRight="5dp"/>
            </LinearLayout>

            <Button
                android:id="@+id/waterPaybtn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/amount"
                android:layout_gravity="center"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="0dp"
                android:background="@drawable/rounded_buttons"
                android:padding="0dp"
                android:textAllCaps="false"
                android:text="Process Recharge"
                android:textColor="#fff"
                android:textSize="15sp"
                android:fontFamily="@font/roboto_regular" />


        </LinearLayout>
    </ScrollView>

</RelativeLayout>

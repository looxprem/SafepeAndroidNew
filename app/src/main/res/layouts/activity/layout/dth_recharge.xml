<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f8f8"
    android:id="@+id/dthRechargeLayout"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/headerbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/red_theme"
        android:paddingBottom="5dp">

        <Button
            android:id="@+id/dth_back_btn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ic_arrow_back_white_24dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:text="DTH Recharge"
            android:fontFamily="@font/roboto_bold"
            android:textColor="#fff"
            android:textSize="18sp"/>
    </RelativeLayout>

    <ScrollView
        android:layout_below="@id/headerbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/operator"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="50dp"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:text="Customer Id "
                android:textColor="#373836"
                android:textSize="12sp"
                android:fontFamily="@font/roboto_regular"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/white_button_grayborder"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="4dp"
                android:gravity="start|center"
                android:layout_marginRight="20dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/ic_user"/>

                <EditText
                    android:id="@+id/customerid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView2"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:hint="Cutomer ID"
                    android:inputType="number"
                    android:nextFocusForward="@+id/amount"
                    android:padding="10dp"
                    android:textColor="#373836"
                    android:fontFamily="@font/roboto_regular"
                    android:textSize="15sp" />

            </LinearLayout>


            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView6"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:text="Select Operator"
                android:textColor="#373836"
                android:textSize="12sp"
                android:fontFamily="@font/roboto_regular"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/white_button_grayborder"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="4dp"
                android:gravity="start|center"
                android:layout_marginRight="20dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                <LinearLayout
                    android:id="@+id/layout_select_mobile_operator"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/ic_tv"/>
                    <TextView
                        android:id="@+id/tv_select_mobile_operator"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Select Operator"
                        android:padding="10dp"
                        android:textColor="#373836"
                        android:textSize="15sp"
                        android:fontFamily="@font/roboto_regular"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"/>
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:padding="10dp"
                        android:src="@drawable/ic_down_security"
                        android:layout_marginRight="10dp"/>
                </LinearLayout>
                <Spinner
                    android:id="@+id/operator"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/textView5"
                    android:nextFocusForward="@+id/textView"
                    android:backgroundTint="@color/red_theme"
                    android:layout_marginLeft="5dp"
                    android:visibility="gone"
                 />
                </FrameLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mobile"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:text="Amount"
                android:textColor="#373836"
                android:textSize="12sp"
                android:fontFamily="@font/roboto_regular"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/white_button_grayborder"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="4dp"
            android:gravity="start|center"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="20dp">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/ic_rupee_indian" />
            <EditText
                android:id="@+id/amountid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:hint="Enter Amount"
                android:layout_gravity="center"
                android:background="@null"
                android:nextFocusForward="@+id/amount"
                android:padding="10dp"
                android:textColor="#373836"
                android:fontFamily="@font/roboto_regular"
                android:textSize="15sp"/>
        </LinearLayout>

            <TextView
                android:layout_weight="1"
                android:id="@+id/calculatedamount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text=" "
                android:textSize="14sp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/yellow_theme"
                android:paddingLeft="0dp"
                android:visibility="gone"
                />
            <androidx.cardview.widget.CardView
                android:id="@+id/card_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="5dp"
                android:visibility="gone">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/white">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Recharge Amount"
                            android:textSize="13sp"
                            android:textColor="@color/black"
                            android:padding="10dp"
                            android:fontFamily="@font/roboto_bold"
                            android:layout_weight="1"/>
                        <TextView
                            android:id="@+id/tv_rechargeamount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10"
                            android:textSize="13sp"
                            android:textColor="@color/black"
                            android:padding="10dp"
                            android:fontFamily="@font/roboto_regular"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Wallet Cashback"
                            android:textSize="13sp"
                            android:textColor="@color/black"
                            android:padding="10dp"
                            android:fontFamily="@font/roboto_bold"
                            android:layout_weight="1"/>
                        <TextView
                            android:id="@+id/tv_walletcashback"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10"
                            android:textSize="13sp"
                            android:textColor="@color/black"
                            android:padding="10dp"
                            android:fontFamily="@font/roboto_regular"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height=".5dp"
                        android:background="@color/divider"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total Amount"
                            android:textSize="13sp"
                            android:textColor="@color/black"
                            android:padding="10dp"
                            android:fontFamily="@font/roboto_bold"
                            android:layout_weight="1"/>
                        <TextView
                            android:id="@+id/tv_total_amountpay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10"
                            android:textSize="13sp"
                            android:textColor="@color/black"
                            android:padding="10dp"
                            android:fontFamily="@font/roboto_regular"/>
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/serviceChargeLayout_dth"
                android:visibility="gone">

                <include layout="@layout/service_charge_layout" />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:gravity="start|center"
                android:background="@color/white">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_bookmark"
                    android:padding="10dp"
                    android:layout_marginLeft="5dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="@string/dth_payment_time"
                    android:fontFamily="@font/roboto_regular"
                    android:textSize="12sp"
                    android:layout_marginRight="5dp"/>
            </LinearLayout>


            <Button
                android:id="@+id/dthPaybtn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/amount"
                android:layout_gravity="center"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/rounded_buttons"
                android:padding="10dp"
                android:text="Pay Now"
                android:textColor="#fff"
                android:textSize="15sp"
                android:fontFamily="@font/roboto_regular"/>


        </LinearLayout>


    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:visibility="gone"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/yellow_theme"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/red_theme"/>
    </LinearLayout>
</RelativeLayout>

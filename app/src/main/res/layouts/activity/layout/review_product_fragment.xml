<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/reviewLayout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:gravity="center">

            <RelativeLayout
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:gravity="center"
                android:background="@drawable/light_blue_bg">

                <ImageView
                    android:id="@+id/productImage_Review"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/ecomm_bg_home"
                    android:scaleType="fitXY"
                    android:padding="5dp"/>


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp">

                <TextView
                    android:id="@+id/productName_Review"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Women Gold Shoulder Bag"
                    android:textSize="15sp"
                    android:gravity="left"
                    android:textColor="@color/black"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_marginTop="10dp"/>

                <RatingBar
                    android:id="@+id/productRating_Review"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:stepSize="0.5"
                    android:rating="1.5"
                    android:scaleX="0.5"
                    android:scaleY="0.5"
                    android:theme="@style/RatingBar"
                    android:isIndicator="true"
                    android:visibility="visible"
                    android:layout_marginTop="-10dp"
                    android:layout_marginLeft="-60dp"/>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/grey_500"/>


        <EditText
            android:id="@+id/review_Review"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:hint="More detailed reviews get more visibility"
            android:layout_margin="15sp"
            android:textColor="@color/black"
            android:background="@drawable/white_button_grayborder"
            android:singleLine="false"
            android:gravity="top"
            android:padding="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_margin="10dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/camera_new"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/skipBtn_reviewProducts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SKIP &amp; FINISH"
            android:textSize="15sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:fontFamily="@font/roboto_bold"
            android:layout_marginLeft="10dp"
            android:background="@drawable/blue_border"
            android:layout_weight="1"
            android:padding="8dp"/>

        <TextView
            android:id="@+id/SubmitBtn_Review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:textSize="15sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:fontFamily="@font/roboto_bold"
            android:layout_marginLeft="10dp"
            android:background="@drawable/blue_border"
            android:layout_weight="1"
            android:padding="8dp"/>

    </LinearLayout>


</RelativeLayout>
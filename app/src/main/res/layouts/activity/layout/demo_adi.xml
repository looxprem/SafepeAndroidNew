<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/kycLayout"
    android:background="#f4f5ff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_height="100dp"
            android:layout_width="match_parent"
            android:background="#196cfe"
            android:orientation="vertical"
            android:paddingTop="8dp">

            <RelativeLayout
                android:id="@+id/headerbar"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:background="@color/red_theme"
                android:paddingBottom="5dp">

                <Button
                    android:id="@+id/recharge_back_btn"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/ic_next_new" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:text="Contact Us"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="#fff"
                    android:textSize="18sp" />
            </RelativeLayout>
        </LinearLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    app:cardCornerRadius="10dp"
                    android:elevation="5dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="0dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="SafePe India Pvt. Ltd."
                        android:gravity="center"
                        android:textIsSelectable="true"
                        android:textSize="18sp"
                        android:fontFamily="@font/roboto_bold"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/red_theme"
                        android:layout_margin="10dp"/>

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="In case of any inconvenience regarding the transaction of money OR further query then you can contact us:"
                        android:layout_gravity="center"
                        android:textSize="12sp"
                        android:fontFamily="@font/roboto_regular"
                        android:layout_marginTop="20dp"
                        android:textColor="@color/red_theme" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.7dp"
                        android:background="@color/grey_500"
                        android:layout_marginTop="10dp"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:gravity="start|center">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_whatsapp"
                            android:padding="10dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Whatsapp and Call"
                            android:textSize="14sp"
                            android:fontFamily="@font/roboto_bold"
                            android:textColor="@color/black"
                            android:textIsSelectable="true" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="right">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="@string/whatsappno"
                                android:textSize="16sp"
                                android:textColor="@color/grey_700"
                                android:layout_gravity="right"
                                android:textStyle="bold"
                                android:fontFamily="@font/roboto_bold"
                                android:textIsSelectable="true"
                                android:layout_marginRight="10dp"/>

                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.7dp"
                        android:background="@color/grey_500"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:gravity="start|center">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_customer_cre"
                            android:padding="10dp"/>
                        <TextView
                            android:id="@+id/tollfreeNoText"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="@string/toll_customer"
                            android:textSize="14sp"
                            android:fontFamily="@font/roboto_bold"
                            android:textColor="@color/black"
                            android:textIsSelectable="true" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="right">
                            <TextView
                                android:id="@+id/tollfreeNo"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text=""
                                android:textSize="16sp"
                                android:layout_gravity="right"
                                android:textStyle="bold"
                                android:fontFamily="@font/roboto_bold"
                                android:textColor="@color/grey_700"
                                android:textIsSelectable="true"
                                android:layout_marginRight="15dp"/>
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.7dp"
                        android:background="@color/grey_500"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:gravity="start|center">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_whatsapp"
                            android:padding="10dp"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Address:"
                                android:gravity="left"
                                android:textSize="14sp"
                                android:fontFamily="@font/roboto_bold"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:textColor="@color/black" />
                            <TextView

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="B-096,B Block, Sector 65, Noida, Delhi(NCR) Uttar Pradesh 201301"
                                android:textSize="14sp"
                                android:fontFamily="@font/roboto_regular"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:textColor="@color/black"
                                android:paddingRight="20dp"
                                android:paddingLeft="20dp"
                                android:layout_marginLeft="5dp"
                                android:gravity="right"/>
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.7dp"
                        android:background="@color/grey_500"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:gravity="start|center">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_whatsapp"
                            android:padding="10dp"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Email:"
                                android:gravity="left"
                                android:textSize="14sp"
                                android:fontFamily="@font/roboto_bold"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:textColor="@color/black" />
                            <TextView
                                android:id="@+id/sendmail"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="support@safepeindia.com"
                                android:textSize="14sp"
                                android:fontFamily="@font/roboto_regular"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:textColor="@color/black"
                                android:paddingRight="20dp"
                                android:paddingLeft="20dp"
                                android:layout_marginLeft="5dp"
                                android:gravity="right"/>
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.7dp"
                        android:background="@color/grey_500"/>

                    <TextView
                        android:id="@+id/visit_website"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Visit Our Website"
                        android:layout_gravity="center"
                        android:textSize="16sp"
                        android:fontFamily="@font/roboto_bold"
                        android:gravity="center"
                        android:padding="10dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/red_theme" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        app:cardCornerRadius="10dp"
                        android:elevation="5dp"
                        android:layout_marginTop="0dp"
                        android:layout_gravity="center">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_whatsapp"
                                android:padding="10dp"/>
                            <TextView
                                android:id="@+id/website"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="www.safepeindia.com"
                                android:textSize="16sp"
                                android:textColor="@color/black"
                                android:layout_gravity="center"
                                android:textStyle="bold"
                                android:padding="10dp"
                                android:fontFamily="@font/roboto_bold"
                                android:textIsSelectable="true"/>
                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="2019 Safepe India Pvt. Ltd.\nAll Rights Reserved "
                        android:layout_gravity="center"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:fontFamily="@font/roboto_regular"
                        android:layout_marginTop="20dp"/>

                </LinearLayout>

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    android:src="@drawable/logo"
                    android:layout_gravity="center"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:layout_margin="15dp"
                    android:visibility="gone">


                    <EditText
                        android:id="@+id/contactus_email"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="15dp"
                        android:padding="10dp"
                        android:textSize="15dp"
                        android:background="@drawable/login_input_bg"
                        android:hint="Email"
                        />
                    <EditText
                        android:id="@+id/contactus_subject"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:padding="10dp"
                        android:textSize="15dp"
                        android:background="@drawable/login_input_bg"
                        android:hint="Your Subject"
                        />
                    <EditText
                        android:id="@+id/contactus_message"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:padding="10dp"
                        android:inputType="textMultiLine"
                        android:textSize="15dp"
                        android:background="@drawable/login_input_bg"
                        android:hint="Message"
                        />
                    <Button
                        android:id="@+id/contactus_submit"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:text="Submit"
                        android:layout_gravity="center|right"
                        android:textColor="#fff"
                        android:background="@drawable/rounded_buttons"
                        />
                </LinearLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="+91 8860722217"
                        android:textSize="14dp"
                        android:textColor="#34ad38"
                        android:textIsSelectable="true"
                        android:background="@null"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/call_button_usa"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="-30dp"
                        android:text="+1 6808000842"
                        android:textSize="14dp"
                        android:textColor="#3454dc"
                        android:textIsSelectable="true"
                        android:paddingLeft="0dp"
                        android:background="@null"
                        android:textStyle="bold"
                        android:paddingRight="0dp"
                        android:layout_marginRight="0dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginBottom="0dp" />

                    <Button
                        android:id="@+id/call_button_india"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="-10dp"
                        android:layout_weight="1"
                        android:text="+91 8860722217"
                        android:textSize="14dp"
                        android:textColor="#34ad38"
                        android:textIsSelectable="true"
                        android:background="@null"
                        android:textStyle="bold"
                        android:layout_marginRight="0dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginBottom="0dp"
                        />
                </LinearLayout>

            </LinearLayout>


        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="10dp"
    android:background="@drawable/gray_round_bg">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
        android:id="@+id/cb_address_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_username_addddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="John Smith"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:fontFamily="@font/roboto_medium"
                android:layout_weight="1"
                android:layout_margin="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OFFICE"
                android:textColor="@color/textcolor"
                android:textSize="11sp"
                android:fontFamily="@font/roboto_medium"
                android:layout_margin="10dp"/></LinearLayout>
        <TextView
            android:id="@+id/tvAddress_addaddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Noida Secotr 65 B-96 Near Sectore 62 "
            android:textColor="@color/textcolor"
            android:textSize="13sp"
            android:fontFamily="@font/roboto_regular"
            android:layout_marginLeft="10dp"
            android:singleLine="true"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <TextView
                android:id="@+id/tvcity_addaddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Noida - "
                android:textColor="@color/textcolor"
                android:textSize="13sp"
                android:fontFamily="@font/roboto_regular"
                android:layout_marginLeft="10dp"
                android:singleLine="true"/>
            <TextView
                android:id="@+id/tvpincode_addaddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123456"
                android:textColor="@color/textcolor"
                android:textSize="13sp"
                android:fontFamily="@font/roboto_regular"
                android:layout_marginLeft="5dp"
                android:singleLine="true"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/liaddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
            android:id="@+id/tvstate_addaddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Uttar Pradesh"
            android:textColor="@color/textcolor"
            android:textSize="13sp"
            android:fontFamily="@font/roboto_regular"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:singleLine="true"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mobile:"
                android:textColor="@color/textcolor"
                android:textSize="13sp"
                android:fontFamily="@font/roboto_regular"
                android:layout_marginLeft="10dp"
                android:singleLine="true"/>
            <TextView
                android:id="@+id/tvmobile_addaddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9876543321"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:fontFamily="@font/roboto_medium"
                android:layout_marginLeft="5dp"
                android:singleLine="true"/>
        </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/litab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height=".5dp"
        android:layout_margin="10dp"
        android:background="@color/black"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="10dp">
        <TextView
            android:id="@+id/tvchange_remove"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Remove"
            android:textColor="@color/red_theme"
            android:textSize="13sp"
            android:fontFamily="@font/roboto_medium"
            android:layout_marginLeft="10dp"
            android:singleLine="true"
            android:padding="10dp"
            android:gravity="center"
            android:layout_weight="1"/>
        <View
            android:layout_width=".5dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@color/black"
            />
        <TextView
            android:id="@+id/tvedit_change"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Edit"
            android:textColor="@color/red_theme"
            android:textSize="14sp"
            android:fontFamily="@font/roboto_medium"
            android:layout_marginLeft="10dp"
            android:singleLine="true"
            android:padding="10dp"
            android:gravity="center"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>
</LinearLayout>
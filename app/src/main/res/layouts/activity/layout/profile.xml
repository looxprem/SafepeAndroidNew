                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#00FFFFFF"
                            android:hint="Pincode"
                            android:focusable="false"
                            android:fontFamily="@font/roboto_medium"
                            android:gravity="start|center"
                            android:textColor="@color/textcolor"
                            android:textSize="14sp"
                            android:padding="10dp"
                            />

                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height=".5dp"
                        android:background="@color/graynew"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="start|center"
                        android:padding="10dp">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_id_card_new"/>


                        <TextView
                            android:id="@+id/p_sponser_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#00FFFFFF"
                            android:hint="Sponsor ID"
                            android:focusable="false"
                            android:fontFamily="@font/roboto_medium"
                            android:gravity="start|center"
                            android:textColor="@color/textcolor"
                            android:textSize="14sp"
                            android:padding="10dp"
                            />

                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height=".5dp"
                        android:background="@color/graynew"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="start|center"
                        android:padding="10dp">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_user_new"/>


                        <TextView
                            android:id="@+id/p_sponser_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#00FFFFFF"
                            android:hint="Sponsor Name"
                            android:focusable="false"
                            android:fontFamily="@font/roboto_medium"
                            android:gravity="start|center"
                            android:textColor="@color/textcolor"
                            android:textSize="14sp"
                            android:padding="10dp"
                            />


                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height=".5dp"
                        android:background="@color/graynew"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="start|center"
                        android:padding="10dp">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_mobile_new"/>


                        <TextView
                            android:id="@+id/p_sponser_contact_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#00FFFFFF"
                            android:hint="Sponsor Contact Number"
                            android:focusable="false"
                            android:fontFamily="@font/roboto_medium"
                            android:gravity="start|center"
                            android:textColor="@color/textcolor"
                            android:textSize="14sp"
                            android:padding="10dp"
                            />

                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height=".5dp"
                        android:background="@color/graynew"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"/>




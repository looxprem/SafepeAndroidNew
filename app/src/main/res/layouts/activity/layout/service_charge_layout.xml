<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/serviceChargeLayout">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="5dp"
        android:visibility="visible">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recharge Amount"
                    android:textSize="13sp"
                    android:textColor="@color/black"
                    android:padding="10dp"
                    android:fontFamily="@font/roboto_bold"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/tv_rechargeAmount_serviceChargeLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10"
                    android:textSize="13sp"
                    android:textColor="@color/black"
                    android:padding="10dp"
                    android:fontFamily="@font/roboto_regular"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Service Charge"
                    android:textSize="13sp"
                    android:textColor="@color/black"
                    android:padding="10dp"
                    android:fontFamily="@font/roboto_bold"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/tv_serviceCharge_serviceChargeLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10"
                    android:textSize="13sp"
                    android:textColor="@color/black"
                    android:padding="10dp"
                    android:fontFamily="@font/roboto_regular"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height=".5dp"
                android:background="@color/divider"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Amount"
                    android:textSize="13sp"
                    android:textColor="@color/black"
                    android:padding="10dp"
                    android:fontFamily="@font/roboto_bold"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/tv_totalAmt_serviceChargeLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10"
                    android:textSize="13sp"
                    android:textColor="@color/black"
                    android:padding="10dp"
                    android:fontFamily="@font/roboto_regular"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f4f5ff">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="#f4f5ff">
            <LinearLayout
                android:id="@+id/li_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="15dp">

                <ImageView
                    android:id="@+id/im_unselect_orders"
                    android:layout_width="22dp"
                    android:layout_height="20dp"
                    android:src="@drawable/home_nav_new" />


                <TextView
                    android:id="@+id/tv_home"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Home"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/roboto_medium"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/li_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="15dp">

                <ImageView
                    android:id="@+id/im_unselect_menu"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/user_nav_new" />

                <TextView
                    android:id="@+id/tv_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Profile"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/roboto_medium"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/li_package_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="15dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/package_detail_nav_new"/>

                <TextView
                    android:id="@+id/tv_package_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Package Details"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/roboto_medium"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/li_buy_package"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="15dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_buypackge"/>

                <TextView
                    android:id="@+id/tv_buy_packge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Buy Package"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/roboto_medium"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/li_commission"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="15dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_wallet_business_new"/>

                <TextView
                    android:id="@+id/tv_commission"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Business Wallet"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/roboto_medium"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/li_my_wallet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="15dp"
                android:visibility="gone">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/shopping_cart_nav_new"/>

                <TextView
                    android:id="@+id/tv_my_wallet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="My Wallet"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/roboto_bold"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/li_shopping"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="15dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/shopping_cart_nav_new" />

                <TextView
                    android:id="@+id/tv_shopping"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="E-Commerce"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/roboto_medium"
                    android:layout_weight="1"/>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone">
                    <ImageView
                        android:id="@+id/image_down_arrow_shop"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_down_security"
                        android:padding="10dp"/>
                    <ImageView
                        android:id="@+id/image_up_arrow_shop"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_up_security"
                        android:padding="10dp"
                        android:visibility="gone"/>
                </FrameLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/li_fd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="15dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_fixed_new" />

                <TextView
                    android:id="@+id/tv_fixed_deposit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SafePe Investment"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/roboto_medium"
                    android:layout_weight="1"/>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone">
                    <ImageView
                        android:id="@+id/image_down_arrow_fd"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_down_security"
                        android:padding="10dp"/>
                    <ImageView
                        android:id="@+id/image_up_arrow_fd"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_up_security"
                        android:padding="10dp"
                        android:visibility="gone"/>
                </FrameLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/li_loan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="15dp"
                android:visibility="visible">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_fixeddeposit" />

                <TextView
                    android:id="@+id/tv_loan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fixed Deposit"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/roboto_medium"
                    android:layout_weight="1"/>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone">
                    <ImageView
                        android:id="@+id/image_down_arrow_loan"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_down_security"
                        android:padding="10dp"/>
                    <ImageView
                        android:id="@+id/image_up_arrow_loan"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_up_security"
                        android:padding="10dp"
                        android:visibility="gone"/>
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_shop_tab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="20dp"
                android:visibility="gone">
                <LinearLayout
                    android:id="@+id/li_Ecommerce"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="15dp">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/shopping_cart_nav_new"/>

                    <TextView
                        android:id="@+id/tv_Ecommerce"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Loox Mart"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/roboto_medium"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/li_wishList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="15dp">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_like_red"/>

                    <TextView
                        android:id="@+id/tv_wishList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Favorites"
                        android:textSize="13sp"
                        android:textColor="@color/black"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/roboto_medium"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/li_cartList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="15dp">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/shopping_cart_nav_new"/>

                    <TextView
                        android:id="@+id/tv_cartList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Cart"
                        android:textSize="13sp"
                        android:textColor="@color/black"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/roboto_medium"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/li_myorder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="15dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/myorders_nav_new"/>

                <TextView
                    android:id="@+id/tv_my_orders"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="My Orders"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/roboto_medium"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/li_history"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="15dp"
                android:visibility="gone">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_history"/>

                <TextView
                    android:id="@+id/tv_history"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Recharge History"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/roboto_bold"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/li_historyWallet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="15dp"
                android:visibility="gone">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_wallet"/>

                <TextView
                    android:id="@+id/tv_historyWallet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Wallet History"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/roboto_bold"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/li_genelogy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="15dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/genelogy_nav_new"/>

                <TextView
                    android:id="@+id/tv_genelogy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Genealogy"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/roboto_medium"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/li_refer_earn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="15dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/refer_nav_new"/>

                <TextView
                    android:id="@+id/tv_refer_earn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Refer &amp; Earn"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/roboto_medium"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/li_update_kyc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="15dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/kyc_nav_new" />

                <TextView
                    android:id="@+id/tv_update_kyc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Update KYC"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/roboto_medium"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/li_contact_us"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="15dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_mail_new"/>

                <TextView
                    android:id="@+id/tv_contact_us"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Contact Us"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/li_security"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="15dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_security_new" />

                <TextView
                    android:id="@+id/tv_security"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Security"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/roboto_medium"
                    android:layout_weight="1"/>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/image_down_arrow"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_down_security"
                        android:padding="10dp"/>
                    <ImageView
                        android:id="@+id/image_up_arrow"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_up_security"
                        android:padding="10dp"
                        android:visibility="gone"/>
                </FrameLayout>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/linear_security_tab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="20dp">
                <LinearLayout
                    android:id="@+id/li_change_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="15dp">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_changepassword"/>

                    <TextView
                        android:id="@+id/tv_change_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Change Passcode"
                        android:textSize="13sp"
                        android:textColor="@color/black"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/roboto_medium"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/li_change_passwordChild"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="15dp">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_changepassword"/>

                    <TextView
                        android:id="@+id/tv_change_passwordChild"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Change Password"
                        android:textSize="13sp"
                        android:textColor="@color/black"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/roboto_medium"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/li_LogoutParent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="15dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/logout_nav_new" />

                <TextView
                    android:id="@+id/tv_logoutText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Logout"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/roboto_medium"
                    android:layout_weight="1"/>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/image_down_arrowLogout"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_down_security"
                        android:padding="10dp"/>
                    <ImageView
                        android:id="@+id/image_up_arrowLogout"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_up_security"
                        android:padding="10dp"
                        android:visibility="gone"/>
                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_logout_tab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="20dp">
                <LinearLayout
                    android:id="@+id/li_logoutAlldevice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="15dp">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_logout_all" />

                    <TextView
                        android:id="@+id/tv_logoutAlldevice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Logout From All Devices"
                        android:textSize="13sp"
                        android:textColor="@color/black"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/roboto_medium"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/li_logout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="15dp"
                    android:focusableInTouchMode="true">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_logout"/>

                    <TextView
                        android:id="@+id/tv_logout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Logout"
                        android:textSize="13sp"
                        android:textColor="@color/black"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/roboto_medium"/>
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>


    </androidx.core.widget.NestedScrollView>
</LinearLayout>


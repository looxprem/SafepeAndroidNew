<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/paymentLayout">

    <RelativeLayout
        android:id="@+id/headerbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/red_theme"
        android:paddingBottom="5dp">

        <Button
            android:id="@+id/sendmoney_back_btn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ic_next_new" />

        <TextView
            android:id="@+id/tv_backPressed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:text="SafePe Wallet"
            android:fontFamily="@font/roboto_regular"
            android:textColor="#fff"
            android:textSize="18sp" />
    </RelativeLayout>
    <ScrollView
        android:layout_below="@id/headerbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f7f8f8">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/heading"
                    android:padding="0dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select Payment Option"
                    android:fontFamily="@font/roboto_bold"
                    android:layout_gravity="center"
                    android:textColor="@color/bue_A800"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="20dp"
                    android:textSize="22dp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/yellow"
                    android:layout_margin="10dp"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:visibility="gone">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@color/white"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Amount"
                                android:textSize="13sp"
                                android:textColor="@color/black"
                                android:padding="10dp"
                                android:fontFamily="@font/roboto_bold"
                                android:layout_weight="1"/>

                            <TextView
                                android:id="@+id/tv_payment_rechargeamount"
                                android:layout_width="wrap_content"
                                android:layout_height="47dp"
                                android:fontFamily="@font/roboto_regular"
                                android:padding="10dp"
                                android:text="0"
                                android:textColor="@color/black"
                                android:textSize="13sp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Wallet Cashback"
                                android:textSize="13sp"
                                android:textColor="@color/black"
                                android:padding="10dp"
                                android:fontFamily="@font/roboto_bold"
                                android:layout_weight="1"/>
                            <TextView
                                android:id="@+id/tv_payment_walletcashback"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="13sp"
                                android:textColor="@color/black"
                                android:padding="10dp"
                                android:fontFamily="@font/roboto_regular"/>
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height=".5dp"
                            android:background="@color/divider"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Total Amount"
                                android:textSize="13sp"
                                android:textColor="@color/black"
                                android:padding="10dp"
                                android:fontFamily="@font/roboto_bold"
                                android:layout_weight="1"/>
                            <TextView
                                android:id="@+id/tv_payment_total_amountpay"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="13sp"
                                android:textColor="@color/black"
                                android:padding="10dp"
                                android:fontFamily="@font/roboto_regular"/>
                        </LinearLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:background="@color/white">

                    <ImageView
                     android:id="@+id/image_service" android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="5dp"/>

                    <TextView
                        android:id="@+id/textmaoutotpay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="10dp"
                        android:paddingLeft="10dp"
                        android:layout_centerVertical="true"
                        android:textColor="@color/yellow_theme"
                        android:fontFamily="@font/roboto_bold"
                        android:text="Amount to be paid"
                        android:textSize="16sp"
                        android:layout_weight="1"
                        />

                    <TextView
                        android:id="@+id/tv_walletAddedAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="10dp"
                        android:text="0"
                        android:paddingRight="10dp"
                        android:textStyle="bold"
                        android:fontFamily="@font/roboto_bold"
                        android:textColor="@color/black"
                        android:textSize="23sp" />

                </LinearLayout>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/cashbackText"
                    android:visibility="gone">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/red"
                        android:lineSpacingExtra="10dp"
                        android:text="Amount is equal or less than 1000 get 3% cashback.\nIf Amount is greater than 1000 get 1% cashback"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="12sp"
                        android:padding="10dp"
                        android:layout_marginLeft="10dp"/>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:id="@+id/wallet_amt_pay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:visibility="gone"
                    android:textColor="@color/lightBlue"
                    android:textSize="18sp" />

                <LinearLayout
                    android:id="@+id/relativelayoutradio"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/radioLayout1"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:padding="5dp"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:background="@drawable/white_button_grayborder"
                        android:gravity="center">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="Debit/Credit Card/Upi/Net Banking"
                            android:layout_centerVertical="true"
                            android:textSize="18dp"
                            android:fontFamily="@font/roboto_regular"
                            android:layout_marginLeft="0dp"
                            android:textColor="@color/bue_A800" />
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/card_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:orientation="vertical"
                        android:padding="0dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:visibility="visible">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="0dp"
                            android:layout_marginRight="0dp"
                            android:padding="0dp"
                            android:visibility="gone"
                            android:id="@+id/card_fillLayout">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">


                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="6dp"
                                    android:layout_marginBottom="4dp"
                                    android:padding="0dp"
                                    android:text="Card Number" />

                                <EditText
                                    android:id="@+id/et_cardNumber"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="10dp"
                                    android:background="@drawable/white_button_grayborder"
                                    android:hint="4444999988887777"
                                    android:inputType="number"
                                    android:maxLength="16"
                                    android:padding="10dp"
                                    android:paddingLeft="10dp" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">


                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical"
                                        android:layout_marginRight="10dp">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginBottom="4dp"
                                            android:text="Expiry Date" />

                                        <EditText
                                            android:id="@+id/et_month"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginBottom="10dp"
                                            android:background="@drawable/white_button_grayborder"
                                            android:hint="MM"
                                            android:inputType="number"
                                            android:maxLength="2"
                                            android:padding="10dp" />

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="0dp"
                                            android:layout_marginBottom="4dp"
                                            android:textColor="@color/white"
                                            android:text="Expiry Year" />

                                        <EditText
                                            android:id="@+id/et_year"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="0dp"
                                            android:layout_marginBottom="10dp"
                                            android:background="@drawable/white_button_grayborder"
                                            android:hint="YYYY"
                                            android:inputType="number"
                                            android:maxLength="4"
                                            android:padding="10dp" />
                                    </LinearLayout>





                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical"
                                        android:layout_marginLeft="10dp"
                                        android:layout_weight="1">

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="0dp"
                                            android:layout_marginBottom="4dp"
                                            android:text="CVV" />

                                        <EditText
                                            android:id="@+id/et_cvv"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginBottom="10dp"
                                            android:background="@drawable/white_button_grayborder"
                                            android:hint="CVV"
                                            android:inputType="textPassword"
                                            android:maxLength="3"
                                            android:padding="10dp" />

                                    </LinearLayout>

                                </LinearLayout>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="6dp"
                                    android:layout_marginBottom="4dp"
                                    android:text="Name on Card" />

                                <EditText
                                    android:id="@+id/et_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="10dp"
                                    android:background="@drawable/white_button_grayborder"
                                    android:hint="John Doe"
                                    android:padding="10dp" />

                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <Button
                            android:id="@+id/btn_addMoney_card"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_alignParentRight="true"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="30dp"
                            android:background="@drawable/blue_green_round_btn"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:text="Proceed"
                            android:textColor="#fff"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/radioLayout2"
                        android:layout_below="@id/radioLayout1"
                        android:layout_alignParentLeft="true"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:padding="10dp"
                        android:gravity="center"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/white_button_grayborder"
                        android:layout_marginRight="10dp"
                        android:visibility="gone">



                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="Net Banking"
                            android:fontFamily="@font/roboto_regular"
                            android:layout_centerVertical="true"
                            android:textSize="18dp"
                            android:layout_marginLeft="0dp"
                            android:textColor="@color/colorPrimaryDark" />
                    </RelativeLayout>


                    <Button
                        android:visibility="gone"
                        android:id="@+id/btn_proceed_netBanking"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="30dp"
                        android:paddingRight="20dp"
                        android:paddingLeft="20dp"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/rounded_buttons"
                        android:text="Proceed via Net Banking"
                        android:textColor="#fff"
                        android:textSize="16sp" />



                    <RelativeLayout
                        android:id="@+id/radioLayout3"
                        android:layout_below="@id/radioLayout2"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:padding="10dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:background="@drawable/white_button_grayborder"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:visibility="gone">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="UPI"
                            android:fontFamily="@font/roboto_regular"
                            android:layout_centerVertical="true"
                            android:textSize="18dp"
                            android:layout_marginLeft="0dp"
                            android:textColor="@color/colorPrimaryDark" />
                    </RelativeLayout>

                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/upi_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:layout_marginTop="0dp"
                        android:padding="10dp"
                        android:orientation="vertical">
                        <androidx.cardview.widget.CardView
                            android:orientation="vertical"
                            android:layout_margin="0dp"
                            android:elevation="4dp"
                            android:background="@color/white"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <EditText
                                    android:paddingLeft="10dp"
                                    android:id="@+id/et_upi"
                                    android:layout_marginTop="20dp"
                                    android:layout_marginLeft="0dp"
                                    android:layout_marginRight="0dp"
                                    android:hint="Enter Upi"
                                    android:padding="10dp"
                                    android:background="@drawable/white_button_grayborder"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />


                                <Button
                                    android:id="@+id/btn_pay_upi"
                                    android:layout_width="wrap_content"
                                    android:layout_height="40dp"
                                    android:layout_marginTop="30dp"
                                    android:layout_marginLeft="0dp"
                                    android:layout_marginRight="0dp"
                                    android:layout_gravity="center"
                                    android:paddingLeft="20dp"
                                    android:paddingRight="20dp"
                                    android:background="@drawable/rounded_buttons"
                                    android:text="Proceed via UPI"
                                    android:textColor="#fff"
                                    android:textSize="16sp" />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/radioLayout4"
                        android:layout_below="@id/radioLayout3"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:padding="5dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginBottom="30dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/white_button_grayborder"
                        android:layout_marginRight="10dp">

                        <ImageView
                            android:id="@+id/im_wallet"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_wallet_history"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="Wallet"
                            android:fontFamily="@font/roboto_regular"
                            android:layout_centerVertical="true"
                            android:textSize="18dp"
                            android:layout_marginLeft="10dp"
                            android:textColor="@color/bue_A800"
                            android:layout_toRightOf="@id/im_wallet"

                            />
                    </RelativeLayout>


                    <Button
                        android:visibility="gone"
                        android:id="@+id/btn_proceed_wallet"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="30dp"
                        android:layout_gravity="center"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/blue_green_round_btn"
                        android:text="Proceed via Wallet"
                        android:textColor="#fff"
                        android:paddingLeft="40dp"
                        android:paddingRight="40dp"
                        android:textSize="16sp" />



                    <TextView
                        android:visibility="gone"
                        android:id="@+id/payfromwalletOption"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:textSize="13sp"
                        android:textColor="@color/red"
                        android:layout_marginVertical="10dp"
                        android:text="Pay from wallet option is available for active members only."/>



                </LinearLayout>



                <Button
                    android:id="@+id/btn_card"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/btn_color"
                    android:text="From Card"
                    android:textColor="#fff"
                    android:textSize="18sp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/btn_netBanking"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/btn_color"
                    android:text="From Net Banking"
                    android:textColor="#fff"
                    android:textSize="18sp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/btn_upi"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/btn_color"
                    android:text="From UPI"
                    android:textColor="#fff"
                    android:textSize="18sp"
                    android:visibility="gone" />
            </LinearLayout>


            <LinearLayout
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_gravity="bottom"
                android:orientation="horizontal"
                android:id="@+id/securebtn">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:src="@drawable/norton" />
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:contentDescription="Verified By Visa"
                    android:src="@drawable/verified_by_visa" />



                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:contentDescription="MasterCard Secure"
                    android:src="@drawable/master_card_securecode" />



            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/button_background_gradient_diagonal"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:id="@+id/li_toolbar"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/upper_layout"
        android:orientation="horizontal"
        android:layout_below="@+id/head">


        <LinearLayout
            android:layout_height="100dp"
            android:layout_width="match_parent"
            android:id="@+id/pay_layout"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_margin="5dp">


            <androidx.cardview.widget.CardView
                android:layout_height="46dp"
                android:layout_width="46dp"
                android:layout_margin="5dp"
                app:cardElevation="1dp"
                app:cardCornerRadius="23dp">

                <ImageView
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:id="@+id/image_restaurant"
                    android:layout_margin="1dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_pay_red"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:fontFamily="@font/roboto_regular"
                android:textSize="12sp"
                android:text="Pay"
                android:layout_marginTop="4dp"
                android:layout_gravity="center_horizontal"/>

        </LinearLayout>


        <LinearLayout
            android:layout_height="100dp"
            android:layout_width="match_parent"
            android:id="@+id/upi_layout1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_margin="5dp">


            <androidx.cardview.widget.CardView
                android:layout_height="46dp"
                android:layout_width="46dp"
                android:layout_margin="5dp"
                app:cardElevation="1dp"
                app:cardCornerRadius="23dp">

                <ImageView
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:layout_margin="1dp"
                    android:padding="8dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_upi"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:fontFamily="@font/roboto_regular"
                android:textSize="12sp"
                android:text="UPI"
                android:layout_marginTop="4dp"
                android:layout_gravity="center_horizontal"/>

        </LinearLayout>
        <LinearLayout
            android:layout_height="100dp"
            android:layout_width="match_parent"
            android:id="@+id/send"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_margin="5dp">


            <androidx.cardview.widget.CardView
                android:layout_height="46dp"
                android:layout_width="46dp"
                android:layout_margin="5dp"
                app:cardElevation="1dp"
                app:cardCornerRadius="23dp">

                <ImageView
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:layout_margin="1dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_send_to_bank_red"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:fontFamily="@font/roboto_regular"
                android:textSize="12sp"
                android:text="Send to Bank"
                android:layout_marginTop="4dp"/>

        </LinearLayout>


        <LinearLayout
            android:layout_height="100dp"
            android:layout_width="match_parent"
            android:id="@+id/wallet_layout"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_margin="5dp">


            <androidx.cardview.widget.CardView
                android:layout_height="46dp"
                android:layout_width="46dp"
                android:layout_margin="5dp"
                app:cardElevation="1dp"
                app:cardCornerRadius="23dp">

                <ImageView
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:layout_margin="1dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_wallet_red"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:fontFamily="@font/roboto_regular"
                android:textSize="12sp"
                android:text="Wallet"
                android:layout_marginTop="4dp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/electricityBillLayout"
    android:background="#f4f5ff">

    <RelativeLayout
        android:id="@+id/headerbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/red_theme"
        android:paddingBottom="5dp">

        <Button
            android:id="@+id/electricty_back_btn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ic_next_new" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:text="Electricity"
            android:fontFamily="@font/roboto_bold"
            android:textColor="#fff"
            android:textSize="18sp" />

    </RelativeLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/headerbar">
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="com.xwallet.wallet.Fragments.PostpaidRechrge">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/red_theme"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    app:cardCornerRadius="5dp"
                    android:elevation="5dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="-30dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="3dp"
                        android:padding="5dp"
                        android:gravity="center">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_margin="10dp">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="start|center"
                                android:padding="10dp">
                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_marginLeft="5dp"
                                    android:src="@drawable/ic_user_new"/>

                                <EditText
                                    android:id="@+id/mobile"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/textView2"
                                    android:layout_gravity="center"
                                    android:background="@null"
                                    android:hint="Customer ID"
                                    android:inputType="number"
                                    android:nextFocusForward="@+id/amount"
                                    android:padding="10dp"
                                    android:textColor="@color/textcolor"
                                    android:fontFamily="@font/roboto_medium"
                                    android:textSize="15sp" />
                            </LinearLayout>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height=".5dp"
                                android:background="@color/graynew"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="start|center"
                                android:padding="10dp">
                                <FrameLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp">
                                    <LinearLayout
                                        android:id="@+id/layout_select_mobile_operator"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="center"
                                        android:orientation="horizontal">
                                        <ImageView
                                            android:layout_width="20dp"
                                            android:layout_height="20dp"
                                            android:layout_marginLeft="5dp"
                                            android:src="@drawable/ic_idea_new" />
                                        <TextView
                                            android:id="@+id/tv_select_mobile_operator"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:text="Select Operator"
                                            android:padding="10dp"
                                            android:textColor="@color/textcolor"
                                            android:textSize="15sp"
                                            android:fontFamily="@font/roboto_regular"
                                            android:layout_marginLeft="5dp"
                                            android:layout_weight="1"/>
                                        <ImageView
                                            android:layout_width="30dp"
                                            android:layout_height="30dp"
                                            android:padding="10dp"
                                            android:src="@drawable/ic_down_security"
                                            android:layout_marginRight="10dp"/>
                                    </LinearLayout>

                                    <Spinner
                                        android:id="@+id/operator"
                                        android:layout_width="match_parent"
                                        android:layout_height="40dp"
                                        android:layout_below="@+id/textView5"
                                        android:nextFocusForward="@+id/textView"
                                        android:backgroundTint="@color/red_theme"
                                        android:layout_marginLeft="5dp"
                                        android:visibility="gone"/>
                                </FrameLayout>
                            </LinearLayout>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height=".5dp"
                                android:background="@color/graynew"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="start|center"
                                android:padding="10dp">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/ic_new_rupee" />
                                <EditText
                                    android:id="@+id/amount"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/textView2"
                                    android:inputType="numberDecimal"
                                    android:hint="Amount"
                                    android:layout_gravity="center"
                                    android:background="@null"
                                    android:nextFocusForward="@+id/amount"
                                    android:padding="10dp"
                                    android:textColor="@color/textcolor"
                                    android:fontFamily="@font/roboto_medium"
                                    android:textSize="15sp"
                                    android:maxLength="5"/>

                            </LinearLayout>
                        </LinearLayout>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/govCharge_electricity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="15dp"
                    android:text="Government Charge"
                    android:textColor="@color/grey_500"
                    android:textSize="13dp"
                    android:fontFamily="@font/roboto_bold"
                    android:visibility="visible" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="5dp"
                    android:visibility="gone">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@color/white">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Recharge Amount"
                                android:textSize="13sp"
                                android:textColor="@color/black"
                                android:padding="10dp"
                                android:fontFamily="@font/roboto_bold"
                                android:layout_weight="1"/>
                            <TextView
                                android:id="@+id/tv_rechargeamount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="10"
                                android:textSize="13sp"
                                android:textColor="@color/black"
                                android:padding="10dp"
                                android:fontFamily="@font/roboto_regular"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Wallet Cashback"
                                android:textSize="13sp"
                                android:textColor="@color/black"
                                android:padding="10dp"
                                android:fontFamily="@font/roboto_bold"
                                android:layout_weight="1"/>
                            <TextView
                                android:id="@+id/tv_walletcashback"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="10"
                                android:textSize="13sp"
                                android:textColor="@color/black"
                                android:padding="10dp"
                                android:fontFamily="@font/roboto_regular"/>
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height=".5dp"
                            android:background="@color/divider"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Total Amount"
                                android:textSize="13sp"
                                android:textColor="@color/black"
                                android:padding="10dp"
                                android:fontFamily="@font/roboto_bold"
                                android:layout_weight="1"/>
                            <TextView
                                android:id="@+id/tv_total_amountpay"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="10"
                                android:textSize="13sp"
                                android:textColor="@color/black"
                                android:padding="10dp"
                                android:fontFamily="@font/roboto_regular"/>
                        </LinearLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/serviceChargeLayout_postpaid"
                    android:visibility="gone">

                    <include layout="@layout/service_charge_layout" />
                </RelativeLayout>

                <Button
                    android:id="@+id/electrictyPaybtn"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/amount"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/blue_green_round_btn"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Pay Bill"
                    android:textAllCaps="false"
                    android:textColor="#fff"
                    android:textSize="15sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/orderPreviousText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="Previous Orders: "
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@color/grey_700"
                        android:textSize="14sp"
                        android:layout_marginTop="10dp"
                        android:layout_alignParentLeft="true"/>

                    <TextView
                        android:id="@+id/orderViewAllText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text="View All"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@color/grey_700"
                        android:textSize="14sp"
                        android:layout_marginTop="10dp"
                        android:layout_alignParentRight="true"/>
                    <TextView
                        android:id="@+id/orderViewLessText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text="View Less"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@color/grey_700"
                        android:textSize="14sp"
                        android:layout_marginTop="10dp"
                        android:layout_alignParentRight="true"
                        android:visibility="gone"/>
                </RelativeLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/listElectricity_rechargeHistory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp" />


            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>


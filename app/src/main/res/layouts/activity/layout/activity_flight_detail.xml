<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f8f8"
    tools:context=".activity.booking.flight.FlightDetailActivity">
    <RelativeLayout
        android:id="@+id/headerbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/red_theme"
        android:paddingBottom="5dp">

        <Button
            android:id="@+id/backbtn_flight_list"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ic_arrow_back_white_24dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="45dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="start|center">
                <TextView
                    android:id="@+id/tvflightdetails_from_where"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/roboto_bold"
                    android:hint=""
                    android:textColor="@color/white"
                    android:textSize="18sp" />
                <ImageView
                    android:id="@+id/image_one_way"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_one_way_white"
                    android:padding="11dp"
                    />

                <TextView
                    android:id="@+id/tvflightdetails_to_where"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/roboto_bold"
                    android:hint=""
                    android:textColor="@color/white"
                    android:textSize="18sp" />
            </LinearLayout>
            <TextView

                android:id="@+id/tv_flightdetails_date_travellers_class"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6 Nov, 1 Adult, Economy"
                android:gravity="center"
                android:fontFamily="@font/roboto_regular"
                android:textColor="#fff"
                android:textSize="10sp" />
        </LinearLayout>
    </RelativeLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/headerbar"
        android:layout_marginBottom="60dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
          <androidx.cardview.widget.CardView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_margin="5dp">
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:padding="5dp"
                 >

                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:gravity="start|center">
                      <ImageView
                          android:id="@+id/image_flight_detail"
                          android:layout_width="40dp"
                          android:layout_height="40dp"
                          android:src="@drawable/ic_airplane"
                          android:padding="5dp"/>
                      <TextView
                          android:id="@+id/tv_flightdetail_name"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:hint="Indigo"
                          android:textSize="16sp"
                          android:textColor="@color/black"
                          android:fontFamily="@font/roboto_regular"
                          android:layout_marginLeft="10dp"/>

                  </LinearLayout>
                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">

                      <LinearLayout
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:gravity="center"
                          android:layout_marginRight="10dp"
                          android:layout_marginLeft="10dp">

                          <TextView
                              android:id="@+id/tv_flight_detail_dep_time"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text=""
                              android:textSize="18sp"
                              android:textColor="@color/black"
                              android:fontFamily="@font/roboto_bold"
                              android:layout_weight="1"/>


                          <LinearLayout
                              android:layout_width="50dp"
                              android:layout_height="wrap_content"
                              android:orientation="vertical"
                              android:layout_weight="1"
                              android:layout_gravity="center"
                              android:gravity="center"
                              android:layout_marginLeft="70dp"
                              android:layout_marginRight="70dp">
                              <TextView
                                  android:id="@+id/tv_flight_detail_duration"
                                  android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:gravity="center"
                                  android:textSize="12sp"
                                  android:layout_gravity="center"
                                  android:fontFamily="@font/roboto_regular"/>
                              <View
                                  android:layout_width="wrap_content"
                                  android:layout_height="1dp"
                                  android:background="@color/darker_gray"
                                />
                              <ImageView
                                  android:layout_width="40dp"
                                  android:layout_height="15dp"
                                  android:layout_marginLeft="-25dp"
                                  android:src="@drawable/ic_next"
                                  android:visibility="gone"/>
                          </LinearLayout>

                          <TextView
                              android:id="@+id/tv_flight_detail_arrival_time"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text=""
                              android:textSize="18sp"
                              android:textColor="@color/black"
                              android:fontFamily="@font/roboto_bold"
                              android:layout_marginLeft="10dp"
                              android:gravity="right"
                              android:layout_weight="1" />
                      </LinearLayout>
                      <LinearLayout
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:layout_marginBottom="5dp">
                          <LinearLayout
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:orientation="vertical"
                              android:layout_weight="1">
                              <TextView
                                  android:id="@+id/tv_flight_detail_source_name"
                                  android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:hint="Delhi"
                                  android:textSize="16sp"
                                  android:textColor="@color/black"
                                  android:fontFamily="@font/roboto_regular"
                                  android:layout_marginLeft="10dp"/>
                              <TextView
                                  android:id="@+id/tv_flight_detail_dep_date"
                                  android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:hint="Fri, 15 Nov 19"
                                  android:textSize="12sp"
                                  android:textColor="@color/black"
                                  android:fontFamily="@font/roboto_regular"
                                  android:layout_marginLeft="10dp"/>

                              <TextView
                                  android:id="@+id/tv_flight_detail_source_airpot"
                                  android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:layout_marginLeft="10dp"
                                  android:fontFamily="@font/roboto_regular"
                                  android:hint="Airport"
                                  android:textColor="@color/darker_gray"
                                  android:textSize="12sp"
                                  android:layout_marginTop="5dp"/>

                          </LinearLayout>
                          <LinearLayout
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:orientation="vertical"
                              android:layout_weight="1"
                              android:gravity="right"
                              android:layout_marginRight="10dp">
                              <TextView
                                  android:id="@+id/tv_flight_detail_desti_name"
                                  android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:hint="Goa"
                                  android:textSize="16sp"
                                  android:textColor="@color/black"
                                  android:fontFamily="@font/roboto_regular"
                              />
                              <TextView
                                  android:id="@+id/tv_flight_detail_desti_date"
                                  android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:hint="Fri, 15 Nov 19"
                                  android:textSize="12sp"
                                  android:textColor="@color/black"
                                  android:fontFamily="@font/roboto_regular" />
                              <TextView
                                  android:id="@+id/tv_flight_detail_destin_airport"
                                  android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:hint="Airport"
                                  android:textSize="12sp"
                                  android:textColor="@color/darker_gray"
                                  android:fontFamily="@font/roboto_regular"
                                  android:layout_marginTop="5dp"/>

                          </LinearLayout>
                      </LinearLayout>
                  </LinearLayout>
              </LinearLayout>
          </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
              >


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Baggage Allowance"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/roboto_regular"
                        android:layout_margin="10dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="20dp"
                    android:gravity="start|center">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:padding="5dp"
                        android:src="@drawable/ic_hand_bag"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hand Baggage - "
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/roboto_regular"
                        android:layout_marginLeft="5dp"/>
                    <TextView
                        android:id="@+id/tv_flight_hand_baggage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" "
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/roboto_regular"
                        android:layout_marginLeft="5dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="20dp"
                    android:gravity="start|center"
                    >
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_checkinbag"
                        android:padding="5dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Check-in Baggage - "
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/roboto_regular"
                        android:layout_marginLeft="5dp" />
                    <TextView
                        android:id="@+id/tv_flight_checkin_baggage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" "
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/roboto_regular"
                        android:layout_marginLeft="5dp"/>
                </LinearLayout>
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="5dp"
                    android:background="#f7f8f8"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fare Rules"
                    android:textSize="18sp"
                    android:textColor="@color/grey_600"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_marginLeft="10dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cacellation &amp; Date change charges"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_marginLeft="10dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight=".4">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="start|center"
                            android:layout_marginTop="10dp"
                            >
                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:padding="5dp"
                                android:src="@drawable/ic_rupee_refund"
                                android:layout_marginLeft="20dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Partially Refundable Fare"
                                android:textSize="15sp"
                                android:textColor="@color/black"
                                android:fontFamily="@font/roboto_regular"
                                android:layout_marginLeft="5dp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="start|center"
                            android:layout_marginTop="-10dp"
                            >
                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:padding="5dp"
                                android:layout_marginLeft="20dp"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="5dp">
                                <TextView
                                    android:id="@+id/tvflight_refund_amount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/refund_flight"
                                    android:textSize="12sp"
                                    android:textColor="@color/grey_600"
                                    android:fontFamily="@font/roboto_regular" />

                                <TextView
                                    android:id="@+id/tvflight_fare_rules"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="VIEW FARE RULES"
                                    android:textSize="12sp"
                                    android:textColor="@color/red_theme"
                                    android:fontFamily="@font/roboto_regular"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="10dp"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:gravity="center">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2,037"
                            android:textSize="15sp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/roboto_regular" />
                        <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Approx refund"
                        android:textSize="12sp"
                        android:textColor="@color/grey_600"
                        android:fontFamily="@font/roboto_regular" />
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@color/divider"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight=".4">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="start|center"
                android:layout_marginTop="10dp"
                >
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:buttonTint="@color/grey_500"
                    android:textColor="@color/yellow"
                    android:textSize="15sp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Enjoy ZERO Canellation @749 only!"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="start|center"
                android:layout_marginTop="-10dp"
                >
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:padding="5dp"
                    android:layout_marginLeft="20dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/zero_cancel"
                        android:textSize="12sp"
                        android:textColor="@color/grey_600"
                        android:fontFamily="@font/roboto_regular" />
                    <TextView
                        android:id="@+id/tvflight_fare_beni"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="VIEW MORE"
                        android:textSize="12sp"
                        android:textColor="@color/red_theme"
                        android:fontFamily="@font/roboto_regular"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2,037"
                    android:textSize="15sp"
                    android:textColor="@color/yellow"
                    android:fontFamily="@font/roboto_regular" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Approx refund"
                    android:textSize="12sp"
                    android:textColor="@color/yellow"
                    android:fontFamily="@font/roboto_regular" />
            </LinearLayout>
        </LinearLayout>
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="5dp"
                    android:background="#f7f8f8"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OFFERS"
                    android:textSize="18sp"
                    android:textColor="@color/grey_600"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_marginLeft="10dp" />
                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SAFEBCD25"
                        android:textSize="15sp"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@color/black"
                        android:buttonTint="@color/grey_500"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Use prmocode SAFEBCD25 on flight ticket booking to get flat"
                            android:textSize="12sp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/roboto_regular"
                            android:layout_marginLeft="10dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="20dp"
                        >
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SAFENEW50"
                            android:textSize="15sp"
                            android:fontFamily="@font/roboto_regular"
                            android:textColor="@color/black"
                            android:buttonTint="@color/grey_500"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Use get 10% cshback upto 30000 on Flight Ticket Booking"
                            android:textSize="12sp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/roboto_regular"
                            android:layout_marginLeft="10dp"
                            android:layout_marginBottom="20dp" />


                    </LinearLayout>
                </RadioGroup>

            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="@color/yellow">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="start|center"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            >

            <TextView
                android:id="@+id/total_flight_fare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/black"
                android:textSize="20sp"
                android:fontFamily="@font/roboto_bold" />

            <TextView
                android:id="@+id/tv_total_travellers_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/black"
                android:textSize="12sp"
                android:fontFamily="@font/roboto_bold" />
        </LinearLayout>


        <Button
            android:id="@+id/continue_btn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/amount"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/rounded_buttons"
            android:padding="10dp"
            android:text="CONTINUE"
            android:textColor="#fff"
            android:textSize="15sp"
            android:fontFamily="@font/roboto_regular"
            android:layout_weight="1"/>
    </LinearLayout>

</RelativeLayout>
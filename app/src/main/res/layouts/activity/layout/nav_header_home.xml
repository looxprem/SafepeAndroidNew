<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/nav_header"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="#f7f8f8"
    android:gravity="bottom"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/header_logo"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:layout_gravity="left"
        android:layout_marginLeft="0dp"
        android:src="@drawable/safelogo_transparent"/>


    <TextView
        style="@style/TextAppearance.AppCompat.Headline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/roboto_regular"
        android:gravity="center"
        android:text="@string/splash_tag_2"
        android:textColor="@color/red_theme"
        android:textSize="12sp"
        android:layout_marginLeft="0dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginLeft="60dp"
        android:textSize="12sp"
        android:fontFamily="@font/roboto_regular"
        android:text="@string/splash_tag_3"
        android:textColor="@color/red_theme"
        style="@style/TextAppearance.AppCompat.Medium" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="20dp"
        android:background="@color/yellow_theme"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/red_theme"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:visibility="gone"
        >

        <ImageView
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_gravity="left|center"
            android:src="@drawable/safepe_logo_transparent"/>

        <TextView
            style="@style/TextAppearance.AppCompat.Headline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/roboto_regular"
            android:gravity="center"
            android:text="@string/india"
            android:textColor="@color/red_theme"
            android:textSize="16sp"
            android:layout_marginRight="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="16sp"
            android:fontFamily="@font/roboto_regular"
            android:text="@string/pvt_ltd"
            android:textColor="@color/yellow_theme"
            style="@style/TextAppearance.AppCompat.Medium" />
    </LinearLayout>





</LinearLayout>

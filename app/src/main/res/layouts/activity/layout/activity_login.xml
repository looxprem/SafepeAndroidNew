<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout.mainLayout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/toolbar_transparent"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:orientation="vertical"
            android:layout_marginTop="50dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/logo_big"
                    android:adjustViewBounds="true" />

                <com.safepayu.wallet.custom_view.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    style="@style/TextAppearance.AppCompat.Headline"
                    app:fontCustom="@string/Roboto"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="@color/bue_A800"
                    android:fontFamily="@font/roboto_bold"
                    android:text="@string/login" />

            </LinearLayout>

            <com.safepayu.wallet.custom_view.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                style="@style/TextAppearance.AppCompat.Large"
                app:fontCustom="@string/Roboto"
                android:textStyle="normal"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/login_text_hint" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    android:inputType="number"
                    android:text="+91 "
                    style="@style/defaultEditTextStyle"
                    android:layout_marginTop="51dp"
                    android:fontFamily="@font/roboto_regular"
                    android:enabled="false"
                    android:focusable="false"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="-14dp"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/et.mobileNo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="24sp"
                        style="@style/defaultEditTextStyle"
                        android:inputType="number"
                        android:maxLength="14"
                        android:hint="@string/enter_mobile"
                        android:fontFamily="@font/roboto_regular"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/et.password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="24sp"
                        style="@style/defaultEditTextStyle"
                        android:inputType="textPassword"
                        android:hint="@string/enter_password"
                        android:fontFamily="@font/roboto_regular"/>
                </com.google.android.material.textfield.TextInputLayout>

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/show_password48"
                    android:id="@+id/show_hide_password"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="30dp"/>
            </RelativeLayout>

            <CheckBox
                android:id="@+id/cb_rememberMe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/light_blue_500"
                android:buttonTint="@color/light_blue_500"
                android:checked="false"
                android:text="Remember Me"
                android:textSize="15sp"
                android:textColor="@color/light_blue_500"
                android:layout_marginTop="5dp"
                android:visibility="gone"/>

            <Button
                android:id="@+id/btn.login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/login"
                android:textSize="18sp"
                android:fontFamily="@font/roboto_regular"
                android:layout_marginTop="20dp"
                android:background="@drawable/rounded_buttons"
                style="@style/buttonDefault" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider" />

        <LinearLayout
            android:id="@+id/btn.forgetPass"
            android:layout_width="match_parent"
            android:foreground="?attr/selectableItemBackground"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.safepayu.wallet.custom_view.CustomTextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:padding="20dp"
                style="@style/TextAppearance.AppCompat.Small"
                app:fontCustom="@string/Roboto"
                android:textStyle="normal"
                android:textSize="15sp"
                android:textColor="@color/bue_A800"
                android:text="@string/forgot_password" />

            <ImageView
                android:layout_width="24dp"
                android:padding="5dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_right_arrow"
                android:layout_marginRight="10dp"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider" />

        <LinearLayout
            android:id="@+id/btn.newAccount"
            android:foreground="?attr/selectableItemBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.safepayu.wallet.custom_view.CustomTextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.AppCompat.Small"
                app:fontCustom="@string/Roboto"
                android:padding="20dp"
                android:textStyle="normal"
                android:textSize="15sp"
                android:textColor="@color/bue_A800"
                android:text="@string/create_new_account" />

            <ImageView
                android:layout_width="24dp"
                android:padding="5dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_right_arrow"
                android:layout_marginRight="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/green_theme"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/blue_theme"/>
        </LinearLayout>

    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
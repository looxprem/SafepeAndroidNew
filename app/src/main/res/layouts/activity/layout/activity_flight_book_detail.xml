<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f8f8"
    android:id="@+id/flight_book_detail"
    tools:context=".activity.booking.flight.FlightBookDetailActivity">
    <RelativeLayout
        android:id="@+id/headerbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/red_theme"
        android:paddingBottom="5dp">

        <Button
            android:id="@+id/recharge_back_btn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/ic_arrow_back_white_24dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:text="Flights"
            android:fontFamily="@font/roboto_bold"
            android:textColor="#fff"
            android:textSize="18sp" />
    </RelativeLayout>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_below="@id/headerbar"
        android:background="#f7f8f8">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="20dp">
            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/statusImage"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/success"
                android:layout_gravity="center"
                android:layout_marginTop="0dp" />
            <TextView
                android:id="@+id/tv_booking_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Booking Successful"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:gravity="center"
                android:padding="5dp"
                android:fontFamily="@font/roboto_regular"/>
            <TextView
                android:id="@+id/tv_safe_journey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Have a safe journey!"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:gravity="center"
                android:padding="5dp"
                android:fontFamily="@font/roboto_bold"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ORDER ID - "
                    android:textSize="15sp"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/tv_flight_refrence_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular"
                    android:text="26345678"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
            </LinearLayout>
            <TextView
                android:id="@+id/tv_flight_time_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="January 01 2020 06:53 am"
                android:textSize="15sp"
                android:gravity="center"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/blue_grey_400"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_flight_source_destination"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delhi - Mumbai"
                    android:textSize="20sp"
                    android:gravity="start"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="@color/black"
                    android:layout_marginLeft="10dp"
                    android:padding="10dp"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/tv_flight_eticket_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="20sp"
                    android:gravity="start"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="@color/black"
                    android:layout_marginRight="10dp"
                    android:padding="10dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp">
                <LinearLayout
                    android:id="@+id/li_flight_name"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical"
                    android:background="@drawable/deactive_rounded_buttons"
                    android:gravity="center">
                    <ImageView
                        android:id="@+id/im_flight_logo"
                        android:layout_width="40dp"
                        android:layout_height="40dp"/>
                    <TextView
                        android:id="@+id/tv_flight_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:fontFamily="@font/roboto_regular"
                        android:layout_marginTop="10dp"/>
                    <TextView
                        android:id="@+id/tv_flight_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:fontFamily="@font/roboto_regular"
                        android:layout_marginTop="5dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/deactive_rounded_buttons"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_ticket_time_date_traveller"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="01 Jan, Wed | 3 Travellers"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:fontFamily="@font/roboto_regular"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp">
                        <TextView
                            android:id="@+id/tv_ticket_source"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="DEL"
                            android:textColor="@color/black"
                            android:textSize="22sp"
                            android:fontFamily="@font/roboto_regular"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"/>
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_clock"
                            android:layout_gravity="center"
                            android:padding="10dp"
                            android:layout_weight="1"/>
                        <TextView
                            android:id="@+id/tv_ticket_destination"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="BOM"
                            android:textColor="@color/black"
                            android:textSize="22sp"
                            android:gravity="right"
                            android:fontFamily="@font/roboto_regular"
                            android:layout_weight="1"
                            android:layout_marginRight="10dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center">
                        <TextView
                            android:id="@+id/tv_ticket_source_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="15:40"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:fontFamily="@font/roboto_regular"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"/>
                        <TextView
                            android:id="@+id/tv_ticket_total_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="02h 05m"
                            android:textColor="@color/darker_gray"
                            android:textSize="15sp"
                            android:gravity="center"
                            android:fontFamily="@font/roboto_regular"
                            android:layout_weight="1"
                            android:layout_marginRight="10dp"/>
                        <TextView
                            android:id="@+id/tv_ticket_destination_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="17:45"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:gravity="right"
                            android:fontFamily="@font/roboto_regular"
                            android:layout_weight="1"
                            android:layout_marginRight="10dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:layout_margin="10dp">
                        <TextView
                            android:id="@+id/tv_ticket_source_airportname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Delhi , Indria Gandhi Internation Airport"
                            android:textColor="@color/darker_gray"
                            android:textSize="14sp"
                            android:fontFamily="@font/roboto_regular"
                            android:layout_weight="1"
                            android:layout_marginRight="5dp"/>
                        <TextView
                            android:id="@+id/tv_ticket_detination_airportname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mumbai , Chhtrapati Shivaji Internation Airport"
                            android:textColor="@color/darker_gray"
                            android:textSize="14sp"
                            android:gravity="right"
                            android:fontFamily="@font/roboto_regular"
                            android:layout_weight="1"
                            android:layout_marginLeft="5dp"/>
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>
            <TextView
                android:id="@+id/tv_flight_traveller_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Traveller Details"
                android:textSize="20sp"
                android:gravity="start"
                android:fontFamily="@font/roboto_bold"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                android:padding="10dp"
            />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/list_traveller_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:id="@+id/tv_flight_cancel_ticket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel Ticket"
                android:textSize="20sp"
                android:gravity="start"
                android:fontFamily="@font/roboto_bold"
                android:textColor="@color/yellow"
                android:layout_marginLeft="10dp"
                android:padding="10dp"
            />

        </LinearLayout>
    </LinearLayout>
    </ScrollView>
</RelativeLayout>


<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/headerbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/red_theme"
        android:paddingBottom="5dp">

        <Button
            android:id="@+id/recharge_back_btn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/ic_arrow_back_white_24dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:text="Contact Us"
            android:fontFamily="@font/roboto_bold"
            android:textColor="#fff"
            android:textSize="18sp" />
    </RelativeLayout>


    <ScrollView
        android:layout_below="@id/headerbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="4dp"
            app:cardCornerRadius="4dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:layout_margin="15dp"
                    android:visibility="gone">


                    <EditText
                        android:id="@+id/contactus_email"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="15dp"
                        android:padding="10dp"
                        android:textSize="15dp"
                        android:background="@drawable/login_input_bg"
                        android:hint="Email"
                        />
                    <EditText
                        android:id="@+id/contactus_subject"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:padding="10dp"
                        android:textSize="15dp"
                        android:background="@drawable/login_input_bg"
                        android:hint="Your Subject"
                        />
                    <EditText
                        android:id="@+id/contactus_message"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:padding="10dp"
                        android:inputType="textMultiLine"
                        android:textSize="15dp"
                        android:background="@drawable/login_input_bg"
                        android:hint="Message"
                        />
                    <Button
                        android:id="@+id/contactus_submit"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:text="Submit"
                        android:layout_gravity="center|right"
                        android:textColor="#fff"
                        android:background="@drawable/rounded_buttons"
                        />
                </LinearLayout>


                <TextView
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="About Us"
                    android:layout_gravity="center"
                    android:textSize="16dp"
                    android:visibility="gone"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:textColor="#000"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SafePe India Pvt. Ltd."
                    android:gravity="center"
                    android:textIsSelectable="true"
                    android:textSize="18sp"
                    android:fontFamily="@font/roboto_bold"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/red_theme" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/yellow"
                    android:layout_marginTop="10dp"/>



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="In case of any inconvenience regarding the transaction of money OR further query then you can contact us:"
                    android:layout_gravity="center"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:textSize="12sp"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/red_theme" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:text="Whatsapp and Call"
                    android:textSize="14sp"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:textIsSelectable="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="+91 8376097766, +91 9867967827"
                    android:textSize="16sp"
                    android:textColor="@color/yellow_theme"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:fontFamily="@font/roboto_regular"
                    android:textIsSelectable="true"
                    android:layout_marginTop="5dp"/>

                <TextView
                    android:id="@+id/tollfreeNoText"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:text="Tollfree Number"
                    android:textSize="14sp"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:textIsSelectable="true" />

                <TextView
                    android:id="@+id/tollfreeNo"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text=""
                    android:textSize="16sp"
                    android:textColor="@color/yellow_theme"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:fontFamily="@font/roboto_regular"
                    android:textIsSelectable="true"
                    android:layout_marginTop="5dp"/>

                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="+91 8860722217"
                        android:textSize="14dp"
                        android:textColor="#34ad38"
                        android:textIsSelectable="true"
                        android:background="@null"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/call_button_usa"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="-30dp"
                        android:text="+1 6808000842"
                        android:textSize="14dp"
                        android:textColor="#3454dc"
                        android:textIsSelectable="true"
                        android:paddingLeft="0dp"
                        android:background="@null"
                        android:textStyle="bold"
                        android:paddingRight="0dp"
                        android:layout_marginRight="0dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginBottom="0dp" />

                    <Button
                        android:id="@+id/call_button_india"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="-10dp"
                        android:layout_weight="1"
                        android:text="+91 8860722217"
                        android:textSize="14dp"
                        android:textColor="#34ad38"
                        android:textIsSelectable="true"
                        android:background="@null"
                        android:textStyle="bold"
                        android:layout_marginRight="0dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginBottom="0dp"
                        />
                </LinearLayout>

                <TextView
                    android:id="@+id/visit_website"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Visit Our Website"
                    android:layout_gravity="center"
                    android:textSize="16sp"
                    android:fontFamily="@font/roboto_bold"
                    android:gravity="center"
                    android:padding="10dp"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/red_theme" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="www.safepeindia.com"
                    android:textSize="16sp"
                    android:textColor="@color/yellow_theme"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:fontFamily="@font/roboto_regular"
                    android:textIsSelectable="true"
                    android:layout_marginTop="-10dp"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:paddingLeft="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Address:"
                        android:textSize="14sp"
                        android:fontFamily="@font/roboto_regular"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:textColor="@color/black"
                        />
                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="B-096, B Block, Sector 65, Noida, Uttar Pradesh 201301"
                        android:textSize="14sp"
                        android:fontFamily="@font/roboto_regular"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:textColor="@color/black"
                        android:layout_marginLeft="5dp"
                        />
            </LinearLayout>
                <TextView
                    android:id="@+id/sendmail"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Email ID: support@safepeindia.com"
                    android:layout_gravity="center"
                    android:textIsSelectable="true"
                    android:textSize="15sp"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/red_theme" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="© 2019 Safepe India Pvt. Ltd."
                        android:layout_gravity="center"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:fontFamily="@font/roboto_regular"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="All Rights Reserved"
                        android:textSize="12sp"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@color/black"
                        android:textIsSelectable="true"
                        android:paddingLeft="20dp"
                        android:gravity="center"
                        android:background="@null"
                        android:paddingRight="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        />
                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </ScrollView>

    <include layout="@layout/footer"
     />


</RelativeLayout>
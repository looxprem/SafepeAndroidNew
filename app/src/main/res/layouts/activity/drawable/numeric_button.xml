<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:color="@color/grey_200"
    tools:targetApi="lollipop"> <!-- ripple effect color -->
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <padding
                android:bottom="5dp" android:left="5dp"
                android:right="5dp" android:top="5dp" />
            <solid android:color="@color/number_color_pressed"/>
        </shape>

    </item>

    <item android:state_enabled="true">
        <shape android:shape="oval">
            <padding
                android:bottom="5dp" android:left="5dp"
                android:right="5dp" android:top="5dp" />
            <stroke android:color="@color/number_color_strike" android:width="1dp"/>
            <solid android:color="@android:color/transparent"/>
        </shape>
    </item>
</ripple>
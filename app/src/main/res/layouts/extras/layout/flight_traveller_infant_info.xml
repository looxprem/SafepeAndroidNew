<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_infant_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+ ADD INFANT 1"
        android:layout_marginLeft="20dp"
        android:textSize="15sp"
        android:textColor="@color/yellow_theme"
        android:padding="5dp"
        android:layout_marginBottom="10dp"/>
    <LinearLayout
        android:id="@+id/linear_infant_traveller_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        >
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mstr."
                android:textColor="@color/black"
                android:fontFamily="@font/roboto_regular"
                android:textSize="15sp"
                android:scaleX="0.8"
                android:scaleY="0.8"
                android:checked="true"
                android:layout_weight="1" />
        </RadioGroup>

        <EditText
            android:id="@+id/et_flightp_infant_fname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:hint="First Name"
            android:textSize="14sp"
            android:padding="10dp"
            android:singleLine="true"
            android:fontFamily="@font/roboto_regular"
            android:textColorHint="@color/grey"
            android:textColor="@color/black"
            android:background="@null"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider" />
        <EditText
            android:id="@+id/et_flightp_infant_lname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:hint="Last Name"
            android:textSize="14sp"
            android:padding="10dp"
            android:singleLine="true"
            android:fontFamily="@font/roboto_regular"
            android:textColorHint="@color/grey"
            android:textColor="@color/black"
            android:background="@null"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <EditText
                android:id="@+id/et_flightp_infant_dob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:hint="Date of birth"
                android:textSize="14sp"
                android:padding="10dp"
                android:focusable="false"
                android:singleLine="true"
                android:fontFamily="@font/roboto_regular"
                android:textColorHint="@color/grey"
                android:textColor="@color/black"
                android:background="@null"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/image_infant_dob"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="10dp"
                android:src="@drawable/ic_calendar"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider" />

    </LinearLayout>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_height="match_parent">

    <com.safepayu.wallet.custom_view.dot_loader.DotLoader
        android:id="@+id/text_dot_loader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:dot_radius="10dp"
        android:visibility="gone"
        app:color_array="@array/loader_dot_colors"
        app:number_of_dots="5" />

    <com.safepayu.wallet.custom_view.rotate_loading.RotateLoading
        android:id="@+id/rotateloading"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        app:loading_speed="11"
        app:loading_width="5dp" />

    <com.safepayu.wallet.custom_view.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.AppCompat.Medium"
        android:text="Please Wait..."
        android:id="@+id/tv.loadingMessage"
        app:fontCustom="@string/Roboto"
        android:textStyle="italic" />
</LinearLayout>
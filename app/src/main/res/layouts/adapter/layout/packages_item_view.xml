<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    android:id="@+id/packageItem"
    android:layout_margin="10dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:id="@+id/linear_buy_package"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <LinearLayout
            android:layout_height="50dp"
            android:layout_width="50dp"
            android:layout_margin="5dp"
            android:background="@drawable/blue_green_round_btn"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/icon_packageAdapter"
                android:layout_width="47dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:scaleType="fitXY"
                android:padding="10dp"
                android:src="@drawable/ic_wallet_white" />
        </LinearLayout>

        <TextView
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/red_theme"
            android:layout_width="match_parent"
            android:id="@+id/tv.packageName"
            android:gravity="center"
            android:padding="5dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:text="package Name"
            android:textSize="15sp"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/tv.packageAmount"
            android:layout_marginBottom="5dp"
            android:text=""
            android:fontFamily="@font/roboto_bold"
            android:textStyle="normal"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_gravity="center" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
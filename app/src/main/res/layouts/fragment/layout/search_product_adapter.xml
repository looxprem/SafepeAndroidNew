<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#f4f5ff"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="5dp"
                    android:layout_margin="5dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/white">
                    <ImageView
                        android:id="@+id/image_SearchProductAdapter"
                        android:layout_width="wrap_content"
                        android:layout_height="120dp"
                        android:scaleType="fitXY"
                        android:layout_gravity="center"
                        android:src="@drawable/girl_jeans"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@color/yellow_theme">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp">
                        <TextView
                            android:id="@+id/productPrice_SearchProductAdapter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="10dp"
                            android:fontFamily="@font/roboto_regular"
                            android:textColor="@color/white"
                            android:text="₹ 144.00"/>

                        <TextView
                            android:id="@+id/productOfferPrice_SearchProductAdapter"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14dp"
                            android:fontFamily="@font/roboto_regular"
                            android:textColor="@color/white"
                            android:text="₹ 57.6"
                            android:layout_marginLeft="5dp"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvProductName_SearchProductAdapter"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:fontFamily="@font/roboto_bold"
                        android:textColor="@color/white"
                        android:text="Mixer"
                        android:layout_marginLeft="10dp"
                        android:singleLine="true"
                        android:ellipsize="end"/>
                        <RatingBar
                            android:id="@+id/productRating_SearchProductAdapter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:rating="3"
                            android:scaleX=".8"
                            android:scaleY=".8"
                            android:layout_marginLeft="5dp"
                            style="@style/Widget.AppCompat.RatingBar.Small" />
                    <TextView
                        android:id="@+id/productDetail_SearchProductAdapter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:fontFamily="@font/roboto_bold"
                        android:textColor="@color/white"
                        android:text="Russell Hobbs RHM2076B 20L Digital 800w Solo Microwave Black"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:singleLine="true"
                        android:ellipsize="end"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_margin="10dp">
                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:src="@drawable/ic_store_ecom"/>
                        <TextView
                            android:id="@+id/productStoreName_SearchProductAdapter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:fontFamily="@font/roboto_bold"
                            android:textColor="@color/white"
                            android:text="From Store A  "
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:singleLine="true"
                            android:ellipsize="end"/>

                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:src="@drawable/ic_maps_and_flags_ecom" />
                        <TextView
                            android:id="@+id/productStoreDistance_SearchProductAdapter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:fontFamily="@font/roboto_bold"
                            android:textColor="@color/white"
                            android:text="1.5km"
                            android:layout_marginLeft="5dp" />
                    </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                </androidx.cardview.widget.CardView>
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right">
                <LinearLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:background="@drawable/ic_offer_bg_ecom_red">
                    <TextView
                        android:id="@+id/productOfferPercent_SearchProductAdapter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0%"
                        android:textSize="10sp"
                        android:fontFamily="@font/roboto_bold"
                        android:textColor="@color/white"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="off"
                        android:textSize="8sp"
                        android:layout_marginRight="2dp"
                        android:fontFamily="@font/roboto_bold"
                        android:textColor="@color/white"/></LinearLayout>
            </RelativeLayout>
    </FrameLayout>
</LinearLayout>





